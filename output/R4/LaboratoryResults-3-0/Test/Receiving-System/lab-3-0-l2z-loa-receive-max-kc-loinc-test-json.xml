   <fixture id="lr-loa-TEST-l2z-1Maximaal-bericht-aanvraag-3KCLOINC">
      <autocreate value="false"/>
      <autodelete value="false"/>
      <resource>
         <reference value="../_reference/resources-to-sendreceive/lr-loa-TEST-l2z-1Maximaal-bericht-aanvraag-3KCLOINC.xml"/>
      </resource>
   </fixture>
   <variable>
      <name value="patient-token-id"/>
      <defaultValue value="Bearer c2443cd0-c538-11f0-8118-020000000000"/>
      <description value="OAuth Token for current patient"/>
   </variable>
   <test id="scenario1-3-receive-diagnostic-report-on-request">
      <name value="Scenario 1.3"/>
      <description value="Receive DiagnosticReport on request"/>
      <action>
         <assert>
            <description value="Confirm that the request Bundle contains 1 DiagnosticReport resource(s). "/>
            <direction value="request"/>
            <expression value="Bundle.entry.where(resource.is(DiagnosticReport)).count() = 1"/>
            <stopTestOnFail value="false"/>
            <warningOnly value="false"/>
         </assert>
      </action>
      <action>
         <assert>
            <description value="Confirm that the request Bundle contains 1 Observation resource(s). "/>
            <direction value="request"/>
            <expression value="Bundle.entry.where(resource.is(Observation)).count() = 1"/>
            <stopTestOnFail value="false"/>
            <warningOnly value="false"/>
         </assert>
      </action>
      <action>
         <assert>
            <description value="Confirm that the request Bundle contains 1 ServiceRequest resource(s). "/>
            <direction value="request"/>
            <expression value="Bundle.entry.where(resource.is(ServiceRequest)).count() = 1"/>
            <stopTestOnFail value="false"/>
            <warningOnly value="false"/>
         </assert>
      </action>
      <action>
         <assert>
            <description value="Confirm that the request Bundle contains 1 Specimen resource(s). "/>
            <direction value="request"/>
            <expression value="Bundle.entry.where(resource.is(Specimen)).count() = 1"/>
            <stopTestOnFail value="false"/>
            <warningOnly value="false"/>
         </assert>
      </action>
      <action>
         <assert>
            <description value="Confirm that the request Bundle contains 1 Organization resource(s). "/>
            <direction value="request"/>
            <expression value="Bundle.entry.where(resource.is(Organization)).count() = 1"/>
            <stopTestOnFail value="false"/>
            <warningOnly value="false"/>
         </assert>
      </action>
      <action>
         <assert>
            <description value="Confirm that the request Bundle contains 1 Patient resource(s). "/>
            <direction value="request"/>
            <expression value="Bundle.entry.where(resource.is(Patient)).count() = 1"/>
            <stopTestOnFail value="false"/>
            <warningOnly value="false"/>
         </assert>
      </action>
      <action>
         <assert>
            <description value="Confirm that the Observation resource has a LOINC code for Glucose [mol/volume] in capillair bloed in the code element"/>
            <direction value="request"/>
            <!--FHIRPath expressions with .ofType(...) are poorly supported at the moment, so it was rewritten. Original expression: 'Bundle.entry.resource.ofType(Observation).code.coding.where(code = '51596-5').exists()'-->
            <expression value="Bundle.entry.resource.where($this is Observation).code.coding.where(code = '51596-5').exists()"/>
            <stopTestOnFail value="false"/>
            <warningOnly value="false"/>
         </assert>
      </action>
   </test>
</TestScript>
