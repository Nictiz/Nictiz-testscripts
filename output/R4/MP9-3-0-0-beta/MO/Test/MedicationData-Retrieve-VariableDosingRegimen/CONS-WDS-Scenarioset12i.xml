            <expression value="Bundle.entry.where(resource.is()).count() = 3"/>
            <stopTestOnFail value="false"/>
            <warningOnly value="false"/>
         </assert>
      </action>
      <action>
         <assert>
            <description value="Confirm that the returned searchset Bundle contains at least 4 entries. (Consists of 3  and 1 Medication resources.)"/>
