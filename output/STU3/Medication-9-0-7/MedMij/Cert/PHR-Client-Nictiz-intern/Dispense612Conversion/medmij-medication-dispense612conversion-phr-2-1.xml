<?xml version="1.0" encoding="UTF-8"?>
<TestScript xmlns="http://hl7.org/fhir" xmlns:nts="http://nictiz.nl/xsl/testscript">
   <id value="medmij-medication-dispense612conversion-phr-2-1-Nictiz-intern"/>
