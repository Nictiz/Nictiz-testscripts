                value="?patient.identifier=http://fhir.nl/fhir/NamingSystem/bsn|999901205&amp;category=http://snomed.info/sct|225419007&amp;_include=Flag:patient&amp;_revinclude=Provenance:target"/>
            <nts:with-parameter name="useToken" value="true"/>
        </nts:include>
        <nts:include value="assert.response.numResources" scope="common"
            resource="Flag" count="0"/>
        <nts:include value="assert.response.numResources" scope="common"
            resource="Patient" count="0"/>
        <nts:include value="assert.response.numResources" scope="common"
