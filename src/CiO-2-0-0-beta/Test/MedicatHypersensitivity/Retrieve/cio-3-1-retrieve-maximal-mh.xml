<TestScript xmlns="http://hl7.org/fhir" xmlns:nts="http://nictiz.nl/xsl/testscript" nts:scenario="client">
    <id value="cio-mh-retrieve-3-1"/>
    <version value="r4-cio-2.0.0-beta"/>
    <name value="CiO 2.0.0-beta - MedicationHypersensitivity - Retrieve - Scenario 3.1"/>
    <description value="Scenario 3.1 - Retrieve maximally entered medication hypersensitivities"/>
    <nts:authToken patientResourceId="patient-XXX-Hali"/>

    <test id="Scenario-3-1-a">
        <name value="Scenario 3.1.a"/>
        <description value="Retrieve maximally entered medication hypersensitivity Flags"/>
        <nts:include value="test.client.search" scope="common" nts:in-targets="#default">
            <nts:with-parameter name="description"
                value="Test client to retrieve maximal Flag resources representing CiO building block SurveillanceDecision"/>
            <nts:with-parameter name="resource" value="Flag"/>
            <nts:with-parameter name="params"
                value="?patient.identifier=http://fhir.nl/fhir/NamingSystem/bsn|999901217&amp;category=http://snomed.info/sct|225419007&amp;medication-hypersensitivity-identifier=urn:oid:2.16.840.1.113883.2.4.3.11.999.26.1.341|pat09-gmo-01&amp;_include=Flag:patient&amp;_revinclude=Provenance:target"/>
            <nts:with-parameter name="useToken" value="true"/>
        </nts:include>
        <nts:include value="canary-assert.response.successfulSearch" scope="common"/>
        <nts:include value="assert.response.numResources" scope="common"
            resource="Flag" count="1"/>
        <nts:include value="assert.response.numResources" scope="common"
            resource="Patient" count="1"/>
        <nts:include value="assert.response.numResources" scope="common"
            resource="Provenance" count="1"/>
    </test>
    <test id="Scenario-3-1-b">
        <name value="Scenario 3.1.b"/>
        <description value="Retrieve maximally entered medication hypersensitivity AllergyIntolerances"/>
