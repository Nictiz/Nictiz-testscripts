<TestScript xmlns="http://hl7.org/fhir" xmlns:nts="http://nictiz.nl/xsl/testscript" nts:scenario="server">
    <id value="cio-hsd-serve-0-2"/>
    <version value="r4-cio-2.0.0-beta"/>
    <name value="CiO 2.0.0-beta - HypersensitivityDisposition - Serve - Scenario 0.2"/>
    <description value="Scenario 0.2 - Serve multiple hypersensitivity dispositions"/>
    <nts:authToken patientResourceId="patient-van-XXX-Verbeek"/>
    
    <test id="Scenario-A-0-2">
        <name value="Scenario 0.2 (A)"/>
        <description value="Serve multiple hypersensitivity dispositions"/>
        <nts:include value="test.server.successfulSearch" scope="common" nts:in-targets="#default">
            <nts:with-parameter name="description"
                value="Test server to serve multiple AllergyIntolerance resources representing CiO building blocks HypersensitivityDisposition and Reaction"/>
            <nts:with-parameter name="resource" value="AllergyIntolerance"/>
            <nts:with-parameter name="params"
                value="?patient.identifier=http://fhir.nl/fhir/NamingSystem/bsn|999900110&amp;_include=AllergyIntolerance:patient"/>
            <nts:with-parameter name="useToken" value="true"/>
        </nts:include>
        <nts:include value="assert.response.numResourcesMinMax" scope="common"
            resource="AllergyIntolerance" min="9" max="14"/>
        <nts:include value="assert.response.numResources" scope="common"
            resource="Patient" count="1"/>
    </test>
    
    <test id="Scenario-B-0-2">
        <name value="Scenario 0.2 (B)"/>
        <description value="Serve multiple hypersensitivity dispositions"/>
        <nts:include value="test.server.successfulSearch" scope="common" nts:in-targets="#default">
            <nts:with-parameter name="description"
                value="Test server to serve multiple Condition and corresponding Observation resources representing CiO building blocks HypersensitivityDisposition and Reaction respectively"/>
            <nts:with-parameter name="resource" value="Condition"/>
            <nts:with-parameter name="params"
                value="?patient.identifier=http://fhir.nl/fhir/NamingSystem/bsn|999900110&amp;code=http://snomed.info/sct|157471000146100&amp;_include=Condition:evidence-detail"/>
            <nts:with-parameter name="useToken" value="true"/>
        </nts:include>
        <nts:include value="assert.response.numResourcesMinMax" scope="common"
            resource="Condition" min="9" max="14"/>
        <nts:include value="assert.response.numResourcesMinMax" scope="common"
            resource="Observation" min="6" max="10"/>
        <nts:include value="assert.response.numResources" scope="common"
            resource="Patient" count="1"/>
    </test>
</TestScript>