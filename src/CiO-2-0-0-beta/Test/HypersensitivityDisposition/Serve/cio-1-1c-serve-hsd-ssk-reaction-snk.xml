<TestScript xmlns="http://hl7.org/fhir" xmlns:nts="http://nictiz.nl/xsl/testscript" nts:scenario="server">
    <id value="cio-hsd-serve-1-1c"/>
    <version value="r4-cio-2.0.0-beta"/>
    <name value="CiO 2.0.0-beta - HypersensitivityDisposition - Serve - Scenario 1.1c"/>
    <description value="Scenario 1.1c - Serve hypersensitivity disposition on SSK level with reaction on SNK level"/>
    <nts:authToken patientResourceId="patient-XXX-Habiboellah"/>

    <test id="Scenario-A-1-1c">
        <name value="Scenario 1.1c (A)"/>
        <description value="Serve hypersensitivity disposition on SSK level with reaction on SNK level"/>
        <nts:include value="test.server.successfulSearch" scope="common" nts:in-targets="#default">
            <nts:with-parameter name="description"
                value="Test server to serve AllergyIntolerance resources representing CiO building blocks HypersensitivityDisposition and Reaction (coded on SSK and SNK level respectively)"/>
            <nts:with-parameter name="resource" value="AllergyIntolerance"/>
            <nts:with-parameter name="params"
                value="?patient.identifier=http://fhir.nl/fhir/NamingSystem/bsn|999900122&amp;_include=AllergyIntolerance:patient"/>
            <nts:with-parameter name="useToken" value="true"/>
        </nts:include>
        <nts:include value="assert.response.numResourcesMinMax" scope="common"
            resource="AllergyIntolerance" min="1" max="3"/>
        <nts:include value="assert.response.numResources" scope="common"
            resource="Patient" count="1"/>
    </test>
    
    <test id="Scenario-B-1-1c">
        <name value="Scenario 1.1c (B)"/>
        <description value="Serve hypersensitivity disposition on SSK level with reaction on SNK level"/>
        <nts:include value="test.server.successfulSearch" scope="common" nts:in-targets="#default">
            <nts:with-parameter name="description"
                value="Test server to serve Condition and corresponding Observation resources representing CiO building blocks HypersensitivityDisposition and Reaction respectively (coded on SSK and SNK level respectively)"/>
            <nts:with-parameter name="resource" value="Condition"/>
            <nts:with-parameter name="params"
                value="?patient.identifier=http://fhir.nl/fhir/NamingSystem/bsn|999900122&amp;code=http://snomed.info/sct|157471000146100&amp;_include=Condition:evidence-detail"/>
            <nts:with-parameter name="useToken" value="true"/>
        </nts:include>
        <nts:include value="assert.response.numResourcesMinMax" scope="common"
            resource="Condition" min="1" max="3"/>
        <nts:include value="assert.response.numResourcesMinMax" scope="common"
            resource="Observation" min="1" max="3"/>
        <nts:include value="assert.response.numResources" scope="common"
            resource="Patient" count="1"/>
    </test>
</TestScript>