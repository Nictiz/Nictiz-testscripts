<TestScript xmlns="http://hl7.org/fhir" xmlns:nts="http://nictiz.nl/xsl/testscript" nts:scenario="server">
    <id value="cio-hsd-serve-1-4"/>
    <version value="r4-cio-2.0.0-beta"/>
    <name value="CiO 2.0.0-beta - HypersensitivityDisposition - Serve - Scenario 1.4"/>
    <description value="Scenario 1.4 - Serve hypersensitivity disposition with multiple reactions"/>
    <nts:authToken patientResourceId="patient-van-de-XXX-Broekmeulen"/>

    <test id="Scenario-A-1-4">
        <name value="Scenario 1.4 (A)"/>
        <description value="Serve hypersensitivity disposition with multiple reactions"/>
        <nts:include value="test.server.successfulSearch" scope="common" nts:in-targets="#default">
            <nts:with-parameter name="description"
                value="Test server to serve AllergyIntolerance resource representing CiO building blocks HypersensitivityDisposition and multiple corresponding Reactions"/>
            <nts:with-parameter name="resource" value="AllergyIntolerance"/>
            <nts:with-parameter name="params"
                value="?patient.identifier=http://fhir.nl/fhir/NamingSystem/bsn|999900134&amp;_include=AllergyIntolerance:patient"/>
            <nts:with-parameter name="useToken" value="true"/>
        </nts:include>
        <nts:include value="assert.response.numResourcesMinMax" scope="common"
            resource="AllergyIntolerance" min="1" max="2"/>
        <nts:include value="assert.response.numResources" scope="common"
            resource="Patient" count="1"/>
    </test>
    
    <test id="Scenario-B-1-4">
        <name value="Scenario 1.4 (B)"/>
        <description value="Serve hypersensitivity disposition with multiple reactions"/>
        <nts:include value="test.server.successfulSearch" scope="common" nts:in-targets="#default">
            <nts:with-parameter name="description"
                value="Test server to serve Condition and multiple corresponding Observation resources representing CiO building blocks HypersensitivityDisposition and Reaction"/>
            <nts:with-parameter name="resource" value="Condition"/>
            <nts:with-parameter name="params"
                value="?patient.identifier=http://fhir.nl/fhir/NamingSystem/bsn|999900134&amp;code=http://snomed.info/sct|157471000146100&amp;_include=Condition:evidence-detail"/>
            <nts:with-parameter name="useToken" value="true"/>
        </nts:include>
        <nts:include value="assert.response.numResourcesMinMax" scope="common"
            resource="Condition" min="1" max="2"/>
        <nts:include value="assert.response.numResources" scope="common"
            resource="Observation" count="2"/>
        <nts:include value="assert.response.numResources" scope="common"
            resource="Patient" count="1"/>
    </test>
</TestScript>