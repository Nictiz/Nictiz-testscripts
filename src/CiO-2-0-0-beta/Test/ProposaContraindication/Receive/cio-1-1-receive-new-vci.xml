<TestScript xmlns="http://hl7.org/fhir" xmlns:nts="http://nictiz.nl/xsl/testscript" nts:scenario="server">
    <id value="cio-vci-receive-1-1"/>
    <version value="r4-cio-2.0.0-beta"/>
    <name value="CiO 2.0.0-beta - ProposalContraIndication - Receive - Scenario 1.1"/>
    <description value="Scenario 1.1 - Receive new proposal contraindications"/>
    <nts:authToken patientResourceId="patient-XXX-Geitenbeek"/>
    
    <test id="Scenario-1-1">
        <name value="Scenario 1.1"/>
        <description value="Receive new proposal contraindications in a transaction Bundle"/>
        <action>
            <operation>
                <type>
                    <system value="http://terminology.hl7.org/CodeSystem/testscript-operation-codes"/>
                    <code value="transaction"/>
                </type>
                <description value="Test server to handle a Bundle of type transaction."/>
                <contentType value="{$_FORMAT}"/>
                <destination value="1"/>
                <origin value="1"/>
                <requestHeader>
                    <field value="Prefer"/>
                    <value value="return=representation"/>
                </requestHeader>
                <sourceId value="cio-svci-tst-1.1-beta3VCI1"/>
            </operation>
        </action>
        <nts:include value="assert.response.success" scope="common"/>
        <nts:include value="assert.response.bundleContent"
            scope="common" bundleType="transaction-response"/>
        <nts:include value="assert.request.numResources"
            scope="common"
            resource="Flag" count="1"/>
        <nts:include value="assert.request.numResources"
            scope="common"
            resource="Patient" count="1"/>
        <nts:include value="assert.request.numResources"
            scope="common"
            resource="Provenance" count="1"/>
    </test>
</TestScript>
