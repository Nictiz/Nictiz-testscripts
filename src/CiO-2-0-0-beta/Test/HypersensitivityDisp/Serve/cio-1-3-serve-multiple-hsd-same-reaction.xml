<TestScript xmlns="http://hl7.org/fhir" xmlns:nts="http://nictiz.nl/xsl/testscript" nts:scenario="server">
    <id value="cio-hsd-serve-1-3"/>
    <version value="r4-cio-2.0.0-beta"/>
    <name value="CiO 2.0.0-beta - HypersensitivityDisposition - Serve - Scenario 1.3"/>
    <description value="Scenario 1.3 - Serve multiple hypersensitivity dispositions with the same reaction"/>
    <nts:authToken patientResourceId="patient-van-XXX-Verbeek"/>

    <test id="Scenario-A-1-3">
        <name value="Scenario 1.3 (A)"/>
        <description value="Serve multiple hypersensitivity dispositions with the same reaction"/>
        <nts:include value="test.server.successfulSearch" scope="common" nts:in-targets="#default">
            <nts:with-parameter name="description"
                value="Test server to serve AllergyIntolerance resources representing CiO building blocks HypersensitivityDisposition and Reaction where the Reaction is the same in all resources"/>
            <nts:with-parameter name="resource" value="AllergyIntolerance"/>
            <nts:with-parameter name="params"
                value="?patient.identifier=http://fhir.nl/fhir/NamingSystem/bsn|999900110&amp;_include=AllergyIntolerance:patient"/>
            <nts:with-parameter name="useToken" value="true"/>
        </nts:include>
        <nts:include value="assert.response.numResourcesMinMax" scope="common"
            resource="AllergyIntolerance" min="3" max="14"/>
        <nts:include value="assert.response.numResources" scope="common"
            resource="Patient" count="1"/>
    </test>
    
    <test id="Scenario-B-1-3">
        <name value="Scenario 1.3 (B)"/>
        <description value="Serve multiple hypersensitivity dispositions with the same reaction"/>
        <nts:include value="test.server.successfulSearch" scope="common" nts:in-targets="#default">
            <nts:with-parameter name="description"
                value="Test server to serve Condition and corresponding Observation resources representing CiO building blocks HypersensitivityDisposition and Reaction where the Reaction is the same in all resources"/>
            <nts:with-parameter name="resource" value="Condition"/>
            <nts:with-parameter name="params"
                value="?patient.identifier=http://fhir.nl/fhir/NamingSystem/bsn|999900110&amp;code=http://snomed.info/sct|157471000146100&amp;_include=Condition:evidence-detail"/>
            <nts:with-parameter name="useToken" value="true"/>
        </nts:include>
        <nts:include value="assert.response.numResourcesMinMax" scope="common"
            resource="Condition" min="3" max="14"/>
        <nts:include value="assert.response.numResourcesMinMax" scope="common"
            resource="Observation" min="1" max="10"/>
        <nts:include value="assert.response.numResources" scope="common"
            resource="Patient" count="1"/>
    </test>
</TestScript>