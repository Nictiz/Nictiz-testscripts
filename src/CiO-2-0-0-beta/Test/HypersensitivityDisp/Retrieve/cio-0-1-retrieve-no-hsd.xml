<TestScript xmlns="http://hl7.org/fhir" xmlns:nts="http://nictiz.nl/xsl/testscript" nts:scenario="client">
    <id value="cio-hsd-retrieve-0-1"/>
    <version value="r4-cio-2.0.0-beta"/>
    <name value="CiO 2.0.0-beta - HypersensitivityDisposition - Retrieve - Scenario 0.1"/>
    <description value="Scenario 0.1 - Retrieve no hypersensitivity dispositions"/>
    <nts:authToken patientResourceId="patient-van-XXX-Lonkhuijsen"/>

    <test id="Scenario-A-0-1">
        <name value="Scenario 0.1 (A)"/>
        <description value="Retrieve no hypersensitivity dispositions"/>
        <nts:include value="test.client.search" scope="common" nts:in-targets="#default">
            <nts:with-parameter name="description"
                value="Test client to retrieve no AllergyIntolerance resources representing CiO building blocks HypersensitivityDisposition and Reaction"/>
            <nts:with-parameter name="resource" value="AllergyIntolerance"/>
            <nts:with-parameter name="params"
                value="?patient.identifier=http://fhir.nl/fhir/NamingSystem/bsn|999900171"/>
            <nts:with-parameter name="useToken" value="true"/>
        </nts:include>
        <nts:include value="canary-assert.response.successfulSearch" scope="common"/>
        <nts:include value="assert.response.numResources" scope="common"
            resource="AllergyIntolerance" count="0"/>
        <nts:include value="assert.response.numResources" scope="common"
            resource="Patient" count="0"/>
    </test>
    
    <test id="Scenario-B-0-1">
        <name value="Scenario 0.1 (B)"/>
        <description value="Retrieve no hypersensitivity dispositions"/>
        <nts:include value="test.client.search" scope="common" nts:in-targets="#default">
            <nts:with-parameter name="description"
                value="Test client to retrieve no Condition and corresponding Observation resources representing CiO building blocks HypersensitivityDisposition and Reaction respectively"/>
            <nts:with-parameter name="resource" value="Condition"/>
            <nts:with-parameter name="params"
                value="?patient.identifier=http://fhir.nl/fhir/NamingSystem/bsn|999900171&amp;code=http://snomed.info/sct|157471000146100&amp;_include=Condition:evidence-detail"/>
            <nts:with-parameter name="useToken" value="true"/>
        </nts:include>
        <nts:include value="canary-assert.response.successfulSearch" scope="common"/>
        <nts:include value="assert.response.numResources" scope="common"
            resource="Condition" count="0"/>
        <nts:include value="assert.response.numResources" scope="common"
            resource="Observation" count="0"/>
        <nts:include value="assert.response.numResources" scope="common"
            resource="Patient" count="0"/>
    </test>
</TestScript>