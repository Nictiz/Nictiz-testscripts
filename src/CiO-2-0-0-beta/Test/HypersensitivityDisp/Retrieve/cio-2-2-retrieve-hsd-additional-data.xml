<TestScript xmlns="http://hl7.org/fhir" xmlns:nts="http://nictiz.nl/xsl/testscript" nts:scenario="client">
    <id value="cio-hsd-retrieve-2-2"/>
    <version value="r4-cio-2.0.0-beta"/>
    <name value="CiO 2.0.0-beta - HypersensitivityDisposition - Retrieve - Scenario 2.2"/>
    <description value="Scenario 2.2 - Retrieve hypersensitivity disposition with additional data (Comment, ReactionPhenomenon, DateTimeClosure)"/>
    <nts:authToken patientResourceId="patient-XXX-Gerrits"/>

    <test id="Scenario-A-2-2">
        <name value="Scenario 2.2 (A)"/>
        <description value="Retrieve hypersensitivity disposition with additional data (Comment, ReactionPhenomenon, DateTimeClosure)"/>
        <nts:include value="test.client.search" scope="common" nts:in-targets="#default">
            <nts:with-parameter name="description"
                value="Test client to retrieve AllergyIntolerance resource representing CiO building blocks HypersensitivityDisposition and Reaction with additional data (Comment, ReactionPhenomenon, DateTimeClosure)"/>
            <nts:with-parameter name="resource" value="AllergyIntolerance"/>
            <nts:with-parameter name="params"
                value="?patient.identifier=http://fhir.nl/fhir/NamingSystem/bsn|999900158&amp;_include=AllergyIntolerance:patient"/>
            <nts:with-parameter name="useToken" value="true"/>
        </nts:include>
        <nts:include value="canary-assert.response.successfulSearch" scope="common"/>
        <nts:include value="assert.response.numResources" scope="common"
            resource="AllergyIntolerance" count="1"/>
        <nts:include value="assert.response.numResources" scope="common"
            resource="Patient" count="1"/>
    </test>
    
    <test id="Scenario-B-2-2">
        <name value="Scenario 2.2 (B)"/>
        <description value="Retrieve hypersensitivity disposition with additional data (Comment, ReactionPhenomenon, DateTimeClosure)"/>
        <nts:include value="test.client.search" scope="common" nts:in-targets="#default">
            <nts:with-parameter name="description"
                value="Test client to retrieve Condition and corresponding Observation resource representing CiO building blocks HypersensitivityDisposition and Reaction with additional data (Comment, ReactionPhenomenon, DateTimeClosure)"/>
            <nts:with-parameter name="resource" value="Condition"/>
            <nts:with-parameter name="params"
                value="?patient.identifier=http://fhir.nl/fhir/NamingSystem/bsn|999900158&amp;code=http://snomed.info/sct|157471000146100&amp;_include=Condition:evidence-detail"/>
            <nts:with-parameter name="useToken" value="true"/>
        </nts:include>
        <nts:include value="canary-assert.response.successfulSearch" scope="common"/>
        <nts:include value="assert.response.numResources" scope="common"
            resource="Condition" count="1"/>
        <nts:include value="assert.response.numResources" scope="common"
            resource="Observation" count="1"/>
        <nts:include value="assert.response.numResources" scope="common"
            resource="Patient" count="1"/>
    </test>
</TestScript>