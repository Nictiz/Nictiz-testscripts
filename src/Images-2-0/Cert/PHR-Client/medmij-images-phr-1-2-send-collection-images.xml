<?xml version="1.0" encoding="UTF-8"?>
<?xml-model href="http://hl7.org/fhir/STU3/testscript.sch" type="application/xml" schematypens="http://purl.oclc.org/dsdl/schematron"?>
<TestScript xmlns="http://hl7.org/fhir" xmlns:nts="http://nictiz.nl/xsl/testscript"
    nts:scenario="client">
    <id value="phr-1-2-send-image"/>
    <version value="stu3-2.0"/>
    <name value="Images - PHR Client - Scenario 1.2 - Send Collection of three images"/>
    <description value="Scenario 1.2 - Send collection of three images"/>
    <nts:patientTokenFixture href="images-nl-core-patient-XXX-TEST-C-token.xml"/>
    <nts:fixture id="scenario-1-2-bundle-fixture"
        href="transaction-bundles/images-scenario-1-2-Bundle-collection-images.xml"/>
    <variable>
        <name value="T"/>
        <defaultValue value="${CURRENTDATETIME}"/>
        <description value="Date that data and queries are expected to be relative to."/>
    </variable>

    <test id="scenario1-1-SendCollectionImages">
        <name value="Scenario 1.1"/>
        <description value="Send three images in a Bundle transaction"/>
        <nts:include value="operation.phr.transaction" sourceId="scenario-1-2-bundle-fixture"/>
        <nts:include value="assert.response.success" scope="common"/>
        <nts:include value="medmij/assert.request.general" scope="common"/>
        <nts:include value="medmij/assert.request.bundleContent" scope="common"/>
        <nts:include value="assert.response.numResources" scope="common"
            resource="Media" count="3"/>
        <nts:include value="assert.response.numResources" scope="common"
            resource="Binary" count="3"/>
        <nts:include value="assert.response.numResources" scope="common"
            resource="Patient" count="1"/>
        <nts:include value="assert.response.numResources" scope="common"
            resource="Practitioner" count="1"/>
        <action>
            <assert>
                <description value="Confirm that request Bundle is of type transaction."/>
                <direction value="request"/>
                <expression value="Bundle.type = 'transaction'"/>
            </assert>
        </action>
        <action>
            <assert>
                <description
                    value="Confirm that all resources contain a meta.profile tag, minus the Bundle and Binary resource."/>
                <direction value="request"/>
                <expression
                    value="Bundle.entry.resource.meta.profile.count() = Bundle.entry.resource.count()-3"
                />
            </assert>
        </action>
        <action>
            <assert>
                <description
                    value="Confirm that the Media resource has a recipient extension with a value."/>
                <direction value="request"/>
                <expression
                    value="Bundle.entry.resource.ofType(List).extension.where(url = 'http://nictiz.nl/fhir/StructureDefinition/images-recipient').value.exists()"
                />
            </assert>
        </action>
    </test>
</TestScript>
