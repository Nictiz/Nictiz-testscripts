<?xml-model href="http://hl7.org/fhir/STU3/testscript.sch" type="application/xml" schematypens="http://purl.oclc.org/dsdl/schematron"?>
<TestScript xmlns="http://hl7.org/fhir" xmlns:nts="http://nictiz.nl/xsl/testscript"
    nts:scenario="client">
    <id value="phr-1-1-retrieve-2-documentreference"/>
    <version value="stu3-2.0"/>
    <name value="PDFA - PHR Client - Scenario 1.1 - Retrieve two DocumentReference resources"/>
    <description value="Scenario 1.1 - Retrieve two DocumentReference resources of XXX-Baltus."/>
    <nts:patientTokenFixture href="pdfa-nl-core-patient-XXX-Baltus-token.xml"/>

    <test id="scenario1-1-retrieve-3-documentreference">
        <name value="Scenario 1.1"/>
        <description value="Query all current DocumentReference resources."/>
        <nts:include value="medmij/test.phr.search" scope="common"
            resource="DocumentReference"
            params="?status=current"/>
        <nts:include value="canary-assert.response.successfulSearch" scope="common"/>
        <nts:include value="assert.response.numResources" scope="common"
            resource="DocumentReference" count="2"/>
    </test>
</TestScript>
