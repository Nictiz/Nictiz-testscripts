<?xml version="1.0" encoding="UTF-8"?>
<?xml-model href="http://hl7.org/fhir/STU3/testscript.sch" type="application/xml" schematypens="http://purl.oclc.org/dsdl/schematron"?>
<TestScript xmlns="http://hl7.org/fhir" xmlns:nts="http://nictiz.nl/xsl/testscript" nts:scenario="server">
    <id value="xis-3-2-receive-image"/>
    <version value="stu3-2.0"/>
    <name value="PDFA - XIS Client - Scenario 3.2 - Receive Two Documents"/>
    <description value="Scenario 3.2 - Receive Two Document of XXX-Ellens."/>
    <nts:patientTokenFixture href="pdfa-nl-core-patient-XXX-Ellens-token.xml"/>
    <nts:fixture id="scenario-3-2-bundle-fixture" href="resources/medmij-pdfa-Bundle-kwalificatie2.xml"/>
    <nts:includeDateT value="yes"/>
    
    <test id="scenario3-2-receive-two-documents">
        <name value="Scenario 3.2"/>
        <description value="Receive two documents in a transaction Bundle"/>
        <nts:include value="operation-create-bundle-transaction">
            <nts:with-parameter name="contentType" value="xml"/>
            <nts:with-parameter name="sourceId" value="scenario-3-2-bundle-fixture"/>
        </nts:include>
        <nts:include value="assert.success.response" scope="common"/>
        <nts:include value="medmij/assert.bundleContent.response" scope="common">
            <nts:with-parameter name="bundleType" value="transaction-response"/>
        </nts:include>
        <nts:include value="assert.numResources.response" scope="common">
            <nts:with-parameter name="resource" value="DocumentManifest"/>
            <nts:with-parameter name="count" value="1"/>
        </nts:include>
        <nts:include value="assert.numResources.response" scope="common">
            <nts:with-parameter name="resource" value="DocumentReference"/>
            <nts:with-parameter name="count" value="2"/>
        </nts:include>
        <nts:include value="assert.numResources.response" scope="common">
            <nts:with-parameter name="resource" value="Binary"/>
            <nts:with-parameter name="count" value="2"/>
        </nts:include>
        <nts:include value="assert.numResources.response" scope="common">
            <nts:with-parameter name="resource" value="Patient"/>
            <nts:with-parameter name="count" value="1"/>
        </nts:include>
    </test>
</TestScript>