<?xml version="1.0" encoding="UTF-8"?>
<?xml-model href="http://hl7.org/fhir/STU3/testscript.sch" type="application/xml" schematypens="http://purl.oclc.org/dsdl/schematron"?>
<TestScript xmlns="http://hl7.org/fhir" xmlns:nts="http://nictiz.nl/xsl/testscript" nts:scenario="server">
    <id value="xis-1-1-serve-3-documentreference"/>
    <version value="stu3-2.0"/>
    <name value="PDFA - XIS Server - Scenario 1.1 - Serve three DocumentReference resources"/>
    <description value="Scenario 1.1 - Serve three DocumentReference resources of XXX-Baltus."/>
    <nts:patientTokenFixture href="pdfa-nl-core-patient-XXX-Baltus-token.xml"/>
    
    <test id="scenario1-1-serve-3-documentreference">
        <name value="Scenario 1.1"/>
        <description value="Serve all current DocumentReference resources"/>
        <nts:include value="medmij/test.searchWithParams.xis" scope="common">
            <nts:with-parameter name="resource" value="DocumentReference"/>
            <nts:with-parameter name="params" value="?status=current"/>
        </nts:include>
        <nts:include value="medmij/assert.successfulSearch.response" scope="common"/>
        <nts:include value="assert.numResources.response" scope="common">
            <nts:with-parameter name="resource" value="DocumentReference"/>
            <nts:with-parameter name="count" value="3"/>
        </nts:include>

        <nts:include value="assert.resourceWithLoinc.response">
            <nts:with-parameter name="code" value="68688-1"/>
        </nts:include>
        <nts:include value="assert.resourceWithLoinc.response">
            <nts:with-parameter name="code" value="34797-1"/>
        </nts:include>
        <nts:include value="assert.resourceWithLoinc.response">
            <nts:with-parameter name="code" value="34781-5"/>
        </nts:include>

        <nts:include value="assert.unknownMasterIdentifier.response" nts:in-targets="#default">
			<nts:with-parameter name="code" value="68688-1"/>
            <nts:with-parameter name="masterIdentifier" value="urn:oid:1.2.276.0.7230010.3.1.2.1787205428.3024.1522314975.220898"/>
        </nts:include>
        <nts:include value="assert.unknownMasterIdentifier.response" nts:in-targets="#default">
			<nts:with-parameter name="code" value="34797-1"/>
            <nts:with-parameter name="masterIdentifier" value="urn:oid:1.2.276.0.7230010.3.1.2.1787205428.3024.1522314975.220879"/>
        </nts:include>
        <nts:include value="assert.unknownMasterIdentifier.response" nts:in-targets="#default">
			<nts:with-parameter name="code" value="34781-5"/>
            <nts:with-parameter name="masterIdentifier" value="urn:oid:1.2.276.0.7230010.3.1.2.1787205428.3024.1522314975.220899"/>
        </nts:include>
        
    </test>
</TestScript>

