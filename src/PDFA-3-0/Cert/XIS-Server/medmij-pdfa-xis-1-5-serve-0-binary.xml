<?xml version="1.0" encoding="UTF-8"?>
<?xml-model href="http://hl7.org/fhir/STU3/testscript.sch" type="application/xml" schematypens="http://purl.oclc.org/dsdl/schematron"?>
<TestScript xmlns="http://hl7.org/fhir" xmlns:nts="http://nictiz.nl/xsl/testscript"
    nts:scenario="server">
    <id value="xis-1-5-serve-0-binary"/>
    <version value="stu3-2.0"/>
    <name value="PDFA - XIS Server - Scenario 1.5 - Serve zero Binary resources"/>
    <description value="Scenario 1.5 - Serve no Binary resources of XXX-Baltus."/>
    <nts:patientTokenFixture href="pdfa-nl-core-patient-XXX-Baltus-token.xml"/>

    <test id="scenario1-5-serve-0-binary">
        <name value="Scenario 1.5"/>
        <description
            value="Serve no Binary resources because the id of the requested read should not exist at the XIS server."/>
        <nts:include value="medmij/test.xis.read" scope="common"
            resource="Binary" params="/example-pdfa-binary3"/>
        <action>
            <assert nts:stopTestOnFail="true">
                <description
                    value="Confirm that the returned HTTP status is 404 (Not Found) or 410 (Gone)."/>
                <direction value="response"/>
                <operator value="in"/>
                <responseCode value="404,410"/>
            </assert>
        </action>
    </test>
</TestScript>
