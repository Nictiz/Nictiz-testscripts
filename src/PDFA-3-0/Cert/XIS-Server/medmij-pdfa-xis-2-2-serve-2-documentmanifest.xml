<?xml version="1.0" encoding="UTF-8"?>
<?xml-model href="http://hl7.org/fhir/STU3/testscript.sch" type="application/xml" schematypens="http://purl.oclc.org/dsdl/schematron"?>
<TestScript xmlns="http://hl7.org/fhir" xmlns:nts="http://nictiz.nl/xsl/testscript" nts:scenario="server">
    <id value="xis-2-2-serve-2-documentmanifest"/>
    <version value="stu3-2.0"/>
    <name value="PDFA - XIS Server - Scenario 2.2 - Serve two DocumentManifest resources"/>
    <description value="Scenario 2.2 - Serve two DocumentManifest resources of XXX-Schulte."/>
    <nts:patientTokenFixture href="pdfa-nl-core-patient-XXX-Schulte-token.xml"/>
    
    <test id="scenario2-2-serve-1-DocumentManifest">
        <name value="Scenario 2.2"/>
        <description value="Serve all current DocumentManifest resources"/>
        <nts:include value="medmij/test.searchWithParams.xis" scope="common">
            <nts:with-parameter name="resource" value="DocumentManifest"/>
            <nts:with-parameter name="params" value="?status=current"/>
        </nts:include>
        <nts:include value="medmij/assert.successfulSearch.response" scope="common"/>
        <nts:include value="assert.numResources.response" scope="common">
            <nts:with-parameter name="resource" value="DocumentManifest"/>
            <nts:with-parameter name="count" value="2"/>
        </nts:include>
        <nts:include value="assert.resourceWithLoinc.response">
            <nts:with-parameter name="resourceType" value="DocumentManifest"/>
            <nts:with-parameter name="code" value="18842-5"/>
        </nts:include>
        <nts:include value="assert.resourceWithLoinc.response">
            <nts:with-parameter name="resourceType" value="DocumentManifest"/>
            <nts:with-parameter name="code" value="73575-3"/>
        </nts:include>

        <nts:include value="assert.unknownMasterIdentifier.response" nts:in-targets="#default">
            <nts:with-parameter name="resourceType" value="DocumentManifest"/>
            <nts:with-parameter name="code" value="18842-5"/>
            <nts:with-parameter name="masterIdentifier" value="urn:oid:1.2.276.0.7230010.3.1.2.1787205428.8024.1526514975.220899"/>
        </nts:include>
        <nts:include value="assert.unknownMasterIdentifier.response" nts:in-targets="#default">
            <nts:with-parameter name="code" value="73575-3"/>
            <nts:with-parameter name="masterIdentifier" value="urn:oid:1.2.276.0.7230010.3.1.2.9857205428.8024.1526514975.440899"/>
        </nts:include>
    </test>
</TestScript>

