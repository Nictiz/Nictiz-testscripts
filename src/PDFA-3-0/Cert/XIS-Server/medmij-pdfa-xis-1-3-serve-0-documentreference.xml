<?xml version="1.0" encoding="UTF-8"?>
<?xml-model href="http://hl7.org/fhir/STU3/testscript.sch" type="application/xml" schematypens="http://purl.oclc.org/dsdl/schematron"?>
<TestScript xmlns="http://hl7.org/fhir" xmlns:nts="http://nictiz.nl/xsl/testscript"
    nts:scenario="server">
    <id value="xis-1-3-serve-0-documentreference"/>
    <version value="stu3-2.0"/>
    <name
        value="PDFA - XIS Server - Scenario 1.3 - Serve zero DocumentReference resources and one OperationOutcome resource"/>
    <description
        value="Scenario 1.3 - Serve OperationOutome resource for a request with an incorrect search syntax."/>
    <nts:patientTokenFixture href="pdfa-nl-core-patient-XXX-Baltus-token.xml"/>

    <profile id="OperationOutcome-profile">
        <reference value="http://hl7.org/fhir/StructureDefinition/OperationOutcome"/>
    </profile>

    <test id="scenario1-3-serve-0-documentreference">
        <name value="Scenario 1.3"/>
        <description value="Serve OperationOutcome resource for the incorrect search request."/>
        <nts:include value="medmij/test.xis.searchWithParams" scope="common"
            resource="DocumentReference"
            params="/$"/>
        <action>
            <assert nts:stopTestOnFail="true">
                <description value="The expected response status code 4xx or 5xx."/>
                <direction value="response"/>
                <operator value="in"/>
                <responseCode
                    value="400,402,403,404,405,406,407,408,409,410,411,412,413,414,415,416,417,418,421,422,423,424,426,428,429,431,451,500,501,502,503,504,505,506,507,508,510,511"
                />
            </assert>
        </action>
        <action>
            <assert>
                <description value="Confirm that the returned resource type is OperationOutcome."/>
                <direction value="response"/>
                <resource value="OperationOutcome"/>
            </assert>
        </action>
        <action>
            <assert>
                <description
                    value="Confirm that the returned OperationOutcome conforms to the base FHIR specification."/>
                <direction value="response"/>
                <validateProfileId value="OperationOutcome-profile"/>
            </assert>
        </action>
    </test>
</TestScript>
