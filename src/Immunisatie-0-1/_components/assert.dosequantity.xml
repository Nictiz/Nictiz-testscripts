<?xml version="1.0" encoding="UTF-8"?>
<nts:component xmlns="http://hl7.org/fhir" xmlns:nts="http://nictiz.nl/xsl/testscript">
    <action>
        <assert>
            <description value="Test if the doseQuantity value is '{$dosevalue}'." />
            <direction value="{$direction}" /> 
            <expression value= "Bundle.entry.where(resource.is(Immunization)).resource.where(identifier.value = '{$identifier}').where(identifier.system = '{$identifiersystem}').doseQuantity.value = '{$dosevalue}'" />
        </assert>
    </action>
    <action>
        <assert>
            <description value="Test if the doseQuantity unit is in '{$unit}'." />
            <direction value="{$direction}" /> 
            <expression value= "Bundle.entry.where(resource.is(Immunization)).resource.where(identifier.value = '{$identifier}').where(identifier.system = '{$identifiersystem}').doseQuantity.unit = '{$unit}'" />
        </assert>
    </action>
    <action>
        <assert>
            <description value="Test if the doseQuantity code is in '{$unit}'." />
            <direction value="{$direction}" /> 
            <expression value= "Bundle.entry.where(resource.is(Immunization)).resource.where(identifier.value = '{$identifier}').where(identifier.system = '{$identifiersystem}').doseQuantity.code = '{$unit}'" />
        </assert>
    </action>
    <action>
        <assert>
            <description value="Test the doseQuantity system is '{$system}'." />
            <direction value="{$direction}" /> 
            <expression value= "Bundle.entry.where(resource.is(Immunization)).resource.where(identifier.value = '{$identifier}').where(identifier.system = '{$identifiersystem}').doseQuantity.system = '{$system}'" />
        </assert>
    </action>
</nts:component>