<?xml version="1.0" encoding="UTF-8"?>
<nts:component xmlns="http://hl7.org/fhir" xmlns:nts="http://nictiz.nl/xsl/testscript">
    <action>
        <assert>
            <description
                value="Confirm that the Immunization resource contains a reference of the type 'Patient'"/>
            <direction value="{$direction}"/>
            <expression value="Bundle.entry.where(resource.is(Immunization)).resource.where(identifier.value = '{$identifier}').where(identifier.system = '{$identifiersystem}').patient.where(type = 'Patient').exists()"/>
        </assert>
    </action>
</nts:component>