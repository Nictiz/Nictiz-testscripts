<?xml version="1.0" encoding="UTF-8"?>
<?xml-model href="http://hl7.org/fhir/STU3/testscript.sch" type="application/xml" schematypens="http://purl.oclc.org/dsdl/schematron"?>
<TestScript xmlns="http://hl7.org/fhir" xmlns:nts="http://nictiz.nl/xsl/testscript"
    nts:scenario="server">
    <id value="xis-3-receive-one-correctionrequest-notopic"/>
    <version value="r4-0.3.0"/>
    <name
        value="PatientCorrections - XIS Server - Scenario 3 - Receive one correction request, no topic"/>
    <description value="Scenario 3 - Receive one correction request, no topic"/>
    <nts:patientTokenFixture href="nl-core-patient-1285290-token.xml"/>
    <nts:fixture id="scenario-3-bundle-fixture"
        href="resources-specific/dwv-Transaction-Scenario-3.xml"/>
    <nts:includeDateT value="yes"/>

    <test id="scenario3-receive-one-correctionrequest-notopic">
        <name value="Scenario3"/>
        <description value="Receive one correction request, no topic"/>
        <nts:include value="medmij/test.xis.successfulTransaction" scope="common"
            sourceId="scenario-3-bundle-fixture"/>
        <nts:include value="assert.response.numResources" scope="common"
            resource="Patient" count="1"/>
        <nts:include value="assert.response.numResources" scope="common"
            resource="Organization" count="1"/>
        <nts:include value="assert.response.numResources" scope="common"
            resource="Communication" count="1"/>
        <nts:include value="assert.response.numResources" scope="common"
            resource="OperationOutcome" count="1"/>
        <action>
            <assert>
                <description value="Confirm that that the OperationOutcome contains severity value 'information' and code value 'informational.'"/>
                <direction value="response"/>
                <expression value="entry.where(resource as OperationOutcome).resource.issue.where(severity = 'information').where(code = 'informational').exists()"/>
            </assert>
        </action>
        <action>
            <assert>
                <description value="Confirm that that the OperationOutcome contains the actual message of the acknowledgement of receipt."/>
                <direction value="response"/>
                <expression value="entry.where(resource as OperationOutcome).resource.issue.details.text.exists()"/>
            </assert>
        </action>
        <action>
            <assert>
                <description value="Confirm that that the HTTP Prefer header with value 'return=representation' is present."/>
                <direction value="response"/>
                <headerField value="Prefer"/>
                <value value="return=representation"/>
            </assert>
        </action>
    </test>
</TestScript>
