<TestScript xmlns:nts="http://nictiz.nl/xsl/testscript"
            xmlns="http://hl7.org/fhir"
            nts:scenario="server">
   <variable>
      <name value="filter-identifier"/>
      <defaultValue value="urn:oid:2.16.840.1.113883.2.4.3.11.999.77.16076005.1|MBH_200_QA1_MA"/>
      <description value="Filter on specific MedicationAgreement identifier"/>
   </variable>
   <id value="mp9-ma-serve-0-2"/>
   <version value="r4-mp9-2.0.0"/>
   <name value="Medication Process 9 2.0.0  - MedicationAgreement - Serve - Scenario 0.2"/>
   <description value="Scenario 0.2 - Specifieke medicatieafspraak met identificaties als filter (in kwalificatiesimulator het id van &#34;MBH_200_QA1_MA&#34; invoeren) (Antwoord: bericht met 1 medicatieafspraak)"/>
   <nts:authToken patientResourceId="nl-core-Patient-mp9-R-vanXXX-Sonnenberg"
                  nts:in-targets="MedMij"/>
   <test id="Scenario-0-2">
      <name value="Scenario 0.2"/>
      <description value="Specifieke medicatieafspraak met identificaties als filter (in kwalificatiesimulator het id van &#34;MBH_200_QA1_MA&#34; invoeren) (Antwoord: bericht met 1 medicatieafspraak)"/>
      <nts:include value="test.server.search" scope="common" nts:in-targets="#default">
         <nts:with-parameter name="description"
                             value="Test server to serve MedicationRequest resource(s) representing MP9 building block MedicationAgreement"/>
         <nts:with-parameter name="resource" value="MedicationRequest"/>
         <nts:with-parameter name="params"
                             value="?patient.identifier=http://fhir.nl/fhir/NamingSystem/bsn|999901084&amp;category=http://snomed.info/sct|33633005&amp;identifier=${filter-identifier}&amp;_include=MedicationRequest:medication"/>
      </nts:include>
      <nts:include value="medmij/test.xis.search"
                   scope="common"
                   nts:in-targets="MedMij">
         <nts:with-parameter name="description"
                             value="Test XIS server to serve MedicationRequest resource(s) representing MP9 building block MedicationAgreement"/>
         <nts:with-parameter name="resource" value="MedicationRequest"/>
         <nts:with-parameter name="params"
                             value="?category=http://snomed.info/sct|33633005&amp;identifier=${filter-identifier}&amp;_include=MedicationRequest:medication"/>
      </nts:include>
      <nts:include value="assert.response.successfulSearch" scope="common"/>
      <nts:include value="assert-responseBundleContent-noMM"/>
      <nts:include value="assert-returnCount" scope="project">
         <nts:with-parameter name="resource" value="MedicationRequest"/>
         <nts:with-parameter name="count" value="1"/>
      </nts:include>
      <nts:include value="assert-returnEntryCountAtLeast" scope="project">
         <nts:with-parameter name="count" value="2"/>
         <nts:with-parameter name="breakdown"
                             value="(Consists of 1 MedicationRequest and 1 Medication resources.)"/>
      </nts:include>
   </test>
</TestScript>
