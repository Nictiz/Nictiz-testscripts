<TestScript xmlns="http://hl7.org/fhir"
            xmlns:nts="http://nictiz.nl/xsl/testscript"
            nts:scenario="server">
   <id value="mp9-propvv-receive-mbh-200-voorstelgegevens-patient-is-auteur-vvv"/>
   <name value="MP9 - Server - Scenario mbh-200-voorstelgegevens-patient-is-auteur-vvv. - Receive ProposalVV"/>
   <description value="Scenario mbh-200-voorstelgegevens-patient-is-auteur-vvv. - Receive ProposalVV for C. van de XXX_Brugge."/>
   <nts:fixture id="mp-vv-tst-patient-is-auteur-v20"
                href="fixtures/mp-vv-tst-patient-is-auteur-v20.{$_FORMAT}"/>
   <nts:includeDateT value="yes"/>
   <variable nts:in-targets="Nictiz-intern">
      <name value="patient-id"/>
      <expression value="(Bundle.entry.resource as Patient).id"/>
      <sourceId value="transaction-response-fixture"/>
   </variable>
   <variable nts:in-targets="Nictiz-intern">
      <name value="MedicationRequest-1"/>
      <expression value="(Bundle.entry.resource as MedicationRequest).id[0]"/>
      <sourceId value="transaction-response-fixture"/>
   </variable>
   <variable nts:in-targets="Nictiz-intern">
      <name value="Patient-1"/>
      <expression value="(Bundle.entry.resource as Patient).id[0]"/>
      <sourceId value="transaction-response-fixture"/>
   </variable>
   <variable nts:in-targets="Nictiz-intern">
      <name value="Organization-1"/>
      <expression value="(Bundle.entry.resource as Organization).id[0]"/>
      <sourceId value="transaction-response-fixture"/>
   </variable>
   <variable nts:in-targets="Nictiz-intern">
      <name value="Medication-1"/>
      <expression value="(Bundle.entry.resource as Medication).id[0]"/>
      <sourceId value="transaction-response-fixture"/>
   </variable>
   <test id="scenariombh-200-voorstelgegevens-patient-is-auteur-vvv--receive-propvv">
      <name value="Scenario mbh-200-voorstelgegevens-patient-is-auteur-vvv."/>
      <description value="Receive ProposalVV in a transaction Bundle"/>
      <action>
         <operation>
            <type>
               <system value="http://terminology.hl7.org/CodeSystem/testscript-operation-codes"/>
               <code value="transaction"/>
            </type>
            <description value="Test server to handle a Bundle of type transaction."/>
            <contentType value="{$_FORMAT}"/>
            <destination value="1"/>
            <origin value="1"/>
            <requestHeader>
               <field value="Prefer"/>
               <value value="return=representation"/>
            </requestHeader>
            <responseId value="transaction-response-fixture" nts:in-targets="Nictiz-intern"/>
            <sourceId value="mp-vv-tst-patient-is-auteur-v20"/>
         </operation>
      </action>
      <nts:include value="assert.response.success" scope="common"/>
      <nts:include value="assert.response.bundleContent"
                   scope="common"
                   bundleType="transaction-response"/>
      <nts:include value="assert.request.numResources"
                   scope="common"
                   resource="MedicationRequest"
                   count="1"/>
      <nts:include value="assert.request.numResources"
                   scope="common"
                   resource="Patient"
                   count="1"
                   nts:in-targets="Nictiz-intern"/>
      <nts:include value="assert.request.numResources"
                   scope="common"
                   resource="Organization"
                   count="1"
                   nts:in-targets="Nictiz-intern"/>
      <nts:include value="assert.request.numResources"
                   scope="common"
                   resource="Medication"
                   count="1"/>
   </test>
   <teardown nts:in-targets="Nictiz-intern">
      <action>
         <operation>
            <type>
               <system value="http://terminology.hl7.org/CodeSystem/testscript-operation-codes"/>
               <code value="delete"/>
            </type>
            <resource value="MedicationRequest"/>
            <encodeRequestUrl value="true"/>
            <params value="${MedicationRequest-1}"/>
         </operation>
      </action>
      <action>
         <operation>
            <type>
               <system value="http://terminology.hl7.org/CodeSystem/testscript-operation-codes"/>
               <code value="delete"/>
            </type>
            <resource value="Patient"/>
            <encodeRequestUrl value="true"/>
            <params value="${Patient-1}"/>
         </operation>
      </action>
      <action>
         <operation>
            <type>
               <system value="http://terminology.hl7.org/CodeSystem/testscript-operation-codes"/>
               <code value="delete"/>
            </type>
            <resource value="Organization"/>
            <encodeRequestUrl value="true"/>
            <params value="${Organization-1}"/>
         </operation>
      </action>
      <action>
         <operation>
            <type>
               <system value="http://terminology.hl7.org/CodeSystem/testscript-operation-codes"/>
               <code value="delete"/>
            </type>
            <resource value="Medication"/>
            <encodeRequestUrl value="true"/>
            <params value="${Medication-1}"/>
         </operation>
      </action>
   </teardown>
</TestScript>
