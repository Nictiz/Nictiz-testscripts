<?xml version="1.0" encoding="UTF-8"?><TestScript xmlns="http://hl7.org/fhir" xmlns:nts="http://nictiz.nl/xsl/testscript" nts:scenario="server">
   <id value="medmij-bgz-test-xis-1-11-3"/>
