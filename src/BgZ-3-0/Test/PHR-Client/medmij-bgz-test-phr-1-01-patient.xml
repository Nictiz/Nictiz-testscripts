<?xml version="1.0" encoding="UTF-8"?>
<TestScript xmlns="http://hl7.org/fhir"
            xmlns:nts="http://nictiz.nl/xsl/testscript"
            nts:scenario="client">
   <id value="medmij-bgz-test-phr-1-01"/>
   <version value="stu3-3.0"/>
   <name value="BgZ - PHR Client - Test - Scenario 1.01 - Retrieve BgZ Patient resources of [PATIENTNAAM]"/>
   <description value="Scenario 1.1 - Retrieve BgZ Patient resources of [PATIENTNAAM]"/>
   <nts:authToken patientResourceId="medmij-bgz-test-patient-01"/>
   <test>
      <name value="Scenario 1.01 - Patient"/>
      <description value="Query Patient resource including the patient's general practitioner for zib Patient"/>
      <nts:include value="medmij/test.phr.search"
                   scope="common"
                   resource="Patient"
                   params="?_include=Patient:general-practitioner"/>
      <nts:include value="canary-assert.response.successfulSearch" scope="common"/>
      <nts:include value="assert.response.numResources"
                   scope="common"
                   resource="Patient"
                   count="1"/>
