<?xml version="1.0" encoding="UTF-8"?>
<?xml-model href="http://hl7.org/fhir/STU3/testscript.sch" type="application/xml" schematypens="http://purl.oclc.org/dsdl/schematron"?>
<TestScript xmlns="http://hl7.org/fhir" xmlns:nts="http://nictiz.nl/xsl/testscript"
    nts:scenario="server">
    <id value="xis-4-2-receive-saturation"/>
    <version value="stu4-2.0"/>
    <name
        value="SelfMeasurements - XIS Server - Scenario 4.2 - Receive most recent saturation Observation resource"/>
    <description value="Scenario 4.2 - Receive most recent saturation Observation resource"/>
    <nts:patientTokenFixture href="selfmeasurements-XXX-Herder-token.xml"/>
    <nts:fixture id="scenario-4-2-bundle-fixture"
        href="bundles/receive/selfmeasurements-receive-scenario-4-2-saturation-bundle.xml"/>
    <nts:includeDateT value="yes"/>

    <test id="scenario4-2-receive-most-recent-saturation">
        <name value="Scenario 4.2"/>
        <description value="Receive most recent saturation Observation resource"/>
        <nts:include value="medmij/test.xis.successfulBatch" scope="common"
            sourceId="scenario-4-2-bundle-fixture"/>
        <nts:include value="assert.response.numResources" scope="common"
            resource="Observation" count="3"/>
        <nts:include value="assert.response.numResources" scope="common"
            resource="Patient" count="1"/>
        <action>
            <assert>
                <description value="Confirm that the latest observation resource has the correct saturation value"/>
                <direction value="response"/>
                <expression value="Bundle.entry.resource.ofType(Observation).value.where(value=92 and unit='percent').exists()"/>
            </assert>
        </action>
        <action>
            <assert>
                <description value="Confirm that the latest observation resource has the correct saturation value"/>
                <direction value="response"/>
                <expression value="Bundle.entry.resource.ofType(Observation).value.where(value=96 and unit='percent').exists()"/>
            </assert>
        </action>
        <action>
            <assert>
                <description value="Confirm that the latest observation resource has the correct saturation value"/>
                <direction value="response"/>
                <expression value="Bundle.entry.resource.ofType(Observation).value.where(value=93 and unit='percent').exists()"/>
            </assert>
        </action>
    </test>
</TestScript>
