<?xml version="1.0" encoding="UTF-8"?>
<?xml-model href="http://hl7.org/fhir/STU3/testscript.sch" type="application/xml" schematypens="http://purl.oclc.org/dsdl/schematron"?>
<TestScript xmlns="http://hl7.org/fhir" xmlns:nts="http://nictiz.nl/xsl/testscript"
    nts:scenario="server">
    <id value="xis-1-6-serve-bloodpressure"/>
    <version value="stu3-2.0"/>
    <name
        value="SelfMeasurements - XIS Server - Test Scenario 6.X - Serve bloodpressure Observation resources"/>
    <description value="Scenario 6.X - Serve all bloodpressure Observation resources"/>
    <nts:authToken patientResourceId="selfmeasurements-Patient-XXX-Smorenburg"/>
    <nts:includeDateT value="yes"/>

    <test id="scenario6-1-serve-all-bloodpressure">
        <name value="Scenario 6.1"/>
        <description value="Serve all bloodpressure Observation resources"/>
        <nts:include value="medmij/test.xis.successfulSearch" scope="common"
            resource="Observation"
            params="?code=http://loinc.org|85354-9"/>
        
        <nts:contentAsserts href="resources-serve-retrieve/selfmeasurements-BloodPressure1.xml" description="contains a component with code = '8480-6' and valueQuantity.value = '123'" expression=".where(component.where(code.coding.where(code = '8480-6') and value.ofType(Quantity).value = 123))" />
        <nts:contentAsserts href="resources-serve-retrieve/selfmeasurements-BloodPressure2.xml" description="contains a component with code = '8480-6' and valueQuantity.value = '127'" expression=".where(component.where(code.coding.where(code = '8480-6') and value.ofType(Quantity).value = 127))" />
        <nts:contentAsserts href="resources-serve-retrieve/selfmeasurements-BloodPressure3.xml" description="contains a component with code = '8480-6' and valueQuantity.value = '131'" expression=".where(component.where(code.coding.where(code = '8480-6') and value.ofType(Quantity).value = 131))" />
        <nts:contentAsserts href="resources-serve-retrieve/selfmeasurements-BloodPressure4.xml" description="contains a component with code = '8480-6' and valueQuantity.value = '135'" expression=".where(component.where(code.coding.where(code = '8480-6') and value.ofType(Quantity).value = 135))" />
        <nts:contentAsserts href="resources-serve-retrieve/selfmeasurements-BloodPressure5.xml" description="contains a component with code = '8480-6' and valueQuantity.value = '132'" expression=".where(component.where(code.coding.where(code = '8480-6') and value.ofType(Quantity).value = 132))" />
    </test>

    <test id="scenario6-2-serve-all-bloodpressure">
        <name value="Scenario 6.2"/>
        <description value="Serve latest bloodpressure Observation resources"/>
        <nts:include value="medmij/test.xis.search" scope="common"
            resource="Observation"
            params="/$lastn?code=http://loinc.org|85354-9"/>
        <nts:include value="assert.response.queryParamsInSelfLink" scope="common"/>
        <nts:include value="assert.response.success" scope="common"/>
        <nts:include value="assert.response.numResources" scope="common"
            resource="Observation" count="1"/>

        <action>
            <assert>
                <description value="Confirm that the latest observation resource has the correct bloodpressure value"/>
                <direction value="response"/>
                <expression value="Bundle.entry.resource.ofType(Observation).where(component.where(code.coding.where(code = '8480-6') and value.ofType(Quantity).value = 123)).exists()"/>
            </assert>
        </action>
    </test>

    <test id="scenario6-3-serve-all-bloodpressures">
        <name value="Scenario 6.3"/>
        <description value="Serve period bloodpressure Observation resources"/>
        <nts:include value="medmij/test.xis.search" scope="common" resource="Observation" params="?code=http://loinc.org|85354-9&amp;date=ge${DATE, T, D,-55}&amp;date=le${DATE, T, D,-20}"/>
        <nts:include value="assert.response.queryParamsInSelfLink" scope="common"/>
        <nts:include value="assert.response.success" scope="common"/>
        <nts:include value="assert.response.numResources" scope="common" resource="Observation" count="4"/>

        <action>
            <assert>
                <description value="Confirm that the latest observation resource has the correct bloodpressure value"/>
                <direction value="response"/>
                <expression value="Bundle.entry.resource.ofType(Observation).where(component.where(code.coding.where(code = '8480-6') and value.ofType(Quantity).value = 127)).exists()"/>
            </assert>
        </action>
        <action>
            <assert>
                <description value="Confirm that the latest observation resource has the correct bloodpressure value"/>
                <direction value="response"/>
                <expression value="Bundle.entry.resource.ofType(Observation).where(component.where(code.coding.where(code = '8480-6') and value.ofType(Quantity).value = 131)).exists()"/>
            </assert>
        </action>
        <action>
            <assert>
                <description value="Confirm that the latest observation resource has the correct bloodpressure value"/>
                <direction value="response"/>
                <expression value="Bundle.entry.resource.ofType(Observation).where(component.where(code.coding.where(code = '8480-6') and value.ofType(Quantity).value = 135)).exists()"/>
            </assert>
        </action>
        <action>
            <assert>
                <description value="Confirm that the latest observation resource has the correct bloodpressure value"/>
                <direction value="response"/>
                <expression value="Bundle.entry.resource.ofType(Observation).where(component.where(code.coding.where(code = '8480-6') and value.ofType(Quantity).value = 132)).exists()"/>
            </assert>
        </action>
    </test>

    <test id="scenario6-4-serve-all-bloodpressures">
        <name value="Scenario 6.4"/>
        <description value="Serve period bloodpressure Observation resources"/>
        <nts:include value="medmij/test.xis.search" scope="common"
            resource="Observation"
            params="?code=http://loinc.org|85354-9&amp;date=ge${DATE, T, D,-10}&amp;date=le${DATE, T, D,-1}"/>
        <nts:include value="assert.response.queryParamsInSelfLink" scope="common"/>
        <nts:include value="assert.response.success" scope="common"/>
        <nts:include value="assert.response.numResources" scope="common"
            resource="Observation" count="0"/>
    </test>
</TestScript>
