<?xml version="1.0" encoding="UTF-8"?>
<?xml-model href="http://hl7.org/fhir/STU3/testscript.sch" type="application/xml" schematypens="http://purl.oclc.org/dsdl/schematron"?>
<TestScript xmlns="http://hl7.org/fhir" xmlns:nts="http://nictiz.nl/xsl/testscript"
    nts:scenario="server">
    <id value="xis-5-X-serve-pulserates"/>
    <version value="stu3-2.0"/>
    <name
        value="SelfMeasurements - XIS Server - Test Scenario 5.X - Serve PulseRate Observation resources"/>
    <description value="Scenario 5.X - Serve all PulseRate Observation resources"/>
    <nts:authToken patientResourceId="selfmeasurements-Patient-XXX-Smorenburg"/>
    <nts:includeDateT value="yes"/>
    
    <test id="scenario5-5-serve-all-pulserates">
        <name value="Scenario 5.1"/>
        <description value="Serve all PulseRate Observation resources"/>
        <nts:include value="medmij/test.xis.successfulSearch" scope="common"
            resource="Observation"
            params="?code=http://loinc.org|8893-0"/>
        
        <nts:contentAsserts href="resources-serve-retrieve/selfmeasurements-PulseRate1.xml" description="contains valueQuantity.value = '63'" expression=".where(value.ofType(Quantity).value = 63)" />
        <nts:contentAsserts href="resources-serve-retrieve/selfmeasurements-PulseRate2.xml" description="contains valueQuantity.value = '67'" expression=".where(value.ofType(Quantity).value = 67)" />
        <nts:contentAsserts href="resources-serve-retrieve/selfmeasurements-PulseRate3.xml" description="contains valueQuantity.value = '72'" expression=".where(value.ofType(Quantity).value = 72)" />
        <nts:contentAsserts href="resources-serve-retrieve/selfmeasurements-PulseRate4.xml" description="contains valueQuantity.value = '96'" expression=".where(value.ofType(Quantity).value = 96)" />
        <nts:contentAsserts href="resources-serve-retrieve/selfmeasurements-PulseRate5.xml" description="contains valueQuantity.value = '105'" expression=".where(value.ofType(Quantity).value = 105)" />
    </test>

    <test id="scenario5-2-serve-all-pulserates">
        <name value="Scenario 5.2"/>
        <description value="Serve latest PulseRate Observation resources"/>
        <nts:include value="medmij/test.xis.search" scope="common"
            resource="Observation"
            params="/$lastn?code=http://loinc.org|8893-0"/>
        <nts:include value="assert.response.queryParamsInSelfLink" scope="common"/>
        <nts:include value="assert.response.success" scope="common"/>
        <nts:include value="assert.response.numResources" scope="common"
            resource="Observation" count="1"/>

        <action>
            <assert>
                <description value="Confirm that the latest observation resource has the correct PulseRate value"/>
                <direction value="response"/>
                <expression value="Bundle.entry.resource.ofType(Observation).where(value.ofType(Quantity).value = 63).exists()"/>
            </assert>
        </action>
    </test>

    <test id="scenario5-3-serve-all-pulserates">
        <name value="Scenario 5.3"/>
        <description value="Serve period PulseRate Observation resources"/>
        <nts:include value="medmij/test.xis.search" scope="common"
            resource="Observation"
            params="?code=http://loinc.org|8893-0&amp;date=ge${DATE, T, D,-800}&amp;date=le${DATE, T, D,-10}"/>
        <nts:include value="assert.response.queryParamsInSelfLink" scope="common"/>
        <nts:include value="assert.response.success" scope="common"/>
        <nts:include value="assert.response.numResources" scope="common"
            resource="Observation" count="3"/>

        <action>
            <assert>
                <description value="Confirm that resources contain the correct values"/>
                <direction value="response"/>
                <expression value="Bundle.entry.resource.ofType(Observation).where(value.ofType(Quantity).value = 63).exists()"/>
            </assert>
        </action>
        <action>
            <assert>
                <description value="Confirm that resources contain the correct values"/>
                <direction value="response"/>
                <expression value="Bundle.entry.resource.ofType(Observation).where(value.ofType(Quantity).value = 67).exists()"/>
            </assert>
        </action>
        <action>
            <assert>
                <description value="Confirm that resources contain the correct values"/>
                <direction value="response"/>
                <expression value="Bundle.entry.resource.ofType(Observation).where(value.ofType(Quantity).value = 72).exists()"/>
            </assert>
        </action>
    </test>

    <test id="scenario5-4-serve-all-pulserates">
        <name value="Scenario 5.4"/>
        <description value="Serve period PulseRate Observation resources"/>
        <nts:include value="medmij/test.xis.search" scope="common"
            resource="Observation"
            params="?code=http://loinc.org|8893-0&amp;date=ge${DATE, T, D,-72}&amp;date=le${DATE, T, D,-16}"/>
        <nts:include value="assert.response.queryParamsInSelfLink" scope="common"/>
        <nts:include value="assert.response.success" scope="common"/>
        <nts:include value="assert.response.numResources" scope="common"
            resource="Observation" count="0"/>
    </test>
</TestScript>
