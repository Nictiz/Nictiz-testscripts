<?xml version="1.0" encoding="UTF-8"?>
<?xml-model href="http://hl7.org/fhir/STU3/testscript.sch" type="application/xml" schematypens="http://purl.oclc.org/dsdl/schematron"?>
<TestScript xmlns="http://hl7.org/fhir" xmlns:nts="http://nictiz.nl/xsl/testscript"
    nts:scenario="server">
    <id value="xis-1-9-serve-heartrate"/>
    <version value="stu3-2.0"/>
    <name
        value="SelfMeasurements - XIS Server - Test Scenario 9.X - Serve heartrate Observation resources"/>
    <description value="Scenario 9.X - Serve all heartrate Observation resources"/>
    <nts:authToken patientResourceId="selfmeasurements-Patient-XXX-Smorenburg"/>
    <nts:includeDateT value="yes"/>

    <test id="scenario9-1-serve-all-heartrate">
        <name value="Scenario 9.1"/>
        <description value="Serve all heartrate Observation resources"/>
        <nts:include value="medmij/test.xis.successfulSearch" scope="common"
            resource="Observation"
            params="?code=http://loinc.org|8867-4"/>
        
        <nts:contentAsserts href="resources-serve-retrieve/selfmeasurements-HeartRate1.xml" expression=".where(value.ofType(Quantity).value = 63)" description="contains valueQuantity.value = '63'"/>
        <nts:contentAsserts href="resources-serve-retrieve/selfmeasurements-HeartRate2.xml" expression=".where(value.ofType(Quantity).value = 96)" description="contains valueQuantity.value = '96'"/>
        <nts:contentAsserts href="resources-serve-retrieve/selfmeasurements-HeartRate3.xml" expression=".where(value.ofType(Quantity).value = 72)" description="contains valueQuantity.value = '72'"/>
        <nts:contentAsserts href="resources-serve-retrieve/selfmeasurements-HeartRate4.xml" expression=".where(value.ofType(Quantity).value = 65)" description="contains valueQuantity.value = '65'"/>
        <nts:contentAsserts href="resources-serve-retrieve/selfmeasurements-HeartRate5.xml" expression=".where(value.ofType(Quantity).value = 64)" description="contains valueQuantity.value = '64'"/>
    </test>

    <test id="scenario9-2-serve-all-heartrate">
        <name value="Scenario 9.2"/>
        <description value="Serve latest heartrate Observation resources"/>
        <nts:include value="medmij/test.xis.search" scope="common"
            resource="Observation"
            params="/$lastn?code=http://loinc.org|8867-4"/>
        <nts:include value="assert.response.queryParamsInSelfLink" scope="common"/>
        <nts:include value="assert.response.success" scope="common"/>
        <nts:include value="assert.response.numResources" scope="common"
            resource="Observation" count="1"/>

        <action>
            <assert>
                <description value="Confirm that the latest observation resource has the correct heartrate value"/>
                <direction value="response"/>
                <expression value="Bundle.entry.resource.ofType(Observation).where(value.ofType(Quantity).value = 63).exists()"/>
            </assert>
        </action>
    </test>

    <test id="scenario9-3-serve-all-heartrates">
        <name value="Scenario 9.3"/>
        <description value="Serve period heartrate Observation resources"/>
        <nts:include value="medmij/test.xis.search" scope="common"
            resource="Observation"
            params="?code=http://loinc.org|8867-4&amp;date=ge${DATE, T, D,-120}&amp;date=le${DATE, T, D,-100}"/>
        <nts:include value="assert.response.queryParamsInSelfLink" scope="common"/>
        <nts:include value="assert.response.success" scope="common"/>
        <nts:include value="assert.response.numResources" scope="common"
            resource="Observation" count="2"/>

        <action>
            <assert>
                <description value="Confirm that resources contain the correct values"/>
                <direction value="response"/>
                <expression value="Bundle.entry.resource.ofType(Observation).where(value.ofType(Quantity).value = 65).exists()"/>
            </assert>
        </action>
        <action>
            <assert>
                <description value="Confirm that resources contain the correct values"/>
                <direction value="response"/>
                <expression value="Bundle.entry.resource.ofType(Observation).where(value.ofType(Quantity).value = 64).exists()"/>
            </assert>
        </action>        
    </test>

    <test id="scenario9-4-serve-all-heartrates">
        <name value="Scenario 9.4"/>
        <description value="Serve period heartrate Observation resources"/>
        <nts:include value="medmij/test.xis.search" scope="common"
            resource="Observation"
            params="?code=http://loinc.org|8867-4&amp;date=ge${DATE, T, D,-80}&amp;date=le${DATE, T, D,-40}"/>
        <nts:include value="assert.response.queryParamsInSelfLink" scope="common"/>
        <nts:include value="assert.response.success" scope="common"/>
        <nts:include value="assert.response.numResources" scope="common"
            resource="Observation" count="0"/>
    </test>
</TestScript>
