<?xml version="1.0" encoding="UTF-8"?>
<?xml-model href="http://hl7.org/fhir/STU3/testscript.sch" type="application/xml" schematypens="http://purl.oclc.org/dsdl/schematron"?>
<TestScript xmlns="http://hl7.org/fhir" xmlns:nts="http://nictiz.nl/xsl/testscript"
    nts:scenario="client">
    <id value="phr-2-1-send-most-recent-bodyweight"/>
    <version value="stu3-2.0"/>
    <name
        value="SelfMeasurements - PHR Client - Scenario 2.1 - Send most recent BodyWeight Observation resource"/>
    <description value="Scenario 2.1 - Send most recent BodyWeight Observation resource"/>
    <nts:patientTokenFixture href="selfmeasurements-nl-core-patient-XXX-Bergzoon-token.xml"/>
    <nts:fixture id="scenario-2-1-bundle-fixture"
        href="resources-query-send/medmij-selfmeasurements-query-send-scenario-2-1-bundle.xml"/>
    <nts:includeDateT value="yes"/>

    <test id="scenario2-1-send-most-recent-bodyweight">
        <name value="Scenario 2.1"/>
        <description value="Send most recent BodyWeight Observation resource"/>
        <nts:include value="operation-create-bundle-batch" resource="Observation" contentType="xml"
            sourceId="scenario-2-1-bundle-fixture"/>
        <nts:include value="medmij/assert.request.general" scope="common"/>
        <nts:include value="medmij/assert.request.bundleContent" scope="common"/>
        <nts:include value="assert.response.success" scope="common"/>
        <nts:include value="assert.response.numResources" scope="common"
            resource="Observation" count="1"/>
        <nts:include value="assert.request.numResources" scope="common" resource="Patient" count="1"/>
        <nts:include value="assert.request.numResources" scope="common" resource="Observation"
            count="1"/>
        <action>
            <assert>
                <description
                    value="Confirm that the Observation resource has a LOINC code for Bodyweight in the code element"/>
                <direction value="request"/>
                <expression
                    value="Bundle.entry.resource.ofType(Observation).code.coding.where(code = '29463-7').exists()"
                />
            </assert>
        </action>
    </test>
</TestScript>
