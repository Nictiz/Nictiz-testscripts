<?xml version="1.0" encoding="UTF-8"?>
<?xml-model href="http://hl7.org/fhir/STU3/testscript.sch" type="application/xml" schematypens="http://purl.oclc.org/dsdl/schematron"?>
<TestScript xmlns="http://hl7.org/fhir" xmlns:nts="http://nictiz.nl/xsl/testscript"
    nts:scenario="client">
    <id value="phr-1-5-retrieve-period-bloodpressure"/>
    <version value="stu3-2.0"/>
    <name
        value="SelfMeasurements - PHR Client - Scenario 1.5 - Retrieve BloodPressure Observation resources"/>
    <description value="Scenario 1.5 - Retrieve BloodPressure Observation resources in a period"/>
    <nts:patientTokenFixture href="selfmeasurements-nl-core-patient-XXX-Bourgonjee-token.xml"/>
    <nts:includeDateT value="yes"/>

    <test id="scenario1-5-retrieve-period-bloodpressure">
        <name value="Scenario 1.5"/>
        <description value="Query BloodPressure Observation resources in a period"/>
        <nts:include value="medmij/test.searchWithParams.phr" scope="common"
            resource="Observation"
            params="?code=http://loinc.org|85354-9&amp;date=ge${DATE, T, D,-100}&amp;date=le${DATE, T, D,-50}"/>
        <nts:include value="canary-assert.successfulSearch.response" scope="common"/>
        <nts:include value="assert.numResources.response" scope="common"
            resource="Observation" count="0"/>
    </test>
</TestScript>
