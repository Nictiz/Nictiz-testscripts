<?xml version="1.0" encoding="UTF-8"?>
<TestScript xmlns="http://hl7.org/fhir" xmlns:nts="http://nictiz.nl/xsl/testscript" nts:scenario="server">
    <id value="medmij-medication-dispense612conversion-xis-3-1b"/>
    <version value="stu3-9.0.7"/>
    <name value="Medication Process 9.0.7  - Dispense 612 Conversion - XIS Server - Scenario 3.1b - Filter op verstrekkingsperiode, alles vanaf T-90."/>
    <description value="Scenario 3.1b - Filter op verstrekkingsperiode, alles vanaf T-90. Patient Peter P. Veenoord."/>
    <nts:authToken patientResourceId="VEENOORD"/>
    <nts:includeDateT value="yes"/>

    <test id="Scenario-3-1b">
        <name value="Scenario 3.1b"/>
        <description value="Filter op verstrekkingsperiode, alles vanaf T-90."/>
        <nts:include value="xis-operation-search">
            <nts:with-parameter name="description" value="Test XIS Server search operation - Filter op verstrekkingsperiode, alles vanaf T-90."/>
            <nts:with-parameter name="resource" value="MedicationDispense"/>
            <nts:with-parameter name="accept" value="xml"/>
            <nts:with-parameter name="params" value="?category=http://snomed.info/sct|373784005,http://snomed.info/sct|422037009&amp;_include=MedicationDispense:medication&amp;_include=MedicationDispense:patient&amp;_include=MedicationDispense:performer&amp;requestdate=ge${DATE, T, D,-90}"/>
        </nts:include>
        <nts:include value="medmij/assert.request.general" scope="common" />
        <nts:include value="medmij/assert.response.successfulSearch" scope="common"/>
        <action>
            <assert>
                <description value="Confirm that the returned searchset Bundle contains at least 14 entries."/>
                <direction value="response"/>
                <expression value="Bundle.entry.count() &gt;= 14"/>
                <warningOnly value="true"/>
            </assert>
        </action>
        <action>
            <assert>
                <description value="Confirm that number of administration agreement resources match the expected number."/>
                <direction value="response"/>
                <expression value="Bundle.entry.resource.where(is(MedicationDispense) and category.coding.code = '422037009').count() = 5 "/>
                <warningOnly value="true"/>
            </assert>
        </action>
        <action>
            <assert>
                <description value="Confirm that number of dispense resources match the expected number."/>
                <direction value="response"/>
                <expression value="Bundle.entry.resource.where(is(MedicationDispense) and category.coding.code = '373784005').count() = 5 "/>
                <warningOnly value="true"/>
            </assert>
        </action>
    </test>
</TestScript>