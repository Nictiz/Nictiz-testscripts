<?xml version="1.0" encoding="UTF-8"?>
<TestScript xmlns="http://hl7.org/fhir" xmlns:nts="http://nictiz.nl/xsl/testscript" nts:scenario="client">
    <id value="medmij-medication-administrationagreement-phr-1-3"/>
    <version value="stu3-9.0.7"/>
    <name value="Medication Process 9.0.7  - AdmininstrationAgreement - PHR Client - Scenario 1.3"/>
    <description value="Scenario 1.3 - Toedieningsafspraken met een filter op meerdere product codes."/>
    <nts:authToken patientResourceId="XXX-DIRKSZ"/>

    <test id="Scenario-1-3">
        <name value="Scenario 1.3"/>
        <description value="Toedieningsafspraken met een filter op meerdere product codes."/>
        <nts:include value="phr-operation-search">
            <nts:with-parameter name="description" value="Query MedicationDispense resource(s) for AdministrationAgreement"/>
            <nts:with-parameter name="resource" value="MedicationDispense"/>
            <nts:with-parameter name="params" value="?category=http://snomed.info/sct|422037009&amp;medication.code=urn:oid:2.16.840.1.113883.2.4.4.7|229709,urn:oid:2.16.840.1.113883.2.4.4.7|615560,urn:oid:2.16.840.1.113883.2.4.4.7|202185&amp;_include=MedicationDispense:medication"/>
        </nts:include>
        <nts:include value="medmij/assert.request.general" scope="common" />
        <nts:include value="medmij/assert.response.successfulSearch" scope="common"/>
        <nts:include value="assert.response.numResources" scope="common">
            <nts:with-parameter name="resource" value="MedicationDispense"/>
            <nts:with-parameter name="count" value="3"/>
        </nts:include>
        <nts:include value="assert-returnEntryCount" scope="project">
            <nts:with-parameter name="count" value="6"/>
            <nts:with-parameter name="breakdown" value=" (3 MedicationDispense and 3 Medication resources)"/>
        </nts:include>
    </test>
</TestScript>
