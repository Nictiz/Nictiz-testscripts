<?xml version="1.0" encoding="UTF-8"?>
<nts:component xmlns="http://hl7.org/fhir" xmlns:nts="http://nictiz.nl/xsl/testscript">
    <action>
        <assert>
            <description value="Test if the pharmaceutical extension 'http://nictiz.nl/fhir/StructureDefinition/ext-imm-Vaccination.PharmaceuticalProduct' occurs {$count} times." />
            <direction value="{$direction}" /> 
            <expression value= "Bundle.entry.resource.where($this is Immunization).extension.where(url = 'http://nictiz.nl/fhir/StructureDefinition/ext-imm-Vaccination.PharmaceuticalProduct').count() = {$count}" />
        </assert>
    </action>
    <action>
        <assert>
            <description value="Test if the reference of type 'Medication' occurs {$count} times." />
            <direction value="{$direction}" /> 
            <expression value= "Bundle.entry.resource.where($this is Immunization).extension.value.where(type = 'Medication').reference.count() = {$count}" />
        </assert>
    </action>
</nts:component>