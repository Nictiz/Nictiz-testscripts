<?xml version="1.0" encoding="UTF-8"?>
<TestScript xmlns="http://hl7.org/fhir" xmlns:nts="http://nictiz.nl/xsl/testscript"
    nts:scenario="client">
    <id value="lab-3-0-l2z-loa-send-max-kc-nhg-2-4"/>
    <version value="r4-lab-3.0.0-beta.3"/>
    <name
        value="LaboratoryResults - Scenario 2.4 - Send DiagnosticReport on request"/>
    <description value="Scenario 2.4 - Send DiagnosticReport on request"/>
    <nts:authToken patientResourceId="lab-Patient-kwalificatie2"/>
    <nts:fixture id="lr-loa-KWAL-l2z-1Maximaal-bericht-aanvraag-4KCNHG"
        href="resources-to-sendreceive/lr-loa-KWAL-l2z-1Maximaal-bericht-aanvraag-4KCNHG.xml"/>
    <!-- <nts:includeDateT value="yes"/> -->
    
    <test id="scenario2-4-send-diagnostic-report-on-request">
        <name value="Scenario 2.4"/>
        <description value="Send DiagnosticReport on request"/>
        <nts:include value="assert.request.numResources" scope="common"
            resource="DiagnosticReport" count="1"/>
        <nts:include value="assert.request.numResources" scope="common"
            resource="Observation" count="1"/>
        <nts:include value="assert.request.numResources" scope="common"
            resource="ServiceRequest" count="1"/>
        <nts:include value="assert.request.numResources" scope="common"
            resource="Specimen" count="1"/>
        <nts:include value="assert.request.numResources" scope="common"
            resource="Organization" count="1"/>
        <nts:include value="assert.request.numResources" scope="common"
            resource="Patient" count="1"/>
        <action>
            <assert>
                <description value="Confirm that the Observation resource has a NHG code for Glucose nuchter, draagbare meter in the code element"/>
                <direction value="request"/>
                <expression value="Bundle.entry.resource.ofType(Observation).code.coding.where(code = '382').exists()"/>
            </assert>
        </action>
    </test>
</TestScript>
