<?xml version="1.0" encoding="UTF-8"?>
<?xml-model href="http://hl7.org/fhir/STU3/testscript.sch" type="application/xml" schematypens="http://purl.oclc.org/dsdl/schematron"?>
<TestScript xmlns="http://hl7.org/fhir" xmlns:nts="http://nictiz.nl/xsl/testscript"
    nts:scenario="client">
    
    <id value="CERT-xis-3-prescription"/>
    <version value="R4-3.0"/>
    <name value="LaboratoryResults - LAB-LRS - Scenario 3 - Send a LOINC coded laboratory result along with a medication prescription."/>
    <description value="Scenario 3 - Send a LOINC coded laboratory result along with a medication prescription"/>
    
    <nts:fixture id="CERT-scenario-3-prescription-fixture"
        href="sendreceive/lr-slr-KWAL-KC-LOINC-Nierfunctie-Scenario3-3.xml"/>
    <nts:includeDateT value="yes"/>
    
    <test id="lab-Scenarioset3">
        <name value="Scenario 3"/>
        <description value="Send a LOINC coded panel of laboratory results along with a medication prescription."/>

        <!--General asserts-->
        <nts:include value="test.client.transaction" scope="common" sourceId="CERT-scenario-3-prescription-fixture"/>
        <nts:include value="test.client.successfulTransaction" scope="common"/>
        <nts:include value="assert.request.numResources" scope="common" resource="Specimen" count="1"/>
        <nts:include value="assert.request.numResources" scope="common" resource="Organization" count="1"/>
        <nts:include value="assert.request.numResources" scope="common" resource="MedicationRequest" count="1" warningOnly="true"/>
        <nts:include value="assert.request.numResources" scope="common" resource="Patient" count="1"/>
        
        <!--Initial asserts to check the lab result codes and status-->
        <nts:include value="assert.numberofcodes" direction="request" resource="Observation" system="http://loinc.org" count="1"/>
        <nts:include value="assert.code" direction="request" resource="Observation" labcode="62238-1" labsystem="http://loinc.org"/>

        <!-- Asserts for checking the Patient resource to be compliant with the wiki page on
        https://informatiestandaarden.nictiz.nl/wiki/Lab:V3.0.0_kwalificatie_sturen-->
        <nts:include value="assert.identifier" direction="request" resource="Patient" system="http://fhir.nl/fhir/NamingSystem/bsn" identifier="999910966"/> 
        
        <!-- Asserts for checking one Observation to be compliant with the wiki page on
            https://informatiestandaarden.nictiz.nl/wiki/Lab:V3.0.0_kwalificatie_sturen-->
        <nts:include value="assert.identifier" direction="request" resource="Observation" system="urn:oid:2.16.840.1.113883.2.4.3.11.999.25.4298.2" identifier="54321"/>
        <nts:include value="assert.valuequantity" direction="request" resource="Observation" labcode="62238-1" labsystem="http://loinc.org" quantity="25" system="http://unitsofmeasure.org" code="mL/min/{1.73_m2}"/>
        <nts:include value="assert.status" direction="request" resource="Observation" labcode="62238-1" labsystem="http://loinc.org" status="final"/>
        <nts:include value="assert.referencerange" direction="request" resource="Observation" labcode="62238-1" labsystem="http://loinc.org" range="low" rangevalue="90" system="http://unitsofmeasure.org" code="mL/min/{1.73_m2}"/>
        <nts:include value="assert.interpretation" direction="request" resource="Observation" labcode="62238-1" interpretation="Waarde is te laag. Stadum 4 nierfalen, ernstige nierfunctiestoornis."/>
        
           
        <!-- Asserts for checking the performing Organization resource(s) to be compliant with the wiki page on
           https://informatiestandaarden.nictiz.nl/wiki/Lab:V3.0.0_kwalificatie_sturen-->
        <nts:include value="assert.identifier" direction="request" resource="Organization" system="XXX" identifier="XXX"/>
        
    </test>
</TestScript>

       