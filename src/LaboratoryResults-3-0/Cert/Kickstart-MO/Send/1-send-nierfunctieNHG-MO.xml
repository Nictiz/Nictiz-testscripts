<?xml version="1.0" encoding="UTF-8"?>
<?xml-model href="http://hl7.org/fhir/STU3/testscript.sch" type="application/xml" schematypens="http://purl.oclc.org/dsdl/schematron"?>
<TestScript xmlns="http://hl7.org/fhir" xmlns:nts="http://nictiz.nl/xsl/testscript"
    nts:scenario="client">
    
    <id value="CERT-xis-1-prescription"/>
    <version value="R4-3.0"/>
    <name value="LaboratoryResults - LAB-LRS - Scenario 1 - Send a NHG coded laboratory result along with a medication prescription."/>
    <description value="Scenario 1 - Send a NHG coded laboratory result along with a medication prescription"/>
    
    <nts:fixture id="CERT-scenario-1-prescription-fixture"
        href="resources-to-sendreceive/lr-slr-KWAL-KC-NHG-Nierfunctie-Scenario1-1"/>
    <nts:includeDateT value="yes"/>
    
    <test id="lab-Scenarioset1">
        <name value="Scenario 1"/>
        <description value="Send a NHG coded panel of laboratory results along with a medication prescription."/>

        <!--General asserts -->
        <nts:include value="test.client.transaction" scope="common" sourceId="CERT-scenario-1-prescription-fixture"/>
        <nts:include value="test.client.successfulTransaction" scope="common"/>
        <nts:include value="assert.request.numResources" scope="common" resource="Specimen" count="1"/>
        <nts:include value="assert.request.numResources" scope="common" resource="Organization" count="1"/>
        <nts:include value="assert.request.numResources" scope="common" resource="MedicationRequest" count="1" warningOnly="true"/>
        <nts:include value="assert.request.numResources" scope="common" resource="Patient" count="1"/>
        
         <!-- Asserts for checking the Patient resource to be compliant with the wiki page on
        https://informatiestandaarden.nictiz.nl/wiki/Lab:1.0.0_Testgegevens_SturenResultaten-->
        <nts:include value="assert.identifier" direction="request" resource="Patient" system="http://fhir.nl/fhir/NamingSystem/bsn" identifier="999910966"/> 
        

        <!--Initial asserts to check the lab result codes and status-->
        <nts:include value="assert.numberofcodes" direction="request" resource="Observation" system="https://referentiemodel.nhg.org/tabellen/nhg-tabel-45-diagnostische-bepalingen" count="1"/>
        <nts:include value="assert.code" direction="request" resource="Observation" labcode="3583" labsystem="https://referentiemodel.nhg.org/tabellen/nhg-tabel-45-diagnostische-bepalingen"/>
        <nts:include value="assert.code" direction="request" resource="Observation" labcode="3583" labsystem="https://referentiemodel.nhg.org/tabellen/nhg-tabel-45-diagnostische-bepalingen"/>    
                
        <!-- Asserts for checking Observations to be compliant with the wiki page on
            https://informatiestandaarden.nictiz.nl/wiki/Lab:V3.0.0_kwalificatie_sturen-->
        <nts:include value="assert.valuequantity" direction="request" resource="Observation" labcode="3583" labsystem="https://referentiemodel.nhg.org/tabellen/nhg-tabel-45-diagnostische-bepalingen" quantity="25" system="http://unitsofmeasure.org" code="{ml/min/1,73m2}"/>
        <nts:include value="assert.referencerange" direction="request" resource="Observation" labcode="3583" labsystem="https://referentiemodel.nhg.org/tabellen/nhg-tabel-45-diagnostische-bepalingen" range="low" rangevalue="90" system="http://unitsofmeasure.org" code="{ml/min/1,73m2}"/>
        <nts:include value="assert.status" direction="request" resource="Observation" labcode="3583" labsystem="https://referentiemodel.nhg.org/tabellen/nhg-tabel-45-diagnostische-bepalingen" status="XXX"/>
        <nts:include value="assert.interpretation" direction="request" resource="Observation" interpretation="Waarde is te laag. Stadium 4 nierfalen, ernstige nierfunctiestoornis."/>
        
        <!--Asserts for checking the Specimen resource(s) to be compliant with the wiki page on
            https://informatiestandaarden.nictiz.nl/wiki/Lab:V3.0.0_kwalificatie_sturen-->
        <nts:include value="assert.identifier" direction="request" resource="Specimen" system="urn:oid:2.16.840.1.113883.2.4.3.11.999.25.4267.2" identifier="15"/>
        <nts:include value="assert.note" direction="request" resource="Specimen" note="Urine ingeleverd door patiÃ«nt."/>
        
        <!-- Asserts for checking the performing Organization resource(s) to be compliant with the wiki page on
           https://informatiestandaarden.nictiz.nl/wiki/Lab:V3.0.0_kwalificatie_sturen-->
        <nts:include value="assert.identifier" direction="request" resource="Organization" system="http://fhir.nl/fhir/NamingSystem/ura" identifier="00003333"/>
    
    </test>
</TestScript>
