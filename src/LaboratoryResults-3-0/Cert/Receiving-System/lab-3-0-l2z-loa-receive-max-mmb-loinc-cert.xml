<?xml version="1.0" encoding="UTF-8"?>
<TestScript xmlns="http://hl7.org/fhir" xmlns:nts="http://nictiz.nl/xsl/testscript"
            nts:scenario="server">
    <id value="lab-3-0-l2z-loa-receive-max-mmb-loinc-cert-1-1"/>
    <version value="r4-lab-3.0.0-beta.3"/>
    <name
        value="LaboratoryResults - Scenario 1.1 - Receive DiagnosticReport on request"/>
    <description value="Scenario 1.1 - Receive DiagnosticReport on request"/>
    <nts:authToken patientResourceId="lab-Patient-kwalificatie1"/>
    <nts:fixture id="lr-loa-KWAL-l2z-1Maximaal-bericht-aanvraag-1MMBLOINC"
                 href="resources-to-sendreceive/lr-loa-KWAL-l2z-1Maximaal-bericht-aanvraag-1MMBLOINC.{$_FORMAT}"/>
    <nts:includeDateT value="yes"/>
    
    <test id="scenario1-1-receive-diagnostic-report-on-request">
        <name value="Scenario 1.1"/>
        <description value="Receive DiagnosticReport on request"/>
        <nts:include value="assert.response.success" scope="common"/>
        <nts:include value="assert.response.bundleContent"
                    scope="common"
                    bundleType="transaction-response"/>
        <nts:include value="assert.request.numResources" scope="common"
                     resource="DiagnosticReport" count="1"/>
        <nts:include value="assert.request.numResources" scope="common"
                     resource="Observation" count="1"/>
        <nts:include value="assert.request.numResources" scope="common"
                     resource="ServiceRequest" count="1"/>
        <nts:include value="assert.request.numResources" scope="common"
                     resource="Specimen" count="1"/>
        <nts:include value="assert.request.numResources" scope="common"
                     resource="Organization" count="1"/>
        <nts:include value="assert.request.numResources" scope="common"
                     resource="Patient" count="1"/>
        <action>
            <assert>
                <description value="Confirm that the Observation resource has a LOINC code for SARS-CoV-2 RNA in the code element"/>
                <direction value="request"/>
                <expression value="Bundle.entry.resource.where($this is Observation).code.coding.where(code = '94309-2').exists()"/>
            </assert>
        </action>
    </test>
</TestScript>
