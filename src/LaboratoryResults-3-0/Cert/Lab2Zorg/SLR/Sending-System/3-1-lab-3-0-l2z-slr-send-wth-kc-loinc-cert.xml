<?xml version="1.0" encoding="UTF-8"?>
<TestScript xmlns="http://hl7.org/fhir" xmlns:nts="http://nictiz.nl/xsl/testscript"
            nts:scenario="client">
    <id value="3-1-lab-3-0-l2z-slr-send-wth-kc-loinc-cert"/>
    <version value="r4-lab-3.0.0-beta.3"/>
    <name
        value="LaboratoryResults - Scenario 3.1 - Send Observation (with another message)"/>
    <description value="Scenario 3.1 - Send Observation (with another message)"/>
    <nts:fixture id="lr-slr-KWAL-l2z-3Meesturen-met-ander-bericht-MO-3KCLOINC"
                 href="resources-to-sendreceive/lr-slr-KWAL-l2z-3Meesturen-met-ander-bericht-MO-3KCLOINC.xml"
                 nts:in-targets="Nictiz-intern"/>
    <nts:includeDateT value="yes" nts:in-targets="Nictiz-intern"/>
    
    <test id="scenario3-1-send-observation-with-another-message">
        <name value="Scenario 3.1"/>
        <description value="Send Observation (with another message)"/>
        <action>
            <operation>
                <type>
                <system value="http://terminology.hl7.org/CodeSystem/testscript-operation-codes"/>
                <code value="transaction"/>
                </type>
                <description value="Test client to POST a Bundle of type transaction."/>
                <destination value="1"/>
                <origin value="1"/>
                <responseId value="transaction-response-fixture"/>
                <sourceId value="lr-slr-KWAL-l2z-3Meesturen-met-ander-bericht-MO-3KCLOINC"
                        nts:in-targets="Nictiz-intern"/>
            </operation>
        </action>
        <nts:include value="test.client.successfulTransaction" scope="common"/>
        <nts:include value="assert.request.numResources" scope="common"
            resource="Observation" count="1"/>
        <nts:include value="assert.request.numResources" scope="common"
            resource="Device" count="1"/>
        <nts:include value="assert.request.numResources" scope="common"
            resource="Specimen" count="1"/>
        <nts:include value="assert.request.numResources" scope="common"
            resource="Organization" count="1"/>
        <nts:include value="assert.request.numResources" scope="common"
            resource="Patient" count="1"/>
        <action>
            <assert>
                <description value="Confirm that the Observation resource has a LOINC code for Glomerulaire filtratiesnelheid/1,73 m2.voorspeld [filtratiesnelheid/oppervlakte] in serum of plasma of bloed d.m.v. formule gebaseerd op creatinine (CKD-EPI)formule in the code element"/>
                <direction value="request"/>
                <expression value="Bundle.entry.resource.where($this is Observation).code.coding.where(code = '62238-1').exists()"/>
            </assert>
        </action>
    </test>
</TestScript>
