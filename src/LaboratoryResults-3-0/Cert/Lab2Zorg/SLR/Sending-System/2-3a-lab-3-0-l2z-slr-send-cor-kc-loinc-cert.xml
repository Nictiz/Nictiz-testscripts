<?xml version="1.0" encoding="UTF-8"?>
<TestScript xmlns="http://hl7.org/fhir" xmlns:nts="http://nictiz.nl/xsl/testscript"
    nts:scenario="client">
    <id value="2-3a-lab-3-0-l2z-slr-send-cor-kc-loinc-cert"/>
    <version value="r4-lab-3.0.0-beta.3"/>
    <name
        value="LaboratoryResults - Scenario 2.3A - Send Observation (with an error)"/>
    <description value="Scenario 2.3A - Send Observation (with an error)"/>
    <nts:fixture id="lr-slr-KWAL-l2z-2Gecorrigeerd-bericht-3AKCLOINCBasis"
                 href="resources-to-sendreceive/lr-slr-KWAL-l2z-2Gecorrigeerd-bericht-3AKCLOINCBasis.xml"
                 nts:in-targets="Nictiz-intern"/>
    <nts:includeDateT value="yes" nts:in-targets="Nictiz-intern"/>
    
    <test id="scenario2-3a-send-observation-error">
        <name value="Scenario 2.3A"/>
        <description value="Send Observation (with an error)"/>
        <action>
            <operation>
                <type>
                <system value="http://terminology.hl7.org/CodeSystem/testscript-operation-codes"/>
                <code value="transaction"/>
                </type>
                <description value="Test client to POST a Bundle of type transaction."/>
                <destination value="1"/>
                <origin value="1"/>
                <responseId value="transaction-response-fixture"/>
                <sourceId value="lr-slr-KWAL-l2z-2Gecorrigeerd-bericht-3AKCLOINCBasis"
                        nts:in-targets="Nictiz-intern"/>
            </operation>
        </action>
        <nts:include value="test.client.successfulTransaction" scope="common"/>
        <nts:include value="assert.request.numResources" scope="common"
            resource="Observation" count="1"/>
        <nts:include value="assert.request.numResources" scope="common"
            resource="Specimen" count="1"/>
        <nts:include value="assert.request.numResources" scope="common"
            resource="Organization" count="1"/>
        <nts:include value="assert.request.numResources" scope="common"
            resource="Patient" count="1"/>
        <action>
            <assert>
                <description value="Confirm that the Observation resource has a LOINC code for PT-INR [relatieve tijd] in plaatjesarm plasma d.m.v. stollingsmethode in the code element"/>
                <direction value="request"/>
                <expression value="Bundle.entry.resource.where($this is Observation).code.coding.where(code = '6301-6').exists()"/>
            </assert>
        </action>
    </test>
</TestScript>

