<?xml version="1.0" encoding="UTF-8"?>
<TestScript xmlns="http://hl7.org/fhir" xmlns:nts="http://nictiz.nl/xsl/testscript"
            nts:scenario="server">
    <id value="1-1-lab-3-0-l2z-slr-receive-max-mmb-loinc-cert"/>
    <version value="r4-lab-3.0.0-beta.3"/>
    <name
        value="LaboratoryResults - Scenario 1.1 - Receive Observation"/>
    <description value="Scenario 1.1 - Receive Observation"/>
    <nts:fixture id="lr-slr-KWAL-l2z-1Maximaal-bericht-1MMBLOINC"
                 href="resources-to-sendreceive/lr-slr-KWAL-l2z-1Maximaal-bericht-1MMBLOINC.{$_FORMAT}"/>
    <nts:includeDateT value="yes"/>
    
    <test id="scenario1-1-receive-observation">
        <name value="Scenario 1.1"/>
        <description value="Receive Observation"/>
        <action>
            <operation>
                <type>
                    <system value="http://terminology.hl7.org/CodeSystem/testscript-operation-codes"/>
                    <code value="transaction"/>
                </type>
                <description value="Test server to handle a Bundle of type transaction."/>
                <contentType value="{$_FORMAT}"/>
                <destination value="1"/>
                <origin value="1"/>
                <requestHeader>
                    <field value="Prefer"/>
                    <value value="return=representation"/>
                </requestHeader>
                <sourceId value="lr-slr-KWAL-l2z-1Maximaal-bericht-1MMBLOINC"/>
            </operation>
        </action>
        <nts:include value="assert.response.success" scope="common"/>
        <nts:include value="assert.response.bundleContent"
                    scope="common"
                    bundleType="transaction-response"/>
        <nts:include value="assert.request.numResources" scope="common"
            resource="Observation" count="1"/>
        <nts:include value="assert.request.numResources" scope="common"
            resource="Specimen" count="1"/>
        <nts:include value="assert.request.numResources" scope="common"
            resource="Organization" count="1"/>
        <nts:include value="assert.request.numResources" scope="common"
            resource="Patient" count="1"/>
        <action>
            <assert>
                <description value="Confirm that the Observation resource has a LOINC code for Adenovirus 40+41 Ag [aanwezigheid] in feces in the code element"/>
                <direction value="request"/>
                <expression value="Bundle.entry.resource.where($this is Observation).code.coding.where(code = '31709-9').exists()"/>
            </assert>
        </action>
        <teardown nts:in-targets = "Nictiz-intern">
            <action>
                <operation>
                    <type>
                        <system value="http://hl7.org/fhir/restful-interaction"/>
                        <code value="delete"/>
                    </type>
                    <code value="om de aangemaakte resources te verwijderen"/>
                </operation>
            </action>
        </teardown>
    </test>
</TestScript>
