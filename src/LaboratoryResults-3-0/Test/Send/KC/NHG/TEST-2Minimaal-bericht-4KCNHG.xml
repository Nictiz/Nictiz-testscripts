        <name value="Scenario 4 KC NHG"/>
        <description value="Send KC laboratory results with a NHG code."/>
        <nts:include value="test.client.transaction" scope="common" sourceId="TEST-2-4KCNHG"/>
         <nts:include value="test.client.successfulTransaction" scope="common"/>
        <nts:include value="assert.request.numResources" scope="common" resource="Observation" count="1"/>
