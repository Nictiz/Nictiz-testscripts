<?xml version="1.0" encoding="UTF-8"?>
<?xml-model href="http://hl7.org/fhir/STU3/testscript.sch" type="application/xml" schematypens="http://purl.oclc.org/dsdl/schematron"?>
<TestScript xmlns="http://hl7.org/fhir" xmlns:nts="http://nictiz.nl/xsl/testscript"
    nts:scenario="client">
  
    <id value="KWAL-l2z-1Maximaal-bericht-aanvraag-1MMBLOINC"/>
    <version value="R4-3.0"/>
    <name value="LaboratoryResults - Maximaal bericht aanvraag - Scenario 1 MMB LOINC."/>
    <description value="Scenario 1 MMB LOINC - Send MMB results with a LOINC code."/>
 
    <nts:fixture id="KWAL-loa-1-1MMBLOINC"
        href="Sending-XIS/lr-loa-KWAL-l2z-1Maximaal-bericht-aanvraag-1MMBLOINC.xml"/>
    <nts:includeDateT value="yes"/>

    <test id="Maximaal-bericht Scenario 1 MMB LOINC">
        <name value="Scenario 1 MMB LOINC"/>
        <description value="Send MMB laboratory results with a LOINC code."/>
        <nts:include value="test.client.transaction" scope="common" sourceId="KWAL-loa-1-1MMBLOINC"/>
        <nts:include value="test.client.successfulTransaction" scope="common"/>
        <nts:include value="assert.request.numResources" scope="common" resource="Patient" count="1"/>
        <nts:include value="assert.request.numResources" scope="common" resource="Observation" count="1"/>
        <nts:include value="assert.request.numResources" scope="common" resource="Specimen" count="1"/>
        <nts:include value="assert.request.numResources" scope="common" resource="Organization" count="1"/>


 <!--Asserts for checking the Patient resource -->
        <nts:include value="assert.identifier.bsn"  direction="request" resource="Patient"
            system="http://fhir.nl/fhir/NamingSystem/bsn"
            identifier="999999114"/>
         <nts:include value="assert.humanname" direction="request" resource="Patient"
            use="official" 
            text="Elise Erelies"
            family="Erelies"
                urlfamily="http://hl7.org/fhir/StructureDefinition/humanname-own-name"
                familydisplay="Erelies"
            given="Elise"
                urlgiven="http://hl7.org/fhir/StructureDefinition/iso21090-EN-qualifier"
                givencode="BR"/>
        <nts:include value="assert.gender" direction="request" resource="Patient"
            gender="female"/>
        <nts:include value="assert.birthdate" direction="request" resource="Patient"
            date="1950-11-01"/>


<!-- Asserts for checking the first Observation resource -->
        <nts:include value="assert.identifier" direction="request" resource="Observation"
            system="urn:oid:2.16.840.1.113883.2.4.3.11.999.25.4298.3"
            identifier="92225"/>
        <nts:include value="assert.status" direction="request" resource="Observation"
            status="final"/>
        <nts:include value="assert.code" direction="request" resource="Observation"
            labsystem="http://loinc.org"
            labcode="94309-2"
            display="SARS-CoV-2 RNA"/>
        <nts:include value="assert.interpretation" direction="request" resource="Observation"
            interpretation="COVID aanwezig"/>
        <nts:include value="assert.interpretationflag" direction="request" resource="Observation" sort="valueCodeableConcept"
            system="http://snomed.info/sct"
            code="260373001"
            display="aangetoond"/>
            

<!-- Asserts for checking the Specimen resource -->
        <nts:include value="assert.identifier" direction="request" resource="Specimen" 
            system="urn:oid:2.16.840.1.113883.2.4.3.11.999.25.4267.3"
            identifier="13344"/>
        <nts:include value="assert.type" direction="request" resource="Specimen" 
            system="http://snomed.info/sct"
            code="119389009"
            display="specimen uit keelholte"/>
                
<!-- Asserts for checking the Organization resource --> 
        <nts:include value="assert.identifier" direction="request" resource="Organization" 
            system="http://fhir.nl/fhir/NamingSystem/ura" 
            identifier="00003334"/>
        <nts:include value="assert.type" direction="request" resource="Organization" 
            system="http://nictiz.nl/fhir/NamingSystem/organization-type" 
            code="L1" 
            display="Laboratorium"/>
        <nts:include value="assert.name" direction="request" resource="Organization" 
            name="Microbiologisch Lab Flagel"/>
        <nts:include value="assert.telecom" direction="request" resource="Organization" 
            system="phone" 
            telecomvalue="06-11122244"/>


    </test>
</TestScript>
