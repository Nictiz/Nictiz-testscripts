<?xml version="1.0" encoding="UTF-8"?>
<nts:component xmlns="http://hl7.org/fhir" xmlns:nts="http://nictiz.nl/xsl/testscript">
    <nts:parameter name="warningOnly" value="false"/>
    <action>
        <assert>
            <description
                value="Confirm that the Bundle contains a(n) {$resource} with the right name"/>
            <direction value="request"/>
            <expression value="Bundle.entry.resource.as({$resource}).name.where(use ='{$use}' and text='{$text}' and family='{$family}' and given='{$given}').exists()"/>
            <warningOnly value="{$warningOnly}"/>
        </assert>
    </action>
    
    <action>
        <assert>
            <description
                value="Confirm that the Bundle contains a(n) {$resource} with the right name extensions"/>
            <direction value="request"/>
            <expression value="Bundle.entry.resource.as({$resource}).name.family.extension.where(url ='{$urlfamily}' and value='{$family}').exists()"/>
            <warningOnly value="{$warningOnly}"/>
        </assert>
    </action>
    
    <action>
        <assert>
            <description
                value="Confirm that the Bundle contains a(n) {$resource} with the right ISO code for the name"/>
            <direction value="request"/>
            <expression value="Bundle.entry.resource.as({$resource}).name.given.extension.where(url='{$urliso}' and  value='{$iso}').exists()"/>
            <warningOnly value="{$warningOnly}"/>
        </assert>
    </action>
</nts:component>