<?xml version="1.0" encoding="UTF-8"?>
<nts:component xmlns="http://hl7.org/fhir" xmlns:nts="http://nictiz.nl/xsl/testscript">
    <nts:parameter name="warningOnly" value="false"/>
<action>
    <assert>
        <description
            value="Confirm that the Bundle contains {$resource} with the right interpretation"/>
        <direction value="{$direction}"/>
        <expression value="Bundle.entry.resource.as({$resource}).where(interpretation.text='{$interpretation}').exists()"/>
        <warningOnly value="{$warningOnly}"/>
    </assert>
</action>


</nts:component>

