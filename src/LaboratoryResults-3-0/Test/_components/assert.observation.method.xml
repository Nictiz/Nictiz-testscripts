<?xml version="1.0" encoding="UTF-8"?>
<nts:component xmlns="http://hl7.org/fhir" xmlns:nts="http://nictiz.nl/xsl/testscript">
    <nts:parameter name="warningOnly" value="false"/>
<action>
    <assert>
        <description
            value="Confirm that the Bundle contain an {$resource} that has the right method"/>
        <direction value="{$direction}"/>
        <expression value="Bundle.entry.resource.as({$resource}).method.coding.where(system='{$system}' and code='{$code}' and display='{$display}').exists()"/>
        <warningOnly value="{$warningOnly}"/>
    </assert>
</action>
</nts:component>
