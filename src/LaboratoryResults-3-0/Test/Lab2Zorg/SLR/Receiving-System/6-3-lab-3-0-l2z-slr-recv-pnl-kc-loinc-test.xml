<?xml version="1.0" encoding="UTF-8"?>
<TestScript xmlns="http://hl7.org/fhir" xmlns:nts="http://nictiz.nl/xsl/testscript"
            nts:scenario="server">
    <id value="6-3-lab-3-0-l2z-slr-recv-pnl-kc-loinc-test"/>
    <version value="r4-lab-3.0.0-beta.3"/>
    <name 
        value="LaboratoryResults - Scenario 6.3 - Receive panel Observation"/>
    <description value="Scenario 6.3 - Receive panel Observation"/>
    <nts:fixture id="lr-slr-TEST-l2z-6Onderzoek-meervoudig-resultaat-3KCLOINC"
                 href="resources-to-sendreceive/lr-slr-TEST-l2z-6Onderzoek-meervoudig-resultaat-3KCLOINC.{$_FORMAT}"/>
    <nts:includeDateT value="yes"/>
    
    <test id="scenario6-3-receive-panel-observation">
        <name value="Scenario 6.3"/>
        <description value="Receive panel Observation"/>
        <action>
            <operation>
                <type>
                    <system value="http://terminology.hl7.org/CodeSystem/testscript-operation-codes"/>
                    <code value="transaction"/>
                </type>
                <description value="Test server to handle a Bundle of type transaction."/>
                <contentType value="{$_FORMAT}"/>
                <destination value="1"/>
                <origin value="1"/>
                <requestHeader>
                    <field value="Prefer"/>
                    <value value="return=representation"/>
                </requestHeader>
                <sourceId value="lr-slr-TEST-l2z-6Onderzoek-meervoudig-resultaat-3KCLOINC"/>
            </operation>
        </action>
        <nts:include value="assert.response.success" scope="common"/>
        <nts:include value="assert.response.bundleContent"
                    scope="common"
                    bundleType="transaction-response"/>
        <nts:include value="assert.request.numResources" scope="common"
            resource="Observation" count="3"/>
         <nts:include value="assert.request.numResources" scope="common"
            resource="Specimen" count="1"/>
        <nts:include value="assert.request.numResources" scope="common"
            resource="Organization" count="1"/>
        <nts:include value="assert.request.numResources" scope="common"
            resource="Patient" count="1"/>
        <action>
            <assert>
                <description value="Confirm that the Observation resource has a LOINC code for creatinine &amp; glomerulaire filtratiesnelheid.voorspeld panel in the code element"/>
                <direction value="request"/>
                <expression value="Bundle.entry.resource.where($this is Observation).code.coding.where(code = '45066-8').exists()"/>
            </assert>
        </action>
        <action>
            <assert>
                <description value="Confirm that the Observation resource has a LOINC code for Glomerulaire filtratiesnelheid/1,73 m2.voorspeld [filtratiesnelheid/oppervlakte] in serum of plasma of bloed d.m.v. formule gebaseerd op creatinine (CKD-EPI 2021) in the code element"/>
                <direction value="request"/>
                <expression value="Bundle.entry.resource.where($this is Observation).code.coding.where(code = '98979-8').exists()"/>
            </assert>
        </action>
        <action>
            <assert>
                <description value="Confirm that the Observation resource has a LOINC code for Creatinine [mol/volume] in urine in the code element"/>
                <direction value="request"/>
                <expression value="Bundle.entry.resource.where($this is Observation).code.coding.where(code = '14683-7').exists()"/>
            </assert>
        </action>
        <teardown nts:in-targets = "Nictiz-intern">
            <action>
                <operation>
                    <type>
                        <system value="http://hl7.org/fhir/restful-interaction"/>
                        <code value="delete"/>
                    </type>
                    <code value="om de aangemaakte resources te verwijderen"/>
                </operation>
            </action>
        </teardown>
    </test>
</TestScript>

