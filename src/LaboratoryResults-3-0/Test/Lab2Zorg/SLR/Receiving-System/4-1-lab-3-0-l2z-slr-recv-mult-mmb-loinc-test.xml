<?xml version="1.0" encoding="UTF-8"?>
<TestScript xmlns="http://hl7.org/fhir" xmlns:nts="http://nictiz.nl/xsl/testscript"
            nts:scenario="server">
    <id value="4-1-lab-3-0-l2z-slr-recv-mult-mmb-loinc-test"/>
    <version value="r4-lab-3.0.0-beta.3"/>
    <name
        value="LaboratoryResults - Scenario 4.1 - Receive multiple Observations"/>
    <description value="Scenario 4.1 - Receive multiple Observations"/>
    <nts:fixture id="r-slr-TEST-l2z-4Bericht-met-meerdere-aparte-resultaten-1MMBLOINC"
                 href="resources-to-sendreceive/lr-slr-TEST-l2z-4Bericht-met-meerdere-aparte-resultaten-1MMBLOINC.{$_FORMAT}"/>
    <nts:includeDateT value="yes"/>
    
    <test id="scenario4-1-receive-multiple-observations">
        <name value="Scenario 4.1"/>
        <description value="Receive multiple Observations"/>
        <action>
            <operation>
                <type>
                    <system value="http://terminology.hl7.org/CodeSystem/testscript-operation-codes"/>
                    <code value="transaction"/>
                </type>
                <description value="Test server to handle a Bundle of type transaction."/>
                <contentType value="{$_FORMAT}"/>
                <destination value="1"/>
                <origin value="1"/>
                <requestHeader>
                    <field value="Prefer"/>
                    <value value="return=representation"/>
                </requestHeader>
                <sourceId value="r-slr-TEST-l2z-4Bericht-met-meerdere-aparte-resultaten-1MMBLOINC"/>
            </operation>
        </action>
        <nts:include value="assert.response.success" scope="common"/>
        <nts:include value="assert.response.bundleContent"
                    scope="common"
                    bundleType="transaction-response"/>
        <nts:include value="assert.request.numResources" scope="common"
            resource="Observation" count="5"/>
        <nts:include value="assert.request.numResources" scope="common"
            resource="Specimen" count="2"/>
        <nts:include value="assert.request.numResources" scope="common"
            resource="Organization" count="1"/>
        <nts:include value="assert.request.numResources" scope="common"
            resource="Patient" count="1"/>
        <action>
            <assert>
                <description value="Confirm that the Observation resource has a LOINC code for SARS-CoV-2 RNA in the code element"/>
                <direction value="request"/>
                <expression value="Bundle.entry.resource.where($this is Observation).code.coding.where(code = '94309-2').exists()"/>
            </assert>
        </action>
        <action>
            <assert>
                <description value="Confirm that the Observation resource has a LOINC code for Chlamydia trachomatis DNA [aanwezigheid] d.m.v. moleculaire techniek (PCR) in the code element"/>
                <direction value="request"/>
                <expression value="Bundle.entry.resource.where($this is Observation).code.coding.where(code = '21613-5').exists()"/>
            </assert>
        </action>
        <action>
            <assert>
                <description value="Confirm that the Observation resource has a LOINC code for Herpes-simplexvirus 1 &amp; 2 DNA panel d.m.v. moleculaire techniek (PCR) in the code element"/>
                <direction value="request"/>
                <expression value="Bundle.entry.resource.where($this is Observation).code.coding.where(code = '87431-3').exists()"/>
            </assert>
        </action>
        <action>
            <assert>
                <description value="Confirm that the Observation resource has a LOINC code for Herpes-simplexvirus 1 DNA [aanwezigheid] d.m.v. moleculaire techniek (PCR) in the code element"/>
                <direction value="request"/>
                <expression value="Bundle.entry.resource.where($this is Observation).code.coding.where(code = '16130-7').exists()"/>
            </assert>
        </action>
        <action>
            <assert>
                <description value="Confirm that the Observation resource has a LOINC code for Herpes-simplexvirus 2 DNA [aanwezigheid] d.m.v. moleculaire techniek (PCR) in the code element"/>
                <direction value="request"/>
                <expression value="Bundle.entry.resource.where($this is Observation).code.coding.where(code = '16131-5').exists()"/>
            </assert>
        </action>
        <teardown nts:in-targets = "Nictiz-intern">
            <action>
                <operation>
                    <type>
                        <system value="http://hl7.org/fhir/restful-interaction"/>
                        <code value="delete"/>
                    </type>
                    <code value="om de aangemaakte resources te verwijderen"/>
                </operation>
            </action>
        </teardown>
    </test>
</TestScript>
