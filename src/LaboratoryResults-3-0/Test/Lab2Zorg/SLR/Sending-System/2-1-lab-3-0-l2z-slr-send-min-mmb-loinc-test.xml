<?xml version="1.0" encoding="UTF-8"?>
<TestScript xmlns="http://hl7.org/fhir" xmlns:nts="http://nictiz.nl/xsl/testscript"
            nts:scenario="client">
    <id value="2-1-lab-3-0-l2z-slr-send-min-mmb-loinc-test"/>
    <version value="r4-lab-3.0.0-beta.3"/>
    <name
        value="LaboratoryResults - Scenario 2.1 - Send minimal Observation"/>
    <description value="Scenario 2.1 - Send minimal Observation"/>
    <nts:fixture id="lr-slr-TEST-l2z-2Minimaal-bericht-1MMBLOINC"
                 href="resources-to-sendreceive/lr-slr-TEST-l2z-2Minimaal-bericht-1MMBLOINC.xml"
                 nts:in-targets="Nictiz-intern"/>
    <nts:includeDateT value="yes" nts:in-targets="Nictiz-intern"/>
    
    <test id="scenario2-1-send-min-observation">
        <name value="Scenario 2.1"/>
        <description value="Send minimal Observation"/>
        <action>
            <operation>
                <type>
                    <system value="http://terminology.hl7.org/CodeSystem/testscript-operation-codes"/>
                    <code value="transaction"/>
                </type>
                <description value="Test client to POST a Bundle of type transaction."/>
                <destination value="1"/>
                <origin value="1"/>
                <responseId value="transaction-response-fixture"/>
                <sourceId value="lr-slr-TEST-l2z-2Minimaal-bericht-1MMBLOINC"
                        nts:in-targets="Nictiz-intern"/>
            </operation>
        </action>
        <nts:include value="test.client.successfulTransaction" scope="common"/>
        <nts:include value="assert.request.numResources" scope="common"
                     resource="Observation" count="1"/>
        <nts:include value="assert.request.numResources" scope="common"
                     resource="Specimen" count="1"/>
        <nts:include value="assert.request.numResources" scope="common"
                     resource="Organization" count="1"/>
        <nts:include value="assert.request.numResources" scope="common"
                     resource="Patient" count="1"/>
        <action>
            <assert>
                <description value="Confirm that the Observation resource has a LOINC code for Chlamydia trachomatis DNA [aanwezigheid] d.m.v. moleculaire techniek (PCR) in the code element"/>
                <direction value="request"/>
                <expression value="Bundle.entry.resource.where($this is Observation).code.coding.where(code = '21613-5').exists()"/>
            </assert>
        </action>
    </test>
</TestScript>
