<?xml version="1.0" encoding="UTF-8"?>
<TestScript xmlns="http://hl7.org/fhir" xmlns:nts="http://nictiz.nl/xsl/testscript"
            nts:scenario="client">
    <id value="7-2-lab-3-0-l2z-slr-send-wth-kc-loinc-pnl-test"/>
    <version value="r4-lab-3.0.0-beta.3"/>
    <name
        value="LaboratoryResults - Scenario 7.2 - Send panel Observation (with another message)"/>
    <description value="Scenario 7.2 - Send panel Observation (with another message)"/>
    <nts:fixture id="turen-met-ander-bericht-MO-3BKCLOINCOnderzoekmeervoudigresultaat"
                 href="resources-to-sendreceive/lr-slr-TEST-l2z-7Meesturen-met-ander-bericht-MO-3BKCLOINCOnderzoekmeervoudigresultaat.xml"
                 nts:in-targets="Nictiz-intern"/>
    <nts:includeDateT value="yes" nts:in-targets="Nictiz-intern"/>
    
    <test id="scenario7-2-send-panel-observation-with-another-message">
        <name value="Scenario 7.2"/>
        <description value="Send panel Observation (with another message)"/>
        <action>
            <operation>
                <type>
                    <system value="http://terminology.hl7.org/CodeSystem/testscript-operation-codes"/>
                    <code value="transaction"/>
                </type>
                <description value="Test client to POST a Bundle of type transaction."/>
                <destination value="1"/>
                <origin value="1"/>
                <responseId value="transaction-response-fixture"/>
                <sourceId value="turen-met-ander-bericht-MO-3BKCLOINCOnderzoekmeervoudigresultaat"
                        nts:in-targets="Nictiz-intern"/>
            </operation>
        </action>
        <nts:include value="test.client.successfulTransaction" scope="common"/>
        <nts:include value="assert.request.numResources" scope="common"
            resource="Observation" count="1"/>
        <nts:include value="assert.request.numResources" scope="common"
            resource="Specimen" count="1"/>
        <nts:include value="assert.request.numResources" scope="common"
            resource="Organization" count="1"/>
        <nts:include value="assert.request.numResources" scope="common"
            resource="Patient" count="1"/>
        <action>
            <assert>
                <description value="Confirm that the Observation resource has a LOINC code for creatinine &amp; glomerulaire filtratiesnelheid.voorspeld panel in the code element"/>
                <direction value="request"/>
                <expression value="Bundle.entry.resource.where($this is Observation).code.coding.where(code = '45066-8').exists()"/>
            </assert>
        </action>
    </test>
</TestScript>
