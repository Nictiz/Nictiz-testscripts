<?xml version="1.0" encoding="UTF-8"?>
<TestScript xmlns="http://hl7.org/fhir" xmlns:nts="http://nictiz.nl/xsl/testscript"
            nts:scenario="client">
    <id value="3-1b-lab-3-0-l2z-slr-send-cor-mmb-loinc-correctie-test"/>
    <version value="r4-lab-3.0.0-beta.3"/>
    <name
        value="LaboratoryResults - Scenario 3.1B - Send Observation (corrected)"/>
    <description value="Scenario 3.1B - Send Observation (corrected)"/>
    <nts:fixture id="lr-slr-TEST-l2z-3Gecorrigeerd-bericht-1BMMBLOINCCorrectie"
                 href="resources-to-sendreceive/lr-slr-TEST-l2z-3Gecorrigeerd-bericht-1BMMBLOINCCorrectie.xml"
                 nts:in-targets="Nictiz-intern"/>
    <nts:includeDateT value="yes" nts:in-targets="Nictiz-intern"/>
    
    <test id="scenario3-1b-send-observation-corrected">
        <name value="Scenario 3.1"/>
        <description value="Send Observation (corrected)"/>
        <action>
            <operation>
                <type>
                    <system value="http://terminology.hl7.org/CodeSystem/testscript-operation-codes"/>
                    <code value="transaction"/>
                </type>
                <description value="Test client to POST a Bundle of type transaction."/>
                <destination value="1"/>
                <origin value="1"/>
                <responseId value="transaction-response-fixture"/>
                <sourceId value="lr-slr-TEST-l2z-3Gecorrigeerd-bericht-1BMMBLOINCCorrectie"
                        nts:in-targets="Nictiz-intern"/>
            </operation>
        </action>
        <nts:include value="test.client.successfulTransaction" scope="common"/>
        <nts:include value="assert.request.numResources" scope="common"
            resource="Observation" count="1"/>
        <nts:include value="assert.request.numResources" scope="common"
            resource="Specimen" count="1"/>
        <nts:include value="assert.request.numResources" scope="common"
            resource="Organization" count="1"/>
        <nts:include value="assert.request.numResources" scope="common"
            resource="Patient" count="1"/>
        <action>
            <assert>
                <description value="Confirm that the Observation resource has a LOINC code for SARS-CoV-2 RNA [aanwezigheid] d.m.v. moleculaire techniek (PCR) in the code element"/>
                <direction value="request"/>
                <expression value="Bundle.entry.resource.where($this is Observation).code.coding.where(code = '94309-2').exists()"/>
            </assert>
        </action>
    </test>
</TestScript>

