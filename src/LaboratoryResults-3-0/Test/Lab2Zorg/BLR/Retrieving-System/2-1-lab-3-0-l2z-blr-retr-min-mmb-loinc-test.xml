<?xml version="1.0" encoding="UTF-8"?>
<TestScript xmlns="http://hl7.org/fhir" xmlns:nts="http://nictiz.nl/xsl/testscript"
            nts:scenario="client">
    <id value="2-1-lab-3-0-l2z-blr-retr-min-mmb-loinc-test"/>
    <version value="r4-lab-3.0.0-beta.4"/>
    <name value="LaboratoryResults - Scenario 2.1 - Retrieve minimal Observation"/>
    <description value="Scenario 2.1 - Retrieve minimal Observation"/>

    <test id="scenario2-1-retrieve-minimal-observation">
        <name value="Scenario 2.1"/>
        <description value="Retrieve minimal observation"/>
        <nts:include value="test.client.search" scope="common">
            <nts:with-parameter name="description"
                value="Test client to retrieve Observation resource"/>
            <nts:with-parameter name="resource" value="Observation"/>
            <nts:with-parameter name="params"
                value="?patient.identifier=http://fhir.nl/fhir/NamingSystem/bsn|999999114&amp;category=http://terminology.hl7.org/CodeSystem/observation-category|laboratory&amp;code=http://loinc.org|21613-5&amp;_include=Observation:performer&amp;_include=Observation:patient"/>
        </nts:include>
        <nts:include value="canary-assert.response.successfulSearch" scope="common"/>
        <nts:include value="assert.response.numResources" scope="common"
            resource="Observation" count="1"/>
        <nts:include value="assert.response.numResources" scope="common"
            resource="Organization" count="1"/>
        <nts:include value="assert.response.numResources" scope="common"
            resource="Patient" count="1"/>
    </test>
</TestScript>