<?xml version="1.0" encoding="UTF-8"?>
<TestScript xmlns="http://hl7.org/fhir" xmlns:nts="http://nictiz.nl/xsl/testscript"
            nts:scenario="client">
    <id value="3-4-lab-3-0-l2z-blr-retr-poc-kc-nhg-test"/>
    <version value="r4-lab-3.0.0-beta.4"/>
    <name value="LaboratoryResults - Scenario 3.4 - Retrieve POCT Observation"/>
    <description value="Scenario 3.4 - Retrieve POCT Observation"/>

    <test id="scenario3-4-retrieve-poct-observation">
        <name value="Scenario 3.4"/>
        <description value="Retrieve POCT observation"/>
        <nts:include value="test.client.search" scope="common">
            <nts:with-parameter name="description"
                value="Test client to retrieve Observation resource"/>
            <nts:with-parameter name="resource" value="Observation"/>
            <nts:with-parameter name="params"
                value="?patient.identifier=http://fhir.nl/fhir/NamingSystem/bsn|999900511&amp;category=http://terminology.hl7.org/CodeSystem/observation-category|laboratory&amp;code=https://referentiemodel.nhg.org/tabellen/nhg-tabel-45-diagnostische-bepalingen|509&amp;_include=Observation:specimen&amp;_include=Observation:performer&amp;_include=Observation:subject"/>
        </nts:include>
        <nts:include value="canary-assert.response.successfulSearch" scope="common"/>
        <nts:include value="assert.response.numResources" scope="common"
            resource="Observation" count="1"/>
        <nts:include value="assert.response.numResources" scope="common"
            resource="Specimen" count="1"/>
        <nts:include value="assert.response.numResources" scope="common"
            resource="Organization" count="1"/>
        <nts:include value="assert.response.numResources" scope="common"
            resource="Patient" count="1"/>
    </test>
</TestScript>