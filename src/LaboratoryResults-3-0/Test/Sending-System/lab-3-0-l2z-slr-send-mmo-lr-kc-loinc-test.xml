<?xml version="1.0" encoding="UTF-8"?>
<TestScript xmlns="http://hl7.org/fhir" xmlns:nts="http://nictiz.nl/xsl/testscript"
            nts:scenario="client">
    <id value="2-4-lab-3-0-l2z-slr-send-mmo-lr-kc-loinc-test"/>
    <version value="r4-lab-3.0.0-beta.3"/>
    <name
        value="LaboratoryResults - Scenario 2.4 - Send Observation sending"/>
    <description value="Scenario 2.4 - Send Observation sending"/>
    <nts:fixture id="r-TEST-l2z-7Meesturen-met-ander-bericht-MO-3AKCLOINCLosresultaat"
                 href="resources-to-sendreceive/r-TEST-l2z-7Meesturen-met-ander-bericht-MO-3AKCLOINCLosresultaat.xml"
                 nts:in-targets="Nictiz-intern"/>
    <nts:includeDateT value="yes" nts:in-targets="Nictiz-intern"/>
    
    <test id="scenario2-4-send-Observation-sending">
        <name value="Scenario 2.4"/>
        <description value="Send Observation sending"/>
        <action>
            <operation>
                <type>
                <system value="http://terminology.hl7.org/CodeSystem/testscript-operation-codes"/>
                <code value="transaction"/>
                </type>
                <description value="Test client to POST a Bundle of type transaction."/>
                <destination value="1"/>
                <origin value="1"/>
                <responseId value="transaction-response-fixture"/>
                <sourceId value="r-TEST-l2z-7Meesturen-met-ander-bericht-MO-3AKCLOINCLosresultaat"
                        nts:in-targets="Nictiz-intern"/>
            </operation>
        </action>
        <nts:include value="test.client.successfulTransaction" scope="common"/>
        <nts:include value="assert.request.numResources" scope="common"
            resource="Observation" count="1"/>
        <nts:include value="assert.request.numResources" scope="common"
            resource="Specimen" count="1"/>
        <nts:include value="assert.request.numResources" scope="common"
            resource="Organization" count="1"/>
        <nts:include value="assert.request.numResources" scope="common"
            resource="Patient" count="1"/>
        <action>
            <assert>
                <description value="Confirm that the Observation resource has a LOINC code for Glomerulaire filtratiesnelheid/1,73 m2.voorspeld [filtratiesnelheid/oppervlakte] in serum of plasma of bloed d.m.v. formule gebaseerd op creatinine (CKD-EPI 2021) in the code element"/>
                <direction value="request"/>
                <expression value="Bundle.entry.resource.where($this is Observation).code.coding.where(code = '98979-8').exists()"/>
            </assert>
        </action>
    </test>
</TestScript>
