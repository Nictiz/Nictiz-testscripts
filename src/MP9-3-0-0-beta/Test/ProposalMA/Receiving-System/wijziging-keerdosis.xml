<TestScript xmlns="http://hl7.org/fhir"
            xmlns:nts="http://nictiz.nl/xsl/testscript"
            nts:scenario="server">
   <id value="mp9-propma-receive-mbh-300-start-duur-zorgaanbieder-vma"/>
   <version value="r4-mp9-3.0.0-beta"/>
   <name value="MP9 - Server - Scenario mbh-300-start-duur-zorgaanbieder-vma. - Receive ProposalMA - wijziging-keerdosis"/>
   <description value="Scenario mbh-300-start-duur-zorgaanbieder-vma. - Receive ProposalMA for C. XXX_Brugge."/>
   <nts:fixture id="mp-vm-tst-wijziging-keerdosis-v30"
                href="fixtures/mp-vm-tst-wijziging-keerdosis-v30.{$_FORMAT}"/>
   <nts:includeDateT value="yes"/>
   <test id="scenariombh-300-start-duur-zorgaanbieder-vma--receive-propma">
      <name value="Scenario mbh-300-start-duur-zorgaanbieder-vma."/>
      <description value="Receive ProposalMA in a transaction Bundle"/>
      <action>
         <operation>
            <type>
               <system value="http://terminology.hl7.org/CodeSystem/testscript-operation-codes"/>
               <code value="transaction"/>
            </type>
            <description value="Test server to handle a Bundle of type transaction."/>
            <contentType value="{$_FORMAT}"/>
            <destination value="1"/>
            <origin value="1"/>
            <requestHeader>
               <field value="Prefer"/>
               <value value="return=representation"/>
            </requestHeader>
            <sourceId value="mp-vm-tst-wijziging-keerdosis-v30"/>
         </operation>
      </action>
      <nts:include value="assert.response.success" scope="common"/>
      <nts:include value="assert.response.bundleContent"
                   scope="common"
                   bundleType="transaction-response"/>
      <nts:include value="assert.request.numResources"
                   scope="common"
                   resource="MedicationRequest"
                   count="1"/>
      <nts:include value="assert.request.numResources"
                   scope="common"
                   resource="Medication"
                   count="1"/>
   </test>
   <test id="scenariombh-300-start-duur-zorgaanbieder-vma--receive-propma-identification">
      <name value="Resource identification"/>
      <description value="Checks if all resources specified by the scenario can be identified unambiguously."/>
      <action>
         <assert>
            <expression value="Bundle.entry.where($this is MedicationRequest).where(medication.resolve().code.where(coding.where(code = '26638') and coding.where(code = '71587'))).count() = 1"/>
            <sourceId value="transaction-response"/>
            <warningOnly value="false"/>
         </assert>
      </action>
      <action>
         <assert>
            <description value="Confirm that the response Bundle contains 1 Medication resource that contains code '26638|urn:oid:2.16.840.1.113883.2.4.4.10' (LISINOPRIL 10MG TABLET)"/>
            <expression value="Bundle.entry.where($this is Medication).where(code.coding.where(system = 'urn:oid:2.16.840.1.113883.2.4.4.10' and code = '26638')).count() = 1"/>
            <sourceId value="transaction-response"/>
            <warningOnly value="false"/>
         </assert>
      </action>
   </test>
</TestScript>
