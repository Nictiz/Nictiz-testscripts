<TestScript xmlns="http://hl7.org/fhir"
            xmlns:nts="http://nictiz.nl/xsl/testscript"
            nts:scenario="server">
   <id value="mp9-propma-receive-nieuw-voorstel-vma"/>
   <version value="r4-mp9-3.0.0-beta"/>
   <name value="MP9 - Server - Scenario nieuw-voorstel-vma. - Receive ProposalMA - nieuwe-medicatie"/>
   <description value="Scenario nieuw-voorstel-vma. - Receive ProposalMA for C. XXX_Brugge."/>
   <nts:fixture id="mp-vm-tst-nieuwe-medicatie-v30"
                href="fixtures/mp-vm-tst-nieuwe-medicatie-v30.{$_FORMAT}"/>
   <nts:includeDateT value="yes"/>
   <test id="scenarionieuw-voorstel-vma--receive-propma">
      <name value="Scenario nieuw-voorstel-vma."/>
      <description value="Receive ProposalMA in a transaction Bundle"/>
      <action>
         <operation>
            <type>
               <system value="http://terminology.hl7.org/CodeSystem/testscript-operation-codes"/>
               <code value="transaction"/>
            </type>
            <description value="Test server to handle a Bundle of type transaction."/>
            <contentType value="{$_FORMAT}"/>
            <destination value="1"/>
            <origin value="1"/>
            <requestHeader>
               <field value="Prefer"/>
               <value value="return=representation"/>
            </requestHeader>
            <sourceId value="mp-vm-tst-nieuwe-medicatie-v30"/>
         </operation>
      </action>
      <nts:include value="assert.response.success" scope="common"/>
      <nts:include value="assert.response.bundleContent"
                   scope="common"
                   bundleType="transaction-response"/>
      <nts:include value="assert.request.numResources"
                   scope="common"
                   resource="MedicationRequest"
                   count="1"/>
      <nts:include value="assert.request.numResources"
                   scope="common"
                   resource="Medication"
                   count="1"/>
   </test>
   <test id="scenarionieuw-voorstel-vma--receive-propma-identification">
      <name value="Resource identification"/>
      <description value="Checks if all resources specified by the scenario can be identified unambiguously."/>
      <action>
         <assert>
            <expression value="Bundle.entry.resource.where($this is MedicationRequest).where((( (medication.as(CodeableConcept).coding | medication.resolve().code.coding).exists(code = '33154') ) and ( (medication.as(CodeableConcept).coding | medication.resolve().code.coding).exists(code = '85200') ))).count() = 1"/>
            <sourceId value="transaction-response"/>
            <warningOnly value="false"/>
         </assert>
      </action>
      <action>
         <assert>
            <description value="Confirm that the response Bundle contains 1 Medication resource that contains code '33154|urn:oid:2.16.840.1.113883.2.4.4.10' (IBUPROFEN 800MG TABLET MGA)"/>
            <expression value="Bundle.entry.resource.where($this is Medication).where(code.coding.exists(system = 'urn:oid:2.16.840.1.113883.2.4.4.10' and code = '33154')).count() = 1"/>
            <sourceId value="transaction-response"/>
            <warningOnly value="false"/>
         </assert>
      </action>
   </test>
</TestScript>
