<TestScript xmlns="http://hl7.org/fhir"
            xmlns:nts="http://nictiz.nl/xsl/testscript"
            nts:scenario="client">
   <id value="mp9-propma-send-mbh-300-chronisch-vma"/>
   <name value="MP9 - Client - Scenario mbh-300-chronisch-vma. - Send ProposalMA"/>
   <description value="Scenario mbh-300-chronisch-vma. - Send ProposalMA for C. XXX_Brugge."/>
   <nts:fixture id="mp-vm-tst-andere-voorschrijver-v30"
                href="fixtures/mp-vm-tst-andere-voorschrijver-v30.xml"/>
   <nts:includeDateT value="yes" nts:in-targets="Nictiz-intern"/>
   <test id="scenariombh-300-chronisch-vma--send-propma">
      <name value="Scenario mbh-300-chronisch-vma."/>
      <description value="Specifies the query to run and general checks on the request."/>
      <action>
         <operation>
            <type>
               <system value="http://terminology.hl7.org/CodeSystem/testscript-operation-codes"/>
               <code value="transaction"/>
            </type>
            <description value="Test client to POST a Bundle of type transaction."/>
            <destination value="1"/>
            <origin value="1"/>
            <requestId value="transaction-request"/>
            <sourceId value="mp-vm-tst-andere-voorschrijver-v30"/>
         </operation>
      </action>
      <nts:include value="test.client.successfulTransaction" scope="common"/>
      <nts:include value="assert.request.numResources"
                   scope="common"
                   resource="MedicationRequest"
                   count="1"/>
      <nts:include value="assert.request.numResources"
                   scope="common"
                   resource="Medication"
                   count="1"/>
   </test>
   <test id="scenariombh-300-chronisch-vma--send-propma-identification">
      <name value="Resource identification"/>
      <description value="Checks if all resources specified by the scenario can be identified unambiguously."/>
      <action>
         <assert>
            <description value="Confirm that the request Bundle contains 1 MedicationRequest resource(s) that reference(s) Medication with coding '26638|urn:oid:2.16.840.1.113883.2.4.4.10' (LISINOPRIL 10MG TABLET)"/>
            <expression value="Bundle.entry.select(resource as MedicationRequest).where(medication.resolve().code.coding.where(system = 'urn:oid:2.16.840.1.113883.2.4.4.10' and code = '26638')).count() = 1"/>
            <sourceId value="transaction-request"/>
            <warningOnly value="false"/>
         </assert>
      </action>
      <action>
         <assert>
            <description value="Confirm that the request Bundle contains 1 Medication resource that contains code '26638|urn:oid:2.16.840.1.113883.2.4.4.10' (LISINOPRIL 10MG TABLET)"/>
            <expression value="Bundle.entry.select(resource as Medication).code.coding.where(system = 'urn:oid:2.16.840.1.113883.2.4.4.10' and code = '26638').count() = 1"/>
            <sourceId value="transaction-request"/>
            <warningOnly value="false"/>
         </assert>
      </action>
   </test>
</TestScript>
