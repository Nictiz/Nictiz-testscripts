                             value="Test PHR client to retrieve MedicationRequest resource(s) representing MP9 building block MedicationAgreement"/>
         <nts:with-parameter name="resource" value="MedicationRequest"/>
         <nts:with-parameter name="params"
                             value="?category=http://snomed.info/sct|33633005&amp;_include=MedicationRequest:medication&amp;_include=MedicationRequest:subject"/>
