<TestScript xmlns:nts="http://nictiz.nl/xsl/testscript"
            xmlns="http://hl7.org/fhir"
            nts:scenario="client">
   <id value="mp9-test-retrieve-meddata-CONS-MGB-12b-x"/>
   <version value="r4-mp9-3.0.0"/>
   <name value="mp9-test-retrieve-meddata-CONS-MGB-12b-x"/>
   <title value="Scenario 12b.x"/>
   <description value="Retrieve Medication data CONS-MGB building blocks for patient JXXX-Vriends&#xA;&#xA;For more info:&#xA;https://informatiestandaarden.nictiz.nl/wiki/mp:V9.3.0_consolidatie_medicatiegegevens_raadplegen&#xA;&#xA;Original description:&#xA;TEST Medicatiegegevens Scenarioset 12b (Consolidatie)"/>
   <nts:authToken patientResourceId="nl-core-Patient-mp9-JXXX-Vriends"
                  nts:in-targets="MedMij"/>
   <nts:includeDateT value="no"/>
   <test id="mp9-test-retrieve-meddata-CONS-MGB-12b-x-01">
      <name value="Scenario 12b.x"/>
      <description value="Retrieve Medication data CONS-MGB resources in a searchset Bundle"/>
      <nts:include value="test.client.search" scope="common" nts:in-targets="#default">
         <nts:with-parameter name="description"
                             value="Test client to retrieve MedicationStatement resource(s) representing MP9 building block MedicationUse"/>
         <nts:with-parameter name="resource" value="MedicationStatement"/>
         <nts:with-parameter name="params"
                             value="?patient.identifier=http://fhir.nl/fhir/NamingSystem/bsn|999909216&amp;category=http://snomed.info/sct|422979000&amp;_include=MedicationStatement:medication&amp;_include=MedicationStatement:subject"/>
      </nts:include>
      <nts:include value="medmij/test.phr.search"
                   scope="common"
                   nts:in-targets="MedMij">
         <nts:with-parameter name="description"
                             value="Test PHR client to retrieve MedicationStatement resource(s) representing MP9 building block MedicationUse"/>
         <nts:with-parameter name="resource" value="MedicationStatement"/>
         <nts:with-parameter name="params"
                             value="?category=http://snomed.info/sct|422979000&amp;_include=MedicationStatement:medication&amp;_include=MedicationStatement:subject"/>
      </nts:include>
      <nts:include value="canary-assert.response.successfulSearch" scope="common"/>
      <nts:include value="assert-returnCount" scope="project">
         <nts:with-parameter name="resource" value="MedicationStatement"/>
         <nts:with-parameter name="count" value="2"/>
      </nts:include>
      <nts:include value="assert-returnCount" scope="project">
         <nts:with-parameter name="resource" value="Medication"/>
         <nts:with-parameter name="count" value="1"/>
      </nts:include>
   </test>
</TestScript>
