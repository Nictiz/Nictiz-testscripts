<TestScript xmlns="http://hl7.org/fhir"
            xmlns:nts="http://nictiz.nl/xsl/testscript"
            nts:scenario="server">
   <id value="mp9-propvv-receive-mbh-300-start-eind-voorraad-vakantie-vvv"/>
   <version value="r4-mp9-3.0.0-beta"/>
   <name value="MP9 - Server - Scenario mbh-300-start-eind-voorraad-vakantie-vvv. - Receive ProposalVV - extra-voorraad-vakantie"/>
   <description value="Scenario mbh-300-start-eind-voorraad-vakantie-vvv. - Receive ProposalVV for C. van de XXX_Brugge."/>
   <nts:fixture id="mp-vv-tst-extra-voorraad-vakantie-v30"
                href="fixtures/mp-vv-tst-extra-voorraad-vakantie-v30.{$_FORMAT}"/>
   <nts:includeDateT value="yes"/>
   <test id="scenariombh-300-start-eind-voorraad-vakantie-vvv--receive-propvv">
      <name value="Scenario mbh-300-start-eind-voorraad-vakantie-vvv."/>
      <description value="Receive ProposalVV in a transaction Bundle"/>
      <action>
         <operation>
            <type>
               <system value="http://terminology.hl7.org/CodeSystem/testscript-operation-codes"/>
               <code value="transaction"/>
            </type>
            <description value="Test server to handle a Bundle of type transaction."/>
            <contentType value="{$_FORMAT}"/>
            <destination value="1"/>
            <origin value="1"/>
            <requestHeader>
               <field value="Prefer"/>
               <value value="return=representation"/>
            </requestHeader>
            <sourceId value="mp-vv-tst-extra-voorraad-vakantie-v30"/>
         </operation>
      </action>
      <nts:include value="assert.response.success" scope="common"/>
      <nts:include value="assert.response.bundleContent"
                   scope="common"
                   bundleType="transaction-response"/>
      <nts:include value="assert.request.numResources"
                   scope="common"
                   resource="MedicationRequest"
                   count="1"/>
      <nts:include value="assert.request.numResources"
                   scope="common"
                   resource="Medication"
                   count="1"/>
   </test>
   <test id="scenariombh-300-start-eind-voorraad-vakantie-vvv--receive-propvv-identification">
      <name value="Resource identification"/>
      <description value="Checks if all resources specified by the scenario can be identified unambiguously."/>
      <action>
         <assert>
            <expression value="Bundle.entry.resource.where($this is MedicationRequest).where(medication.resolve().code.where( and coding.exists(code = '2115468') and coding.exists(code = '6947') and coding.exists(code = '19429'))).count() = 1"/>
            <sourceId value="transaction-response"/>
            <warningOnly value="false"/>
         </assert>
      </action>
      <action>
         <assert>
            <description value="Confirm that the response Bundle contains 1 Medication resource that contains code '2115468|urn:oid:2.16.840.1.113883.2.4.4.7' (METOCLOPRAMIDE HCL ACCORD TABLET 10MG)"/>
            <expression value="Bundle.entry.resource.where($this is Medication).where(code.coding.exists(system = 'urn:oid:2.16.840.1.113883.2.4.4.7' and code = '2115468')).count() = 1"/>
            <sourceId value="transaction-response"/>
            <warningOnly value="false"/>
         </assert>
      </action>
   </test>
</TestScript>
