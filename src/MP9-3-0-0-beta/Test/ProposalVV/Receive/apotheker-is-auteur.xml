<TestScript xmlns="http://hl7.org/fhir"
            xmlns:nts="http://nictiz.nl/xsl/testscript"
            nts:scenario="server">
   <id value="mp9-propvv-receive-mbh-300-start-eind-vvv-apotheker"/>
   <name value="MP9 - Server - Scenario mbh-300-start-eind-vvv-apotheker. - Receive ProposalVV"/>
   <description value="Scenario mbh-300-start-eind-vvv-apotheker. - Receive ProposalVV for C. van de XXX_Brugge."/>
   <nts:fixture id="mp-vv-tst-apotheker-is-auteur-v30"
                href="fixtures/mp-vv-tst-apotheker-is-auteur-v30.{$_FORMAT}"/>
   <nts:includeDateT value="yes"/>
   <test id="scenariombh-300-start-eind-vvv-apotheker--receive-propvv">
      <name value="Operation and general checks"/>
      <description value="Specifies the query that runs and general checks on the response."/>
      <action>
         <operation>
            <type>
               <system value="http://terminology.hl7.org/CodeSystem/testscript-operation-codes"/>
               <code value="transaction"/>
            </type>
            <description value="Test server to handle a Bundle of type transaction."/>
            <contentType value="{$_FORMAT}"/>
            <destination value="1"/>
            <origin value="1"/>
            <requestHeader>
               <field value="Prefer"/>
               <value value="return=representation"/>
            </requestHeader>
            <responseId value="transaction-response"/>
            <sourceId value="mp-vv-tst-apotheker-is-auteur-v30"/>
         </operation>
      </action>
      <nts:include value="assert.response.success" scope="common"/>
      <nts:include value="assert.response.bundleContent"
                   scope="common"
                   bundleType="transaction-response"/>
      <nts:include value="assert.response.numResources"
                   scope="common"
                   resource="MedicationRequest"
                   count="1"/>
      <nts:include value="assert.response.numResources"
                   scope="common"
                   resource="Medication"
                   count="1"/>
   </test>
   <test id="scenariombh-300-start-eind-vvv-apotheker--receive-propvv-identification">
      <name value="Resource identification"/>
      <description value="Checks if all resources specified by the scenario can be identified unambiguously."/>
      <action>
         <assert>
            <description value="Confirm that the response Bundle contains 1 MedicationRequest resource(s) that reference(s) Medication with coding '560308|urn:oid:2.16.840.1.113883.2.4.4.7' (METOCLOPRAMIDE HCL PCH TABLET 10MG)"/>
            <expression value="Bundle.entry.select(resource as MedicationRequest).where(medication.resolve().code.coding.where(system = 'urn:oid:2.16.840.1.113883.2.4.4.7' and code = '560308')).count() = 1"/>
            <sourceId value="transaction-response"/>
            <warningOnly value="false"/>
         </assert>
      </action>
      <action>
         <assert>
            <description value="Confirm that the response Bundle contains 1 Medication resource that contains code '560308|urn:oid:2.16.840.1.113883.2.4.4.7' (METOCLOPRAMIDE HCL PCH TABLET 10MG)"/>
            <expression value="Bundle.entry.select(resource as Medication).code.coding.where(system = 'urn:oid:2.16.840.1.113883.2.4.4.7' and code = '560308').count() = 1"/>
            <sourceId value="transaction-response"/>
            <warningOnly value="false"/>
         </assert>
      </action>
   </test>
</TestScript>
