<TestScript xmlns="http://hl7.org/fhir"
            xmlns:nts="http://nictiz.nl/xsl/testscript"
            nts:scenario="client">
   <id value="mp9-propvv-send-mbh-300-start-eind-vvv"/>
   <name value="MP9 - Client - Scenario mbh-300-start-eind-vvv. - Send ProposalVV"/>
   <description value="Scenario mbh-300-start-eind-vvv. - Send ProposalVV for C. van de XXX_Brugge."/>
   <nts:fixture id="mp-vv-tst-zorgverlener-is-auteur-v30"
                href="fixtures/mp-vv-tst-zorgverlener-is-auteur-v30.xml"/>
   <nts:includeDateT value="yes" nts:in-targets="Nictiz-intern"/>
   <test id="scenariombh-300-start-eind-vvv--send-propvv">
      <name value="Scenario mbh-300-start-eind-vvv."/>
      <description value="Specifies the query to run and general checks on the request."/>
      <action>
         <operation>
            <type>
               <system value="http://terminology.hl7.org/CodeSystem/testscript-operation-codes"/>
               <code value="transaction"/>
            </type>
            <description value="Test client to POST a Bundle of type transaction."/>
            <destination value="1"/>
            <origin value="1"/>
            <requestId value="transaction-request"/>
            <sourceId value="mp-vv-tst-zorgverlener-is-auteur-v30"/>
         </operation>
      </action>
      <nts:include value="test.client.successfulTransaction" scope="common"/>
      <nts:include value="assert.request.numResources"
                   scope="common"
                   resource="MedicationRequest"
                   count="1"/>
      <nts:include value="assert.request.numResources"
                   scope="common"
                   resource="Medication"
                   count="1"/>
   </test>
   <test id="scenariombh-300-start-eind-vvv--send-propvv-identification">
      <name value="Resource identification"/>
      <description value="Checks if all resources specified by the scenario can be identified unambiguously."/>
      <action>
         <assert>
            <description value="Confirm that the request Bundle contains 1 MedicationRequest resource(s) that reference(s) Medication with coding '560308|urn:oid:2.16.840.1.113883.2.4.4.7' (METOCLOPRAMIDE HCL PCH TABLET 10MG)"/>
            <expression value="Bundle.entry.select(resource as MedicationRequest).where(medication.resolve().code.coding.where(system = 'urn:oid:2.16.840.1.113883.2.4.4.7' and code = '560308')).count() = 1"/>
            <sourceId value="transaction-request"/>
            <warningOnly value="false"/>
         </assert>
      </action>
      <action>
         <assert>
            <description value="Confirm that the request Bundle contains 1 Medication resource that contains code '560308|urn:oid:2.16.840.1.113883.2.4.4.7' (METOCLOPRAMIDE HCL PCH TABLET 10MG)"/>
            <expression value="Bundle.entry.select(resource as Medication).code.coding.where(system = 'urn:oid:2.16.840.1.113883.2.4.4.7' and code = '560308').count() = 1"/>
            <sourceId value="transaction-request"/>
            <warningOnly value="false"/>
         </assert>
      </action>
   </test>
</TestScript>
