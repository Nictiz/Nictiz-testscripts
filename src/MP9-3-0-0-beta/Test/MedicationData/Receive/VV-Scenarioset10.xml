<TestScript xmlns="http://hl7.org/fhir"
            xmlns:nts="http://nictiz.nl/xsl/testscript"
            nts:scenario="server">
   <id value="mp9-meddata-receive-10-x"/>
   <name value="MP9 - Server - Scenario 10.x - Receive MedicationData"/>
   <description value="Scenario 10.x - Receive MedicationData for M. XXX_Niesing."/>
   <nts:fixture id="mgsets-mp-smg-tst-VV-Scenarioset10-v30"
                href="fixtures/mgsets-mp-smg-tst-VV-Scenarioset10-v30.{$_FORMAT}"/>
   <nts:includeDateT value="yes"/>
   <test id="scenario10-x-receive-meddata">
      <name value="Operation and general checks"/>
      <description value="Specifies the query that runs and general checks on the response."/>
      <action>
         <operation>
            <type>
               <system value="http://terminology.hl7.org/CodeSystem/testscript-operation-codes"/>
               <code value="transaction"/>
            </type>
            <description value="Test server to handle a Bundle of type transaction."/>
            <contentType value="{$_FORMAT}"/>
            <destination value="1"/>
            <origin value="1"/>
            <requestHeader>
               <field value="Prefer"/>
               <value value="return=representation"/>
            </requestHeader>
            <responseId value="transaction-response"/>
            <sourceId value="mgsets-mp-smg-tst-VV-Scenarioset10-v30"/>
         </operation>
      </action>
      <nts:include value="assert.response.success" scope="common"/>
      <nts:include value="assert.response.bundleContent"
                   scope="common"
                   bundleType="transaction-response"/>
      <nts:include value="assert.response.numResources"
                   scope="common"
                   resource="MedicationRequest"
                   count="2"/>
      <nts:include value="assert.response.numResources"
                   scope="common"
                   resource="Medication"
                   count="2"/>
   </test>
   <test id="scenario10-x-receive-meddata-identification">
      <name value="Resource identification"/>
      <description value="Checks if all resources specified by the scenario can be identified unambiguously."/>
      <action>
         <assert>
            <description value="Confirm that the response Bundle contains 1 MedicationRequest resource(s) that reference(s) Medication with coding '2214350|urn:oid:2.16.840.1.113883.2.4.4.7' (XARELTO TABLET FILMOMHULD 20MG)"/>
            <expression value="Bundle.entry.select(resource as MedicationRequest).where(medication.resolve().code.coding.where(system = 'urn:oid:2.16.840.1.113883.2.4.4.7' and code = '2214350')).count() = 1"/>
            <sourceId value="transaction-response"/>
            <warningOnly value="false"/>
         </assert>
      </action>
      <action>
         <assert>
            <description value="Confirm that the response Bundle contains 1 MedicationRequest resource(s) that reference(s) Medication with coding '13627163|urn:oid:2.16.840.1.113883.2.4.4.8' (INDAPAMIDE PCH TABET OMHULD 2,5MG)"/>
            <expression value="Bundle.entry.select(resource as MedicationRequest).where(medication.resolve().code.coding.where(system = 'urn:oid:2.16.840.1.113883.2.4.4.8' and code = '13627163')).count() = 1"/>
            <sourceId value="transaction-response"/>
            <warningOnly value="false"/>
         </assert>
      </action>
      <action>
         <assert>
            <description value="Confirm that the response Bundle contains 1 Medication resource that contains code '2214350|urn:oid:2.16.840.1.113883.2.4.4.7' (XARELTO TABLET FILMOMHULD 20MG)"/>
            <expression value="Bundle.entry.select(resource as Medication).code.coding.where(system = 'urn:oid:2.16.840.1.113883.2.4.4.7' and code = '2214350').count() = 1"/>
            <sourceId value="transaction-response"/>
            <warningOnly value="false"/>
         </assert>
      </action>
      <action>
         <assert>
            <description value="Confirm that the response Bundle contains 1 Medication resource that contains code '13627163|urn:oid:2.16.840.1.113883.2.4.4.8' (INDAPAMIDE PCH TABET OMHULD 2,5MG)"/>
            <expression value="Bundle.entry.select(resource as Medication).code.coding.where(system = 'urn:oid:2.16.840.1.113883.2.4.4.8' and code = '13627163').count() = 1"/>
            <sourceId value="transaction-response"/>
            <warningOnly value="false"/>
         </assert>
      </action>
   </test>
</TestScript>
