<TestScript xmlns="http://hl7.org/fhir"
            xmlns:nts="http://nictiz.nl/xsl/testscript"
            nts:scenario="server">
   <id value="mp9-meddata-receive-7-x"/>
   <name value="MP9 - Server - Scenario 7.x - Receive MedicationData"/>
   <description value="Scenario 7.x - Receive MedicationData for G. XXX_Hess."/>
   <nts:fixture id="mgsets-mp-smg-tst-VV-Scenarioset7-v30"
                href="fixtures/mgsets-mp-smg-tst-VV-Scenarioset7-v30.{$_FORMAT}"/>
   <nts:includeDateT value="yes"/>
   <test id="scenario7-x-receive-meddata">
      <name value="Operation and general checks"/>
      <description value="Specifies the query that runs and general checks on the response."/>
      <action>
         <operation>
            <type>
               <system value="http://terminology.hl7.org/CodeSystem/testscript-operation-codes"/>
               <code value="transaction"/>
            </type>
            <description value="Test server to handle a Bundle of type transaction."/>
            <contentType value="{$_FORMAT}"/>
            <destination value="1"/>
            <origin value="1"/>
            <requestHeader>
               <field value="Prefer"/>
               <value value="return=representation"/>
            </requestHeader>
            <responseId value="transaction-response"/>
            <sourceId value="mgsets-mp-smg-tst-VV-Scenarioset7-v30"/>
         </operation>
      </action>
      <nts:include value="assert.response.success" scope="common"/>
      <nts:include value="assert.response.bundleContent"
                   scope="common"
                   bundleType="transaction-response"/>
      <nts:include value="assert.response.numResources"
                   scope="common"
                   resource="MedicationRequest"
                   count="3"/>
      <nts:include value="assert.response.numResources"
                   scope="common"
                   resource="Medication"
                   count="3"/>
   </test>
   <test id="scenario7-x-receive-meddata-identification">
      <name value="Resource identification"/>
      <description value="Checks if all resources specified by the scenario can be identified unambiguously."/>
      <action>
         <assert>
            <description value="Confirm that the response Bundle contains 1 MedicationRequest resource(s) that reference(s) Medication with coding 'OTH|http://terminology.hl7.org/CodeSystem/v3-NullFlavor' (overig)"/>
            <expression value="Bundle.entry.select(resource as MedicationRequest).where(medication.resolve().code.coding.where(system = 'http://terminology.hl7.org/CodeSystem/v3-NullFlavor' and code = 'OTH')).count() = 1"/>
            <sourceId value="transaction-response"/>
            <warningOnly value="false"/>
         </assert>
      </action>
      <action>
         <assert>
            <description value="Confirm that the response Bundle contains 1 MedicationRequest resource(s) that reference(s) Medication with coding 'OTH|http://terminology.hl7.org/CodeSystem/v3-NullFlavor' (overig)"/>
            <expression value="Bundle.entry.select(resource as MedicationRequest).where(medication.resolve().code.coding.where(system = 'http://terminology.hl7.org/CodeSystem/v3-NullFlavor' and code = 'OTH')).count() = 1"/>
            <sourceId value="transaction-response"/>
            <warningOnly value="false"/>
         </assert>
      </action>
      <action>
         <assert>
            <description value="Confirm that the response Bundle contains 1 MedicationRequest resource(s) that reference(s) Medication with coding '90000001|urn:oid:2.16.840.1.113883.2.4.3.11.9999.77.90000000.1.1111' (Eigen artikel: ureumzalf)"/>
            <expression value="Bundle.entry.select(resource as MedicationRequest).where(medication.resolve().code.coding.where(system = 'urn:oid:2.16.840.1.113883.2.4.3.11.9999.77.90000000.1.1111' and code = '90000001')).count() = 1"/>
            <sourceId value="transaction-response"/>
            <warningOnly value="false"/>
         </assert>
      </action>
      <action>
         <assert>
            <description value="Confirm that the response Bundle contains 1 Medication resource that contains code 'OTH|http://terminology.hl7.org/CodeSystem/v3-NullFlavor' (overig)"/>
            <expression value="Bundle.entry.select(resource as Medication).code.coding.where(system = 'http://terminology.hl7.org/CodeSystem/v3-NullFlavor' and code = 'OTH').count() = 1"/>
            <sourceId value="transaction-response"/>
            <warningOnly value="false"/>
         </assert>
      </action>
      <action>
         <assert>
            <description value="Confirm that the response Bundle contains 1 Medication resource that contains code '90000001|urn:oid:2.16.840.1.113883.2.4.3.11.9999.77.90000000.1.1111' (Eigen artikel: ureumzalf)"/>
            <expression value="Bundle.entry.select(resource as Medication).code.coding.where(system = 'urn:oid:2.16.840.1.113883.2.4.3.11.9999.77.90000000.1.1111' and code = '90000001').count() = 1"/>
            <sourceId value="transaction-response"/>
            <warningOnly value="false"/>
         </assert>
      </action>
   </test>
</TestScript>
