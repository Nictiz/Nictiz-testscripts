<TestScript xmlns="http://hl7.org/fhir"
            xmlns:nts="http://nictiz.nl/xsl/testscript"
            nts:scenario="server">
   <id value="mp9-meddata-receive-1-x"/>
   <name value="MP9 - Server - Scenario 1.x - Receive MedicationData"/>
   <description value="Scenario 1.x - Receive MedicationData for C. XXX_Brugge."/>
   <nts:fixture id="mgsets-mp-smg-tst-MGB-Scenarioset1-v30"
