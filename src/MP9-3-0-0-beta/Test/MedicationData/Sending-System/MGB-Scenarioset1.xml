<TestScript xmlns="http://hl7.org/fhir"
            xmlns:nts="http://nictiz.nl/xsl/testscript"
            nts:scenario="client">
   <id value="mp9-meddata-send-1-x"/>
   <version value="r4-mp9-3.0.0-beta"/>
   <name value="MP9 - Client - Scenario 1.x - Send MedicationData - MGB-Scenarioset1"/>
   <description value="Scenario 1.x - Send MedicationData for C. XXX_Brugge."/>
   <nts:fixture id="mgsets-mp-smg-tst-MGB-Scenarioset1-v30"
                href="fixtures/mgsets-mp-smg-tst-MGB-Scenarioset1-v30.xml"
                nts:in-targets="Nictiz-intern"/>
   <nts:includeDateT value="yes" nts:in-targets="Nictiz-intern"/>
   <test id="scenario1-x-send-meddata">
      <name value="Scenario 1.x"/>
      <description value="Send MedicationData in a transaction Bundle"/>
      <action>
         <operation>
            <type>
               <system value="http://terminology.hl7.org/CodeSystem/testscript-operation-codes"/>
               <code value="transaction"/>
            </type>
            <description value="Test client to POST a Bundle of type transaction."/>
            <destination value="1"/>
            <origin value="1"/>
            <responseId value="transaction-response-fixture"/>
            <sourceId value="mgsets-mp-smg-tst-MGB-Scenarioset1-v30"
                      nts:in-targets="Nictiz-intern"/>
         </operation>
      </action>
      <nts:include value="test.client.successfulTransaction" scope="common"/>
      <nts:include value="assert.request.numResources"
                   scope="common"
                   resource="MedicationStatement"
                   count="5"/>
      <nts:include value="assert.request.numResources"
                   scope="common"
                   resource="Medication"
                   count="5"/>
   </test>
   <test id="scenario1-x-send-meddata-identification">
      <name value="Resource identification"/>
      <description value="Checks if all resources specified by the scenario can be identified unambiguously."/>
      <action>
         <assert>
            <expression value="Bundle.entry.resource.where($this is MedicationStatement).where(medication.resolve().code.where(coding.exists(code = '2115468') and coding.exists(code = '6947') and coding.exists(code = '19429'))).count() = 1"/>
            <sourceId value="transaction-request"/>
            <warningOnly value="false"/>
         </assert>
      </action>
      <action>
         <assert>
            <expression value="Bundle.entry.resource.where($this is MedicationStatement).where(medication.resolve().code.where(coding.exists(code = '26638') and coding.exists(code = '71587'))).count() = 1"/>
            <sourceId value="transaction-request"/>
            <warningOnly value="false"/>
