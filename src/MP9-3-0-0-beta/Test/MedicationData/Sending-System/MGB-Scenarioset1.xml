      </action>
      <action>
         <assert>
            <expression value="Bundle.entry.resource.where($this is MedicationStatement).where(medication.resolve().code.where(coding.exists(code = '202185') and coding.exists(code = '3891') and coding.exists(code = '61433'))).count() = 1"/>
