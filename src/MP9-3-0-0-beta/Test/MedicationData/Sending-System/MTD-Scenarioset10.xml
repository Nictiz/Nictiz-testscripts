<TestScript xmlns="http://hl7.org/fhir"
            xmlns:nts="http://nictiz.nl/xsl/testscript"
            nts:scenario="client">
   <id value="mp9-meddata-send-10-x"/>
   <version value="r4-mp9-3.0.0-beta"/>
   <name value="MP9 - Client - Scenario 10.x - Send MedicationData - MTD-Scenarioset10"/>
   <description value="Scenario 10.x - Send MedicationData for M. XXX_Niesing."/>
   <nts:fixture id="mgsets-mp-smg-tst-MTD-Scenarioset10-v30"
                href="fixtures/mgsets-mp-smg-tst-MTD-Scenarioset10-v30.xml"
                nts:in-targets="Nictiz-intern"/>
   <nts:includeDateT value="yes" nts:in-targets="Nictiz-intern"/>
   <test id="scenario10-x-send-meddata">
      <name value="Scenario 10.x"/>
      <description value="Send MedicationData in a transaction Bundle"/>
      <action>
         <operation>
            <type>
               <system value="http://terminology.hl7.org/CodeSystem/testscript-operation-codes"/>
               <code value="transaction"/>
            </type>
            <description value="Test client to POST a Bundle of type transaction."/>
            <destination value="1"/>
            <origin value="1"/>
            <responseId value="transaction-response-fixture"/>
            <sourceId value="mgsets-mp-smg-tst-MTD-Scenarioset10-v30"
                      nts:in-targets="Nictiz-intern"/>
         </operation>
      </action>
      <nts:include value="test.client.successfulTransaction" scope="common"/>
      <nts:include value="assert.request.numResources"
                   scope="common"
                   resource="MedicationAdministration"
                   count="1"/>
      <nts:include value="assert.request.numResources"
                   scope="common"
                   resource="Medication"
                   count="1"/>
   </test>
   <test id="scenario10-x-send-meddata-identification">
      <name value="Resource identification"/>
      <description value="Checks if all resources specified by the scenario can be identified unambiguously."/>
      <action>
         <assert>
            <expression value="Bundle.entry.resource.where($this is MedicationAdministration).where(medication.resolve().code.where(coding.exists(code = '16255429') and coding.exists(code = '2593866') and coding.exists(code = '2941') and coding.exists(code = '83593'))).count() = 1"/>
            <sourceId value="transaction-request"/>
            <warningOnly value="false"/>
         </assert>
      </action>
      <action>
         <assert>
            <description value="Confirm that the request Bundle contains 1 Medication resource that contains code '16255429|urn:oid:2.16.840.1.113883.2.4.4.8' (INDAPAMIDE CF TABLET OMHULD 2,5MG)"/>
            <expression value="Bundle.entry.where($this is Medication).where(code.coding.where(system = 'urn:oid:2.16.840.1.113883.2.4.4.8' and code = '16255429')).count() = 1"/>
            <sourceId value="transaction-request"/>
            <warningOnly value="false"/>
         </assert>
      </action>
   </test>
</TestScript>
