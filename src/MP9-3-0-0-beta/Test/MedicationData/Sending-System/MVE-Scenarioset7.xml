<TestScript xmlns="http://hl7.org/fhir"
            xmlns:nts="http://nictiz.nl/xsl/testscript"
            nts:scenario="client">
   <id value="mp9-meddata-send-7-x"/>
   <version value="r4-mp9-3.0.0-beta"/>
   <name value="MP9 - Client - Scenario 7.x - Send MedicationData - MVE-Scenarioset7"/>
   <description value="Scenario 7.x - Send MedicationData for G. XXX_Hess."/>
   <nts:fixture id="mgsets-mp-smg-tst-MVE-Scenarioset7-v30"
                href="fixtures/mgsets-mp-smg-tst-MVE-Scenarioset7-v30.xml"
                nts:in-targets="Nictiz-intern"/>
   <nts:includeDateT value="yes" nts:in-targets="Nictiz-intern"/>
   <test id="scenario7-x-send-meddata">
      <name value="Scenario 7.x"/>
      <description value="Send MedicationData in a transaction Bundle"/>
      <action>
         <operation>
            <type>
               <system value="http://terminology.hl7.org/CodeSystem/testscript-operation-codes"/>
               <code value="transaction"/>
            </type>
            <description value="Test client to POST a Bundle of type transaction."/>
            <destination value="1"/>
            <origin value="1"/>
            <responseId value="transaction-response-fixture"/>
            <sourceId value="mgsets-mp-smg-tst-MVE-Scenarioset7-v30"
                      nts:in-targets="Nictiz-intern"/>
         </operation>
      </action>
      <nts:include value="test.client.successfulTransaction" scope="common"/>
      <nts:include value="assert.request.numResources"
                   scope="common"
                   resource="MedicationDispense"
                   count="4"/>
      <nts:include value="assert.request.numResources"
                   scope="common"
                   resource="Medication"
                   count="4"/>
   </test>
   <test id="scenario7-x-send-meddata-identification">
      <name value="Resource identification"/>
      <description value="Checks if all resources specified by the scenario can be identified unambiguously."/>
      <action>
         <assert>
            <expression value="Bundle.entry.resource.where($this is MedicationDispense).where(medication.resolve().where(code.where(coding.exists(code = 'OTH')) and ingredient.item.where(coding.exists(code = '1042467')) and ingredient.item.where(coding.exists(code = '1516981'))).where((quantity.value = 50')).count() = 1"/>
            <sourceId value="transaction-request"/>
            <warningOnly value="false"/>
         </assert>
      </action>
      <action>
         <assert>
            <expression value="Bundle.entry.resource.where($this is MedicationDispense).where(medication.resolve().where(code.where(coding.exists(code = 'OTH')) and ingredient.item.where(coding.exists(code = '457590'))).where((quantity.value = 75')).count() = 1"/>
            <sourceId value="transaction-request"/>
            <warningOnly value="false"/>
         </assert>
      </action>
      <action>
         <assert>
            <expression value="Bundle.entry.resource.where($this is MedicationDispense).where(medication.resolve().code.where(coding.exists(code = '90000001'))).where((quantity.value = 100')).count() = 1"/>
            <sourceId value="transaction-request"/>
            <warningOnly value="false"/>
         </assert>
      </action>
      <action>
         <assert>
            <expression value="Bundle.entry.resource.where($this is MedicationDispense).where(medication.resolve().where(code.where(coding.exists(code = 'OTH')) and ).count() = 0"/>
            <sourceId value="transaction-request"/>
            <warningOnly value="false"/>
         </assert>
      </action>
      <action>
         <assert>
            <description value="Confirm that the request Bundle contains 3 Medication resource that contains code 'OTH|http://terminology.hl7.org/CodeSystem/v3-NullFlavor' (overig)"/>
            <expression value="Bundle.entry.resource.where($this is Medication).where(code.coding.exists(system = 'http://terminology.hl7.org/CodeSystem/v3-NullFlavor' and code = 'OTH')).count() = 3"/>
            <sourceId value="transaction-request"/>
            <warningOnly value="false"/>
         </assert>
      </action>
      <action>
         <assert>
            <description value="Confirm that the request Bundle contains 1 Medication resource that contains code '90000001|urn:oid:2.16.840.1.113883.2.4.3.11.9999.77.90000000.1.1111' (Eigen artikel: ureumzalf)"/>
            <expression value="Bundle.entry.resource.where($this is Medication).where(code.coding.exists(system = 'urn:oid:2.16.840.1.113883.2.4.3.11.9999.77.90000000.1.1111' and code = '90000001')).count() = 1"/>
            <sourceId value="transaction-request"/>
            <warningOnly value="false"/>
         </assert>
      </action>
   </test>
</TestScript>
