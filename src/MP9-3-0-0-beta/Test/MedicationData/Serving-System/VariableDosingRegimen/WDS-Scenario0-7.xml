<TestScript xmlns:nts="http://nictiz.nl/xsl/testscript"
            xmlns="http://hl7.org/fhir"
            nts:scenario="server">
   <f:variable xmlns:nf="http://www.nictiz.nl/functions" xmlns:f="http://hl7.org/fhir">
      <f:name value="filter-identifier"/>
      <f:defaultValue value="urn:oid:2.16.840.1.113883.2.4.3.11.999.77.1.1|MBH_300_QA7"/>
      <f:description value="Filter on specific pharmaceutical treatment identifier"/>
   </f:variable>
   <id value="mp9-wds-Serve-0-7"/>
   <version value="r4-mp9-3.0.0-beta"/>
   <name value="Medication Process 9 3.0.0-beta  - VariableDosingRegimen - Serve - Scenario 0.7"/>
   <description value="Scenario 0.7 - WDS-en met een specifieke medicamenteuze behandeling als filter (in kwalificatiesimulator het id van &#34;MBH_300_QA7&#34; invoeren)&#xA;(Antwoord: bericht met 1 WDS)"/>
   <nts:authToken patientResourceId="nl-core-Patient-mp9-R-vanXXX-Sonnenberg"
                  nts:in-targets="MedMij"/>
   <test id="Scenario-0-7">
      <name value="Scenario 0.7"/>
      <description value="WDS-en met een specifieke medicamenteuze behandeling als filter (in kwalificatiesimulator het id van &#34;MBH_300_QA7&#34; invoeren)&#xA;(Antwoord: bericht met 1 WDS)"/>
      <nts:include value="test.server.search" scope="common" nts:in-targets="#default">
         <nts:with-parameter name="description"
                             value="Test server to serve MedicationRequest resource(s) representing MP9 building block VariableDosingRegimen"/>
         <nts:with-parameter name="resource" value="MedicationRequest"/>
         <nts:with-parameter name="params"
                             value="?patient.identifier=http://fhir.nl/fhir/NamingSystem/bsn|999901084&amp;category=http://snomed.info/sct|395067002&amp;pharmaceutical-treatment-identifier=${filter-identifier}&amp;_include=MedicationRequest:medication"/>
      </nts:include>
      <nts:include value="medmij/test.xis.search"
                   scope="common"
                   nts:in-targets="MedMij">
         <nts:with-parameter name="description"
                             value="Test XIS server to serve MedicationRequest resource(s) representing MP9 building block VariableDosingRegimen"/>
         <nts:with-parameter name="resource" value="MedicationRequest"/>
         <nts:with-parameter name="params"
                             value="?category=http://snomed.info/sct|395067002&amp;pharmaceutical-treatment-identifier=${filter-identifier}&amp;_include=MedicationRequest:medication"/>
      </nts:include>
      <nts:include value="assert.response.successfulSearch" scope="common"/>
      <nts:include value="assert-responseBundleContent-noMM"/>
      <nts:include value="assert-returnCount" scope="project">
         <nts:with-parameter name="resource" value="MedicationRequest"/>
         <nts:with-parameter name="count" value="1"/>
      </nts:include>
      <nts:include value="assert-returnEntryCountAtLeast" scope="project">
         <nts:with-parameter name="count" value="2"/>
         <nts:with-parameter name="breakdown"
                             value="(Consists of 1 MedicationRequest and 1 Medication resources.)"/>
      </nts:include>
   </test>
</TestScript>
