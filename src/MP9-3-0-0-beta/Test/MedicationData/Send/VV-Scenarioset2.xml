<TestScript xmlns="http://hl7.org/fhir"
            xmlns:nts="http://nictiz.nl/xsl/testscript"
            nts:scenario="client">
   <id value="mp9-meddata-send-2-x"/>
   <name value="MP9 - Client - Scenario 2.x - Send MedicationData"/>
   <description value="Scenario 2.x - Send MedicationData for C. XXX_Coenen."/>
   <nts:fixture id="mgsets-mp-smg-tst-VV-Scenarioset2-v30"
                href="fixtures/mgsets-mp-smg-tst-VV-Scenarioset2-v30.xml"/>
   <nts:includeDateT value="yes" nts:in-targets="Nictiz-intern"/>
   <test id="scenario2-x-send-meddata">
      <name value="Scenario 2.x"/>
      <description value="Specifies the query to run and general checks on the request."/>
      <action>
         <operation>
            <type>
               <system value="http://terminology.hl7.org/CodeSystem/testscript-operation-codes"/>
               <code value="transaction"/>
            </type>
            <description value="Test client to POST a Bundle of type transaction."/>
            <destination value="1"/>
            <origin value="1"/>
            <requestId value="transaction-request"/>
            <sourceId value="mgsets-mp-smg-tst-VV-Scenarioset2-v30"/>
         </operation>
      </action>
      <nts:include value="test.client.successfulTransaction" scope="common"/>
      <nts:include value="assert.request.numResources"
                   scope="common"
                   resource="MedicationRequest"
                   count="2"/>
      <nts:include value="assert.request.numResources"
                   scope="common"
                   resource="Medication"
                   count="2"/>
   </test>
   <test id="scenario2-x-send-meddata-identification">
      <name value="Resource identification"/>
      <description value="Checks if all resources specified by the scenario can be identified unambiguously."/>
      <action>
         <assert>
            <expression value="Bundle.entry.select(resource as MedicationRequest).where(medication.resolve().code.where(coding.where(code = '5967') and coding.where(code = '16810'))).count() = 1"/>
            <sourceId value="transaction-request"/>
            <warningOnly value="false"/>
         </assert>
      </action>
      <action>
         <assert>
            <expression value="Bundle.entry.select(resource as MedicationRequest).where(medication.resolve().code.where(coding.where(code = '17205') and coding.where(code = '41092'))).count() = 1"/>
            <sourceId value="transaction-request"/>
            <warningOnly value="false"/>
         </assert>
      </action>
      <action>
         <assert>
            <description value="Confirm that the request Bundle contains 1 Medication resource that contains code '5967|urn:oid:2.16.840.1.113883.2.4.4.10' (FUROSEMIDE 40MG TABLET)"/>
            <expression value="Bundle.entry.select(resource as Medication).where(code.coding.where(system = 'urn:oid:2.16.840.1.113883.2.4.4.10' and code = '5967')).count() = 1"/>
            <sourceId value="transaction-request"/>
            <warningOnly value="false"/>
         </assert>
      </action>
      <action>
         <assert>
            <description value="Confirm that the request Bundle contains 1 Medication resource that contains code '17205|urn:oid:2.16.840.1.113883.2.4.4.10' (FENETICILLINE CAPSULE 500MG)"/>
            <expression value="Bundle.entry.select(resource as Medication).where(code.coding.where(system = 'urn:oid:2.16.840.1.113883.2.4.4.10' and code = '17205')).count() = 1"/>
            <sourceId value="transaction-request"/>
            <warningOnly value="false"/>
         </assert>
      </action>
   </test>
</TestScript>
