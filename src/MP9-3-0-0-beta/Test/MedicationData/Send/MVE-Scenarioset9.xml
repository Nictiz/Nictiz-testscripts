<TestScript xmlns="http://hl7.org/fhir"
            xmlns:nts="http://nictiz.nl/xsl/testscript"
            nts:scenario="client">
   <id value="mp9-meddata-send-9-x"/>
   <name value="MP9 - Client - Scenario 9.x - Send MedicationData"/>
   <description value="Scenario 9.x - Send MedicationData for M. XXX_Nederveen."/>
   <nts:fixture id="mgsets-mp-smg-tst-MVE-Scenarioset9-v30"
                href="fixtures/mgsets-mp-smg-tst-MVE-Scenarioset9-v30.xml"/>
   <nts:includeDateT value="yes" nts:in-targets="Nictiz-intern"/>
   <test id="scenario9-x-send-meddata">
      <name value="Scenario 9.x"/>
      <description value="Specifies the query to run and general checks on the request."/>
      <action>
         <operation>
            <type>
               <system value="http://terminology.hl7.org/CodeSystem/testscript-operation-codes"/>
               <code value="transaction"/>
            </type>
            <description value="Test client to POST a Bundle of type transaction."/>
            <destination value="1"/>
            <origin value="1"/>
            <requestId value="transaction-request"/>
            <sourceId value="mgsets-mp-smg-tst-MVE-Scenarioset9-v30"/>
         </operation>
      </action>
      <nts:include value="test.client.successfulTransaction" scope="common"/>
      <nts:include value="assert.request.numResources"
                   scope="common"
                   resource="MedicationDispense"
                   count="3"/>
      <nts:include value="assert.request.numResources"
                   scope="common"
                   resource="Medication"
                   count="3"/>
   </test>
   <test id="scenario9-x-send-meddata-identification">
      <name value="Resource identification"/>
      <description value="Checks if all resources specified by the scenario can be identified unambiguously."/>
      <action>
         <assert>
            <description value="Confirm that the request Bundle contains 1 MedicationDispense resource(s) that reference(s) Medication with coding '425087|urn:oid:2.16.840.1.113883.2.4.4.7' (BROXIL CAPSULE 500MG)"/>
            <expression value="Bundle.entry.select(resource as MedicationDispense).where(medication.resolve().code.coding.where(system = 'urn:oid:2.16.840.1.113883.2.4.4.7' and code = '425087')).count() = 1"/>
            <sourceId value="transaction-request"/>
            <warningOnly value="false"/>
         </assert>
      </action>
      <action>
         <assert>
            <description value="Confirm that the request Bundle contains 1 MedicationDispense resource(s) that reference(s) Medication with coding '1101099|urn:oid:2.16.840.1.113883.2.4.4.7' (MIZOLLEN TABLET MGA 10MG)"/>
            <expression value="Bundle.entry.select(resource as MedicationDispense).where(medication.resolve().code.coding.where(system = 'urn:oid:2.16.840.1.113883.2.4.4.7' and code = '1101099')).count() = 1"/>
            <sourceId value="transaction-request"/>
            <warningOnly value="false"/>
         </assert>
      </action>
      <action>
         <assert>
            <description value="Confirm that the request Bundle contains 1 MedicationDispense resource(s) that reference(s) Medication with coding '768901|urn:oid:2.16.840.1.113883.2.4.4.7' (PARACETAMOL PCH TABLET 500MG)"/>
            <expression value="Bundle.entry.select(resource as MedicationDispense).where(medication.resolve().code.coding.where(system = 'urn:oid:2.16.840.1.113883.2.4.4.7' and code = '768901')).count() = 1"/>
            <sourceId value="transaction-request"/>
            <warningOnly value="false"/>
         </assert>
      </action>
      <action>
         <assert>
            <description value="Confirm that the request Bundle contains 1 Medication resource that contains code '425087|urn:oid:2.16.840.1.113883.2.4.4.7' (BROXIL CAPSULE 500MG)"/>
            <expression value="Bundle.entry.select(resource as Medication).code.coding.where(system = 'urn:oid:2.16.840.1.113883.2.4.4.7' and code = '425087').count() = 1"/>
            <sourceId value="transaction-request"/>
            <warningOnly value="false"/>
         </assert>
      </action>
      <action>
         <assert>
            <description value="Confirm that the request Bundle contains 1 Medication resource that contains code '1101099|urn:oid:2.16.840.1.113883.2.4.4.7' (MIZOLLEN TABLET MGA 10MG)"/>
            <expression value="Bundle.entry.select(resource as Medication).code.coding.where(system = 'urn:oid:2.16.840.1.113883.2.4.4.7' and code = '1101099').count() = 1"/>
            <sourceId value="transaction-request"/>
            <warningOnly value="false"/>
         </assert>
      </action>
      <action>
         <assert>
            <description value="Confirm that the request Bundle contains 1 Medication resource that contains code '768901|urn:oid:2.16.840.1.113883.2.4.4.7' (PARACETAMOL PCH TABLET 500MG)"/>
            <expression value="Bundle.entry.select(resource as Medication).code.coding.where(system = 'urn:oid:2.16.840.1.113883.2.4.4.7' and code = '768901').count() = 1"/>
            <sourceId value="transaction-request"/>
            <warningOnly value="false"/>
         </assert>
      </action>
   </test>
</TestScript>
