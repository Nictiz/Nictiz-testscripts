<TestScript xmlns="http://hl7.org/fhir"
            xmlns:nts="http://nictiz.nl/xsl/testscript"
            nts:scenario="client">
   <id value="mp9-meddata-send-7-x"/>
   <name value="MP9 - Client - Scenario 7.x - Send MedicationData"/>
   <description value="Scenario 7.x - Send MedicationData for G. XXX_Hess."/>
   <nts:fixture id="mgsets-mp-smg-tst-MVE-Scenarioset7-v30"
                href="fixtures/mgsets-mp-smg-tst-MVE-Scenarioset7-v30.xml"/>
   <nts:includeDateT value="yes" nts:in-targets="Nictiz-intern"/>
   <test id="scenario7-x-send-meddata">
      <name value="Scenario 7.x"/>
      <description value="Specifies the query to run and general checks on the request."/>
      <action>
         <operation>
            <type>
               <system value="http://terminology.hl7.org/CodeSystem/testscript-operation-codes"/>
               <code value="transaction"/>
            </type>
            <description value="Test client to POST a Bundle of type transaction."/>
            <destination value="1"/>
            <origin value="1"/>
            <requestId value="transaction-request"/>
            <sourceId value="mgsets-mp-smg-tst-MVE-Scenarioset7-v30"/>
         </operation>
      </action>
      <nts:include value="test.client.successfulTransaction" scope="common"/>
      <nts:include value="assert.request.numResources"
                   scope="common"
                   resource="MedicationDispense"
                   count="3"/>
      <nts:include value="assert.request.numResources"
                   scope="common"
                   resource="Medication"
                   count="3"/>
   </test>
   <test id="scenario7-x-send-meddata-identification">
      <name value="Resource identification"/>
      <description value="Checks if all resources specified by the scenario can be identified unambiguously."/>
      <action>
         <assert>
            <description value="Confirm that the request Bundle contains 2 MedicationDispense resource(s) that reference(s) Medication with coding 'OTH|http://terminology.hl7.org/CodeSystem/v3-NullFlavor' (overig)"/>
            <expression value="Bundle.entry.select(resource as MedicationDispense).where(medication.resolve().code.coding.where(system = 'http://terminology.hl7.org/CodeSystem/v3-NullFlavor' and code = 'OTH')).count() = 2"/>
            <sourceId value="transaction-request"/>
            <warningOnly value="false"/>
         </assert>
      </action>
      <action>
         <assert>
            <description value="Confirm that the request Bundle contains 1 MedicationDispense resource(s) that reference(s) Medication with 90 million number coding"/>
            <expression value="Bundle.entry.select(resource as MedicationDispense).where(medication.resolve().code.coding.where(system.startsWith('urn:oid:2.16.840.1.113883.2.4.4.').not() and code.toInteger() &gt; 90000000)).count() = 1"/>
            <sourceId value="transaction-request"/>
            <warningOnly value="false"/>
         </assert>
      </action>
      <action>
         <assert>
            <description value="Confirm that the request Bundle contains 2 Medication resource that contains code 'OTH|http://terminology.hl7.org/CodeSystem/v3-NullFlavor' (overig)"/>
            <expression value="Bundle.entry.select(resource as Medication).where(code.coding.where(system = 'http://terminology.hl7.org/CodeSystem/v3-NullFlavor' and code = 'OTH')).count() = 2"/>
            <sourceId value="transaction-request"/>
            <warningOnly value="false"/>
         </assert>
      </action>
      <action>
         <assert>
            <description value="Confirm that the request Bundle contains 1 Medication resource that contains code '90000001|urn:oid:2.16.840.1.113883.2.4.3.11.9999.77.90000000.1.1111' (Eigen artikel: ureumzalf)"/>
            <expression value="Bundle.entry.select(resource as Medication).where(code.coding.where(system = 'urn:oid:2.16.840.1.113883.2.4.3.11.9999.77.90000000.1.1111' and code = '90000001')).count() = 1"/>
            <sourceId value="transaction-request"/>
            <warningOnly value="false"/>
         </assert>
      </action>
   </test>
</TestScript>
