<TestScript xmlns:nts="http://nictiz.nl/xsl/testscript"
            xmlns="http://hl7.org/fhir"
            nts:scenario="server">
   <id value="mp9-t-ser-meddata-MA-14-x"/>
   <version value="r4-mp9-3.0.0"/>
   <name value="mp9-t-ser-meddata-MA-14-x"/>
   <title value="Scenario 14.x"/>
   <description value="Serve Medication data MA building blocks for patient S-XXX-Tewariem&#xA;&#xA;For more info:&#xA;https://informatiestandaarden.nictiz.nl/wiki/mp:V9.3.0_testgegevens_medicatiegegevens_beschikbaarstellen_MA&#xA;&#xA;Original description:&#xA;TEST Medicatiegegevens MA Scenarioset 14 (geen medicatie)"/>
   <nts:authToken patientResourceId="nl-core-Patient-mp9-S-XXX-Tewariem"
                  nts:in-targets="MedMij"/>
   <nts:includeDateT value="no"/>
   <test id="mp9-t-ser-meddata-MA-14-x-01">
      <name value="Scenario 14.x"/>
      <description value="Serve Medication data MA resources in a searchset Bundle"/>
      <nts:include value="test.server.search" scope="common" nts:in-targets="#default">
         <nts:with-parameter name="description"
                             value="Test server to serve MedicationRequest resource(s) representing MP9 building block MedicationAgreement"/>
         <nts:with-parameter name="resource" value="MedicationRequest"/>
         <nts:with-parameter name="params"
                             value="?patient.identifier=http://fhir.nl/fhir/NamingSystem/bsn|999901126&amp;category=http://snomed.info/sct|33633005&amp;_include=MedicationRequest:medication&amp;_include=MedicationRequest:subject&amp;_include=MedicationRequest:reason&amp;_include=MedicationRequest:next-practitioner&amp;_include=MedicationRequest:requester&amp;_include:iterate=PractitionerRole:organization&amp;_include:iterate=PractitionerRole:practitioner&amp;_include:iterate=PractitionerRole:location"/>
      </nts:include>
      <nts:include value="medmij/test.xis.search"
                   scope="common"
                   nts:in-targets="MedMij">
         <nts:with-parameter name="description"
                             value="Test XIS server to serve MedicationRequest resource(s) representing MP9 building block MedicationAgreement"/>
         <nts:with-parameter name="resource" value="MedicationRequest"/>
         <nts:with-parameter name="params"
                             value="?category=http://snomed.info/sct|33633005&amp;_include=MedicationRequest:medication&amp;_include=MedicationRequest:subject&amp;_include=MedicationRequest:reason&amp;_include=MedicationRequest:next-practitioner&amp;_include=MedicationRequest:requester&amp;_include:iterate=PractitionerRole:organization&amp;_include:iterate=PractitionerRole:practitioner&amp;_include:iterate=PractitionerRole:location"/>
      </nts:include>
      <nts:include value="assert.response.successfulSearch" scope="common"/>
      <nts:include value="assert-responseBundleContent-noMM"/>
      <nts:include value="assert-returnCountAtLeast" scope="project">
         <nts:with-parameter name="resource" value="MedicationRequest"/>
         <nts:with-parameter name="count" value="0"/>
      </nts:include>
      <nts:include value="assert-returnCount" scope="project">
         <nts:with-parameter name="resource" value="Medication"/>
         <nts:with-parameter name="count" value="0"/>
      </nts:include>
   </test>
</TestScript>
