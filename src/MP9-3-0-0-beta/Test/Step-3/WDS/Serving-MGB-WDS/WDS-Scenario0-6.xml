<TestScript xmlns:nts="http://nictiz.nl/xsl/testscript"
            xmlns="http://hl7.org/fhir"
            nts:scenario="server">
   <id value="mp9-test-serve-meddata-WDS-00-6"/>
   <version value="r4-mp9-3.0.0-beta"/>
   <title value="Scenario 0.6"/>
   <description value="Serve Medication data WDS building blocks for patient R-vanXXX-Sonnenberg &#xA;&#xA;Original description: &#xA;TEST Medicatiegegevens WDS Scenarioset 0 &#xA;WDS-en met een filter op gebruiksperiode – ingangsdatum én einddatum (alles vanaf T-21 tot en met T-7)&#xA;(Antwoord: bericht met 2 WDS-en)"/>
   <nts:authToken patientResourceId="nl-core-Patient-mp9-R-vanXXX-Sonnenberg"
                  nts:in-targets="MedMij"/>
   <nts:includeDateT value="yes"/>
   <test id="mp9-test-serve-meddata-WDS-00-6-01">
      <name value="Scenario 0.6"/>
      <description value="Serve Medication data WDS resources in a searchset Bundle"/>
      <nts:include value="test.server.search" scope="common" nts:in-targets="#default">
         <nts:with-parameter name="description"
                             value="Test server to serve MedicationRequest resource(s) representing MP9 building block VariableDosingRegimen"/>
         <nts:with-parameter name="resource" value="MedicationRequest"/>
         <nts:with-parameter name="params"
                             value="?patient.identifier=http://fhir.nl/fhir/NamingSystem/bsn|999901084&amp;category=http://snomed.info/sct|395067002&amp;period-of-use=ge${DATE, T, D,-21}&amp;period-of-use=le${DATE, T, D,-7}&amp;_include=MedicationRequest:medication"/>
      </nts:include>
      <nts:include value="medmij/test.xis.search"
                   scope="common"
                   nts:in-targets="MedMij">
         <nts:with-parameter name="description"
                             value="Test XIS server to serve MedicationRequest resource(s) representing MP9 building block VariableDosingRegimen"/>
         <nts:with-parameter name="resource" value="MedicationRequest"/>
         <nts:with-parameter name="params"
                             value="?category=http://snomed.info/sct|395067002&amp;period-of-use=ge${DATE, T, D,-21}&amp;period-of-use=le${DATE, T, D,-7}&amp;_include=MedicationRequest:medication"/>
      </nts:include>
      <nts:include value="assert.response.successfulSearch" scope="common"/>
      <nts:include value="assert-responseBundleContent-noMM"/>
      <nts:include value="assert-returnCount" scope="project">
         <nts:with-parameter name="resource" value="MedicationRequest"/>
         <nts:with-parameter name="count" value="2"/>
      </nts:include>
      <nts:include value="assert-returnCount" scope="project">
         <nts:with-parameter name="resource" value="Medication"/>
         <nts:with-parameter name="count" value="2"/>
      </nts:include>
   </test>
</TestScript>
