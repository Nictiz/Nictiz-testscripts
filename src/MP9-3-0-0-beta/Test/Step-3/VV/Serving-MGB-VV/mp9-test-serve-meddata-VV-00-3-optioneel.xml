<TestScript xmlns:nts="http://nictiz.nl/xsl/testscript"
            xmlns="http://hl7.org/fhir"
            nts:scenario="server">
   <id value="mp9-test-serve-meddata-VV-00-3-optioneel"/>
   <version value="r4-mp9-3.0.0-beta"/>
   <title value="Scenario 0.3 optioneel"/>
   <description value="Serve Medication data VV building blocks for patient R-vanXXX-Sonnenberg&#xA;&#xA;For more info:&#xA;https://informatiestandaarden.nictiz.nl/wiki/mp:V9.3.0_testgegevens_medicatiegegevens_beschikbaarstellen_VV&#xA;&#xA;Original description:&#xA;TEST Medicatiegegevens VV Scenarioset 0 (filterqueries)&#xA;Verstrekkingsverzoek met een filter op productcode (PRK 3956)&#xA;(Antwoord: bericht met 1 verstrekkingsverzoek)"/>
   <nts:authToken patientResourceId="nl-core-Patient-mp9-R-vanXXX-Sonnenberg"
                  nts:in-targets="MedMij"/>
   <test id="mp9-test-serve-meddata-VV-00-3-optioneel-01">
      <name value="Scenario 0.3 optioneel"/>
      <description value="Serve Medication data VV resources in a searchset Bundle"/>
      <nts:include value="test.server.search" scope="common" nts:in-targets="#default">
         <nts:with-parameter name="description"
                             value="Test server to serve MedicationRequest resource(s) representing MP9 building block DispenseRequest"/>
         <nts:with-parameter name="resource" value="MedicationRequest"/>
         <nts:with-parameter name="params"
                             value="?patient.identifier=http://fhir.nl/fhir/NamingSystem/bsn|999901084&amp;category=http://snomed.info/sct|52711000146108&amp;medication.code=urn:oid:2.16.840.1.113883.2.4.4.10|3956&amp;_include=MedicationRequest:medication&amp;_include=MedicationRequest:requester&amp;_include=MedicationRequest:dispense-location&amp;_include:iterate=PractitionerRole:organization&amp;_include:iterate=PractitionerRole:practitioner&amp;_include:iterate=PractitionerRole:location"/>
      </nts:include>
      <nts:include value="medmij/test.xis.search"
                   scope="common"
                   nts:in-targets="MedMij">
         <nts:with-parameter name="description"
                             value="Test XIS server to serve MedicationRequest resource(s) representing MP9 building block DispenseRequest"/>
         <nts:with-parameter name="resource" value="MedicationRequest"/>
         <nts:with-parameter name="params"
                             value="?category=http://snomed.info/sct|52711000146108&amp;medication.code=urn:oid:2.16.840.1.113883.2.4.4.10|3956&amp;_include=MedicationRequest:medication&amp;_include=MedicationRequest:requester&amp;_include=MedicationRequest:dispense-location&amp;_include:iterate=PractitionerRole:organization&amp;_include:iterate=PractitionerRole:practitioner&amp;_include:iterate=PractitionerRole:location"/>
      </nts:include>
      <nts:include value="assert.response.successfulSearch" scope="common"/>
      <nts:include value="assert-responseBundleContent-noMM"/>
      <nts:include value="assert-returnCount" scope="project">
         <nts:with-parameter name="resource" value="MedicationRequest"/>
         <nts:with-parameter name="count" value="1"/>
      </nts:include>
      <nts:include value="assert-returnCount" scope="project">
         <nts:with-parameter name="resource" value="Medication"/>
         <nts:with-parameter name="count" value="1"/>
      </nts:include>
   </test>
</TestScript>
