<TestScript xmlns="http://hl7.org/fhir"
            xmlns:nts="http://nictiz.nl/xsl/testscript"
            nts:scenario="client">
   <id value="mp9-prescr-send-1-5"/>
   <name value="MP9 - Client - Scenario 1.5 - Send MedicationPrescription"/>
   <description value="Scenario 1.5 - Send MedicationPrescription for C. XXX_Brugge."/>
   <nts:fixture id="mv-mp-vo-tst-1-5-eenheid-dosis-stuks-v30"
                href="fixtures/mv-mp-vo-tst-1-5-eenheid-dosis-stuks-v30.xml"/>
   <nts:includeDateT value="yes" nts:in-targets="Nictiz-intern"/>
   <test id="scenario1-5-send-prescr">
      <name value="Scenario 1.5"/>
      <description value="Specifies the query to run and general checks on the request."/>
      <action>
         <operation>
            <type>
               <system value="http://terminology.hl7.org/CodeSystem/testscript-operation-codes"/>
               <code value="transaction"/>
            </type>
            <description value="Test client to POST a Bundle of type transaction."/>
            <destination value="1"/>
            <origin value="1"/>
            <requestId value="transaction-request"/>
            <sourceId value="mv-mp-vo-tst-1-5-eenheid-dosis-stuks-v30"/>
         </operation>
      </action>
      <nts:include value="test.client.successfulTransaction" scope="common"/>
      <nts:include value="assert.request.numResources"
                   scope="common"
                   resource="MedicationRequest"
                   count="2"/>
      <nts:include value="assert.request.numResources"
                   scope="common"
                   resource="Medication"
                   count="1"/>
   </test>
   <test id="scenario1-5-send-prescr-identification">
      <name value="Resource identification"/>
      <description value="Checks if all resources specified by the scenario can be identified unambiguously."/>
      <action>
         <assert>
            <expression value="Bundle.entry.select(resource as MedicationRequest).where(medication.resolve().code.where(coding.where(code = '45624') and coding.where(code = '92487'))).count() = 1"/>
            <sourceId value="transaction-request"/>
            <warningOnly value="false"/>
         </assert>
      </action>
      <action>
         <assert>
            <expression value="Bundle.entry.select(resource as MedicationRequest).where(medication.resolve().code.where(coding.where(code = '45624') and coding.where(code = '92487'))).count() = 1"/>
            <sourceId value="transaction-request"/>
            <warningOnly value="false"/>
         </assert>
      </action>
      <action>
         <assert>
            <description value="Confirm that the request Bundle contains 1 Medication resource that contains code '45624|urn:oid:2.16.840.1.113883.2.4.4.10' (FLUTICASON INHALATIEPOEDER 100UG/DO 60DO DISKUS)"/>
            <expression value="Bundle.entry.select(resource as Medication).where(code.coding.where(system = 'urn:oid:2.16.840.1.113883.2.4.4.10' and code = '45624')).count() = 1"/>
            <sourceId value="transaction-request"/>
            <warningOnly value="false"/>
         </assert>
      </action>
   </test>
</TestScript>
