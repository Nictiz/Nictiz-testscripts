<TestScript xmlns="http://hl7.org/fhir"
            xmlns:nts="http://nictiz.nl/xsl/testscript"
            nts:scenario="server">
   <id value="mp9-prescr-receive-1-2a"/>
   <version value="r4-mp9-3.0.0-beta"/>
   <name value="MP9 - Server - Scenario 1.2a - Receive MedicationPrescription - 1-2a-ingangdatum-duur-weken"/>
   <description value="Scenario 1.2a - Receive MedicationPrescription for C. XXX_Brugge."/>
   <nts:fixture id="mv-mp-vo-tst-1-2a-ingangdatum-duur-weken-v30"
                href="fixtures/mv-mp-vo-tst-1-2a-ingangdatum-duur-weken-v30.{$_FORMAT}"/>
   <nts:includeDateT value="yes"/>
   <test id="scenario1-2a-receive-prescr">
      <name value="Scenario 1.2a"/>
      <description value="Receive MedicationPrescription in a transaction Bundle"/>
      <action>
         <operation>
            <type>
               <system value="http://terminology.hl7.org/CodeSystem/testscript-operation-codes"/>
               <code value="transaction"/>
            </type>
            <description value="Test server to handle a Bundle of type transaction."/>
            <contentType value="{$_FORMAT}"/>
            <destination value="1"/>
            <origin value="1"/>
            <requestHeader>
               <field value="Prefer"/>
               <value value="return=representation"/>
            </requestHeader>
            <sourceId value="mv-mp-vo-tst-1-2a-ingangdatum-duur-weken-v30"/>
         </operation>
      </action>
      <nts:include value="assert.response.success" scope="common"/>
      <nts:include value="assert.response.bundleContent"
                   scope="common"
                   bundleType="transaction-response"/>
      <nts:include value="assert.request.numResources"
                   scope="common"
                   resource="MedicationRequest"
                   count="2"/>
      <nts:include value="assert.request.numResources"
                   scope="common"
                   resource="Medication"
                   count="2"/>
   </test>
   <test id="scenario1-2a-receive-prescr-identification">
      <name value="Resource identification"/>
      <description value="Checks if all resources specified by the scenario can be identified unambiguously."/>
      <action>
         <assert>
            <expression value="Bundle.entry.where($this is MedicationRequest).where(medication.resolve().code.where(coding.where(code = '26638') and coding.where(code = '71587'))).count() = 1"/>
            <sourceId value="transaction-response"/>
            <warningOnly value="false"/>
         </assert>
      </action>
      <action>
         <assert>
            <expression value="Bundle.entry.where($this is MedicationRequest).where(medication.resolve().code.where(coding.where(code = '1506773') and coding.where(code = '26638') and coding.where(code = '71587'))).count() = 1"/>
            <sourceId value="transaction-response"/>
            <warningOnly value="false"/>
         </assert>
      </action>
      <action>
         <assert>
            <description value="Confirm that the response Bundle contains 1 Medication resource that contains code '26638|urn:oid:2.16.840.1.113883.2.4.4.10' (LISINOPRIL 10MG TABLET)"/>
            <expression value="Bundle.entry.where($this is Medication).where(code.where(coding.count() = 2 and coding.where(system = 'urn:oid:2.16.840.1.113883.2.4.4.10' and code = '26638') and coding.where(system = 'urn:oid:2.16.840.1.113883.2.4.4.1' and code = '71587'))).count() = 1"/>
            <sourceId value="transaction-response"/>
            <warningOnly value="false"/>
         </assert>
      </action>
      <action>
         <assert>
            <description value="Confirm that the response Bundle contains 1 Medication resource that contains code '1506773|urn:oid:2.16.840.1.113883.2.4.4.7' (LISINOPRIL SANDOZ TABLET 10MG)"/>
            <expression value="Bundle.entry.where($this is Medication).where(code.coding.where(system = 'urn:oid:2.16.840.1.113883.2.4.4.7' and code = '1506773')).count() = 1"/>
            <sourceId value="transaction-response"/>
            <warningOnly value="false"/>
         </assert>
      </action>
   </test>
</TestScript>
