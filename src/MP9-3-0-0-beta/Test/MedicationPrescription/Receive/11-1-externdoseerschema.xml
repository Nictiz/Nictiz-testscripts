<TestScript xmlns="http://hl7.org/fhir"
            xmlns:nts="http://nictiz.nl/xsl/testscript"
            nts:scenario="server">
   <id value="mp9-prescr-receive-11-1"/>
   <name value="MP9 - Server - Scenario 11.1 - Receive MedicationPrescription"/>
   <description value="Scenario 11.1 - Receive MedicationPrescription for M. XXX_Pherai."/>
   <nts:fixture id="mv-mp-vo-tst-11-1-externdoseerschema-v30"
                href="fixtures/mv-mp-vo-tst-11-1-externdoseerschema-v30.{$_FORMAT}"/>
   <nts:includeDateT value="yes"/>
   <test id="scenario11-1-receive-prescr">
      <name value="Operation and general checks"/>
      <description value="Specifies the query that runs and general checks on the response."/>
      <action>
         <operation>
            <type>
               <system value="http://terminology.hl7.org/CodeSystem/testscript-operation-codes"/>
               <code value="transaction"/>
            </type>
            <description value="Test server to handle a Bundle of type transaction."/>
            <contentType value="{$_FORMAT}"/>
            <destination value="1"/>
            <origin value="1"/>
            <requestHeader>
               <field value="Prefer"/>
               <value value="return=representation"/>
            </requestHeader>
            <responseId value="transaction-response"/>
            <sourceId value="mv-mp-vo-tst-11-1-externdoseerschema-v30"/>
         </operation>
      </action>
      <nts:include value="assert.response.success" scope="common"/>
      <nts:include value="assert.response.bundleContent"
                   scope="common"
                   bundleType="transaction-response"/>
      <nts:include value="assert.response.numResources"
                   scope="common"
                   resource="MedicationRequest"
                   count="2"/>
      <nts:include value="assert.response.numResources"
                   scope="common"
                   resource="Medication"
                   count="1"/>
   </test>
   <test id="scenario11-1-receive-prescr-identification">
      <name value="Resource identification"/>
      <description value="Checks if all resources specified by the scenario can be identified unambiguously."/>
      <action>
         <assert>
            <description value="Confirm that the response Bundle contains 2 MedicationRequest resource(s) that reference(s) Medication with code '7323|urn:oid:2.16.840.1.113883.2.4.4.10' (ACENOCOUMAROL TABLET 1MG)"/>
            <expression value="Bundle.entry.select(resource as MedicationRequest).where(medication.resolve().code.coding.where(system = 'urn:oid:2.16.840.1.113883.2.4.4.10' and code = '7323')).count() = 2"/>
            <sourceId value="transaction-response"/>
            <warningOnly value="false"/>
         </assert>
      </action>
      <action>
         <assert>
            <description value="Confirm that the response Bundle contains 1 Medication resource that contains code '7323|urn:oid:2.16.840.1.113883.2.4.4.10' (ACENOCOUMAROL TABLET 1MG)"/>
            <expression value="Bundle.entry.select(resource as Medication).code.coding.where(system = 'urn:oid:2.16.840.1.113883.2.4.4.10' and code = '7323').count() = 1"/>
            <sourceId value="transaction-response"/>
            <warningOnly value="false"/>
         </assert>
      </action>
   </test>
</TestScript>
