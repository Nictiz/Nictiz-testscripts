<TestScript xmlns="http://hl7.org/fhir"
            xmlns:nts="http://nictiz.nl/xsl/testscript"
            nts:scenario="server">
   <id value="mp9-prescrproc-receive-3-3a"/>
   <version value="r4-mp9-3.0.0-beta"/>
   <name value="MP9 - Server - Scenario 3.3a - Receive PrescrProcessing - 3-3a-wijzigen-verlaging"/>
   <description value="Scenario 3.3a - Receive PrescrProcessing for C van de XXX_Voortman."/>
   <nts:fixture id="av-mp-va-tst-3-3a-wijzigen-verlaging-v30"
                href="fixtures/av-mp-va-tst-3-3a-wijzigen-verlaging-v30.{$_FORMAT}"/>
   <nts:includeDateT value="yes"/>
   <test id="scenario3-3a-receive-prescrproc">
      <name value="Scenario 3.3a"/>
      <description value="Receive PrescrProcessing in a transaction Bundle"/>
      <action>
         <operation>
            <type>
               <system value="http://terminology.hl7.org/CodeSystem/testscript-operation-codes"/>
               <code value="transaction"/>
            </type>
            <description value="Test server to handle a Bundle of type transaction."/>
            <contentType value="{$_FORMAT}"/>
            <destination value="1"/>
            <origin value="1"/>
            <requestHeader>
               <field value="Prefer"/>
               <value value="return=representation"/>
            </requestHeader>
            <sourceId value="av-mp-va-tst-3-3a-wijzigen-verlaging-v30"/>
         </operation>
      </action>
      <nts:include value="assert.response.success" scope="common"/>
      <nts:include value="assert.response.bundleContent"
                   scope="common"
                   bundleType="transaction-response"/>
      <nts:include value="assert.request.numResources"
                   scope="common"
                   resource="MedicationDispense"
                   count="2"/>
      <nts:include value="assert.request.numResources"
                   scope="common"
                   resource="Medication"
                   count="2"/>
   </test>
   <test id="scenario3-3a-receive-prescrproc-identification">
      <name value="Resource identification"/>
      <description value="Checks if all resources specified by the scenario can be identified unambiguously."/>
      <action>
         <assert>
            <expression value="Bundle.entry.resource.where($this is MedicationDispense).where(medication.resolve().code.where(coding.exists(code = '869244') and coding.exists(code = '42293') and coding.exists(code = '15342'))).count() = 1"/>
            <sourceId value="transaction-response"/>
            <warningOnly value="false"/>
         </assert>
      </action>
      <action>
         <assert>
            <expression value="Bundle.entry.resource.where($this is MedicationDispense).where(medication.resolve().code.where(coding.exists(code = '42293') and coding.exists(code = '15342'))).where((quantity.value = 20')).count() = 1"/>
            <sourceId value="transaction-response"/>
            <warningOnly value="false"/>
         </assert>
      </action>
      <action>
         <assert>
            <description value="Confirm that the response Bundle contains 1 Medication resource that contains code '42293|urn:oid:2.16.840.1.113883.2.4.4.10' (FERROFUMARAAT TABLET 200MG)"/>
            <expression value="Bundle.entry.resource.where($this is Medication).where(code.where(coding.count() = 2 and coding.exists(system = 'urn:oid:2.16.840.1.113883.2.4.4.10' and code = '42293') and coding.exists(system = 'urn:oid:2.16.840.1.113883.2.4.4.1' and code = '15342'))).count() = 1"/>
            <sourceId value="transaction-response"/>
            <warningOnly value="false"/>
         </assert>
      </action>
      <action>
         <assert>
            <description value="Confirm that the response Bundle contains 1 Medication resource that contains code '869244|urn:oid:2.16.840.1.113883.2.4.4.7' (FERROFUMARAAT TEVA TABLET 200MG)"/>
            <expression value="Bundle.entry.resource.where($this is Medication).where(code.coding.exists(system = 'urn:oid:2.16.840.1.113883.2.4.4.7' and code = '869244')).count() = 1"/>
            <sourceId value="transaction-response"/>
            <warningOnly value="false"/>
         </assert>
      </action>
   </test>
</TestScript>
