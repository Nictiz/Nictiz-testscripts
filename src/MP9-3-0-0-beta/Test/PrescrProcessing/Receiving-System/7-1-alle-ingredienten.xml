<TestScript xmlns="http://hl7.org/fhir"
            xmlns:nts="http://nictiz.nl/xsl/testscript"
            nts:scenario="server">
   <id value="mp9-prescrproc-receive-7-1"/>
   <version value="r4-mp9-3.0.0-beta"/>
   <name value="MP9 - Server - Scenario 7.1 - Receive PrescrProcessing - 7-1-alle-ingredienten"/>
   <description value="Scenario 7.1 - Receive PrescrProcessing for G. XXX_Hess."/>
   <nts:fixture id="av-mp-va-tst-7-1-alle-ingredienten-v30"
                href="fixtures/av-mp-va-tst-7-1-alle-ingredienten-v30.{$_FORMAT}"/>
   <nts:includeDateT value="yes"/>
   <test id="scenario7-1-receive-prescrproc">
      <name value="Scenario 7.1"/>
      <description value="Receive PrescrProcessing in a transaction Bundle"/>
      <action>
         <operation>
            <type>
               <system value="http://terminology.hl7.org/CodeSystem/testscript-operation-codes"/>
               <code value="transaction"/>
            </type>
            <description value="Test server to handle a Bundle of type transaction."/>
            <contentType value="{$_FORMAT}"/>
            <destination value="1"/>
            <origin value="1"/>
            <requestHeader>
               <field value="Prefer"/>
               <value value="return=representation"/>
            </requestHeader>
            <sourceId value="av-mp-va-tst-7-1-alle-ingredienten-v30"/>
         </operation>
      </action>
      <nts:include value="assert.response.success" scope="common"/>
      <nts:include value="assert.response.bundleContent"
                   scope="common"
                   bundleType="transaction-response"/>
      <nts:include value="assert.request.numResources"
                   scope="common"
                   resource="MedicationDispense"
                   count="2"/>
      <nts:include value="assert.request.numResources"
                   scope="common"
                   resource="Medication"
                   count="1"/>
   </test>
   <test id="scenario7-1-receive-prescrproc-identification">
      <name value="Resource identification"/>
      <description value="Checks if all resources specified by the scenario can be identified unambiguously."/>
      <action>
         <assert>
            <expression value="Bundle.entry.resource.where($this is MedicationDispense).where(((medication.as(CodeableConcept).coding | medication.resolve().code.coding).exists(code = 'OTH') and (medication.resolve().ingredient.item.coding).exists(code = '1042467') and (medication.resolve().ingredient.item.coding).exists(code = '1516981'))).count() = 1"/>
            <sourceId value="transaction-response"/>
            <warningOnly value="false"/>
         </assert>
      </action>
      <action>
         <assert>
            <expression value="Bundle.entry.resource.where($this is MedicationDispense).where(((medication.as(CodeableConcept).coding | medication.resolve().code.coding).exists(code = 'OTH') and (medication.resolve().ingredient.item.coding).exists(code = '1042467') and (medication.resolve().ingredient.item.coding).exists(code = '1516981'))).where((quantity.value = 50)).count() = 1"/>
            <sourceId value="transaction-response"/>
            <warningOnly value="false"/>
         </assert>
      </action>
      <action>
         <assert>
            <description value="Confirm that the response Bundle contains 1 Medication resource that contains code 'OTH|http://terminology.hl7.org/CodeSystem/v3-NullFlavor' (overig)"/>
            <expression value="Bundle.entry.resource.where($this is Medication).where(code.coding.exists(system = 'http://terminology.hl7.org/CodeSystem/v3-NullFlavor' and code = 'OTH')).count() = 1"/>
            <sourceId value="transaction-response"/>
            <warningOnly value="false"/>
         </assert>
      </action>
   </test>
</TestScript>
