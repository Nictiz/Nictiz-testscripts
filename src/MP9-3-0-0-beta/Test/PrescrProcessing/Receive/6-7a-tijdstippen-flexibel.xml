<TestScript xmlns="http://hl7.org/fhir"
            xmlns:nts="http://nictiz.nl/xsl/testscript"
            nts:scenario="server">
   <id value="mp9-prescrproc-receive-6-7a"/>
   <name value="MP9 - Server - Scenario 6.7a - Receive PrescrProcessing"/>
   <description value="Scenario 6.7a - Receive PrescrProcessing for G. XXX_Hemsbergen."/>
   <nts:fixture id="av-mp-va-tst-6-7a-tijdstippen-flexibel-v30"
                href="fixtures/av-mp-va-tst-6-7a-tijdstippen-flexibel-v30.{$_FORMAT}"/>
   <nts:includeDateT value="yes"/>
   <test id="scenario6-7a-receive-prescrproc">
      <name value="Operation and general checks"/>
      <description value="Specifies the query that runs and general checks on the response."/>
      <action>
         <operation>
            <type>
               <system value="http://terminology.hl7.org/CodeSystem/testscript-operation-codes"/>
               <code value="transaction"/>
            </type>
            <description value="Test server to handle a Bundle of type transaction."/>
            <contentType value="{$_FORMAT}"/>
            <destination value="1"/>
            <origin value="1"/>
            <requestHeader>
               <field value="Prefer"/>
               <value value="return=representation"/>
            </requestHeader>
            <responseId value="transaction-response"/>
            <sourceId value="av-mp-va-tst-6-7a-tijdstippen-flexibel-v30"/>
         </operation>
      </action>
      <nts:include value="assert.response.success" scope="common"/>
      <nts:include value="assert.response.bundleContent"
                   scope="common"
                   bundleType="transaction-response"/>
      <nts:include value="assert.response.numResources"
                   scope="common"
                   resource="MedicationDispense"
                   count="2"/>
      <nts:include value="assert.response.numResources"
                   scope="common"
                   resource="Medication"
                   count="1"/>
   </test>
   <test id="scenario6-7a-receive-prescrproc-identification">
      <name value="Resource identification"/>
      <description value="Checks if all resources specified by the scenario can be identified unambiguously."/>
      <action>
         <assert>
            <expression value="Bundle.entry.select(resource as MedicationDispense).where(medication.resolve().code.where(coding.where(code = '693332') and coding.where(code = '1090') and coding.where(code = '3816'))).count() = 1"/>
            <sourceId value="transaction-response"/>
            <warningOnly value="false"/>
         </assert>
      </action>
      <action>
         <assert>
            <expression value="Bundle.entry.select(resource as MedicationDispense).where(medication.resolve().code.where(coding.where(code = '693332') and coding.where(code = '1090') and coding.where(code = '3816'))).count() = 1"/>
            <sourceId value="transaction-response"/>
            <warningOnly value="false"/>
         </assert>
      </action>
      <action>
         <assert>
            <description value="Confirm that the response Bundle contains 1 Medication resource that contains code '693332|urn:oid:2.16.840.1.113883.2.4.4.7' (METFORMINE HCL PCH TABLET 500MG)"/>
            <expression value="Bundle.entry.select(resource as Medication).where(code.coding.where(system = 'urn:oid:2.16.840.1.113883.2.4.4.7' and code = '693332')).count() = 1"/>
            <sourceId value="transaction-response"/>
            <warningOnly value="false"/>
         </assert>
      </action>
   </test>
</TestScript>
