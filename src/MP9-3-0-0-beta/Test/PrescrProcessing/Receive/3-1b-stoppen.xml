<TestScript xmlns="http://hl7.org/fhir"
            xmlns:nts="http://nictiz.nl/xsl/testscript"
            nts:scenario="server">
   <id value="mp9-prescrproc-receive-3-1b"/>
   <name value="MP9 - Server - Scenario 3.1b - Receive PrescrProcessing"/>
   <description value="Scenario 3.1b - Receive PrescrProcessing for J. de XXX_Luzac."/>
   <nts:fixture id="av-mp-va-tst-3-1b-stoppen-v30"
                href="fixtures/av-mp-va-tst-3-1b-stoppen-v30.{$_FORMAT}"/>
   <nts:includeDateT value="yes"/>
   <test id="scenario3-1b-receive-prescrproc">
      <name value="Scenario 3.1b"/>
      <description value="Receive PrescrProcessing in a transaction Bundle"/>
      <action>
         <operation>
            <type>
               <system value="http://terminology.hl7.org/CodeSystem/testscript-operation-codes"/>
               <code value="transaction"/>
            </type>
            <description value="Test server to handle a Bundle of type transaction."/>
            <contentType value="{$_FORMAT}"/>
            <destination value="1"/>
            <origin value="1"/>
            <requestHeader>
               <field value="Prefer"/>
               <value value="return=representation"/>
            </requestHeader>
            <responseId value="transaction-response"/>
            <sourceId value="av-mp-va-tst-3-1b-stoppen-v30"/>
         </operation>
      </action>
      <nts:include value="assert.response.success" scope="common"/>
      <nts:include value="assert.response.bundleContent"
                   scope="common"
                   bundleType="transaction-response"/>
      <nts:include value="assert.request.numResources"
                   scope="common"
                   resource="MedicationDispense"
                   count="1"/>
      <nts:include value="assert.request.numResources"
                   scope="common"
                   resource="Medication"
                   count="1"/>
   </test>
   <test id="test123">
      <name value="test456"/>
      <description value="test789"/>
      <action xmlns="">
         <assert>
            <description value="Confirm that the response Bundle contains 1 MedicationDispense resource that references Medication 1110837|urn:oid:2.16.840.1.113883.2.4.4.7 (ASPIRINE PROTECT EC TABLET MSR 100MG)"/>
            <expression value="Bundle.entry.select(resource as MedicationDispense).where(medication.resolve().code.coding.where(system = 'urn:oid:2.16.840.1.113883.2.4.4.7' and code = '1110837')).count() = 1"/>
            <sourceId value="transaction-response"/>
            <warningOnly value="false"/>
         </assert>
      </action>
   </test>
</TestScript>
