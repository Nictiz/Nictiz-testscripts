<TestScript xmlns="http://hl7.org/fhir"
            xmlns:nts="http://nictiz.nl/xsl/testscript"
            nts:scenario="client">
   <id value="mp9-prescrproc-send-10-2"/>
   <name value="MP9 - Client - Scenario 10.2 - Send PrescrProcessing"/>
   <description value="Scenario 10.2 - Send PrescrProcessing for M. XXX_Niesing."/>
   <nts:fixture id="av-mp-va-tst-10-2-zi-nummer-geneesmiddel-v30"
                href="fixtures/av-mp-va-tst-10-2-zi-nummer-geneesmiddel-v30.xml"/>
   <nts:includeDateT value="yes" nts:in-targets="Nictiz-intern"/>
   <test id="scenario10-2-send-prescrproc">
      <name value="Scenario 10.2"/>
      <description value="Specifies the query to run and general checks on the request."/>
      <action>
         <operation>
            <type>
               <system value="http://terminology.hl7.org/CodeSystem/testscript-operation-codes"/>
               <code value="transaction"/>
            </type>
            <description value="Test client to POST a Bundle of type transaction."/>
            <destination value="1"/>
            <origin value="1"/>
            <requestId value="transaction-request"/>
            <sourceId value="av-mp-va-tst-10-2-zi-nummer-geneesmiddel-v30"/>
         </operation>
      </action>
      <nts:include value="test.client.successfulTransaction" scope="common"/>
      <nts:include value="assert.request.numResources"
                   scope="common"
                   resource="MedicationDispense"
                   count="2"/>
      <nts:include value="assert.request.numResources"
                   scope="common"
                   resource="Medication"
                   count="1"/>
   </test>
   <test id="scenario10-2-send-prescrproc-identification">
      <name value="Resource identification"/>
      <description value="Checks if all resources specified by the scenario can be identified unambiguously."/>
      <action>
         <assert>
            <description value="Confirm that the request Bundle contains 2 MedicationDispense resource(s) that reference(s) Medication with coding '13627163|urn:oid:2.16.840.1.113883.2.4.4.8' (INDAPAMIDE PCH TABET OMHULD 2,5MG)"/>
            <expression value="Bundle.entry.select(resource as MedicationDispense).where(medication.resolve().code.coding.where(system = 'urn:oid:2.16.840.1.113883.2.4.4.8' and code = '13627163')).count() = 2"/>
            <sourceId value="transaction-request"/>
            <warningOnly value="false"/>
         </assert>
      </action>
      <action>
         <assert>
            <description value="Confirm that the request Bundle contains 1 Medication resource that contains code '13627163|urn:oid:2.16.840.1.113883.2.4.4.8' (INDAPAMIDE PCH TABET OMHULD 2,5MG)"/>
            <expression value="Bundle.entry.select(resource as Medication).code.coding.where(system = 'urn:oid:2.16.840.1.113883.2.4.4.8' and code = '13627163').count() = 1"/>
            <sourceId value="transaction-request"/>
            <warningOnly value="false"/>
         </assert>
      </action>
   </test>
</TestScript>
