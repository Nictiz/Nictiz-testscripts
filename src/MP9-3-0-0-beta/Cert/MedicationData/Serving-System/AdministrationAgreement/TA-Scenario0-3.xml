<TestScript xmlns:nts="http://nictiz.nl/xsl/testscript"
            xmlns="http://hl7.org/fhir"
            nts:scenario="server">
   <id value="mp9-ta-Serve-0-3"/>
   <version value="r4-mp9-3.0.0-beta"/>
   <name value="Medication Process 9 3.0.0-beta  - AdministrationAgreement - Serve - Scenario 0.3"/>
   <description value="Scenario 0.3 - &lt;div&gt;Toedieningsafspraken met een filter op productcode (HPK 1119265) (Antwoord: bericht met 1 toedieningsafspraak)&#xA;Optioneel voor raadplegende systemen&lt;/div&gt;"/>
   <nts:authToken patientResourceId="nl-core-Patient-mp9-G-XXX-Groot"
                  nts:in-targets="MedMij"/>
   <test id="Scenario-0-3">
      <name value="Scenario 0.3"/>
      <description value="&lt;div&gt;Toedieningsafspraken met een filter op productcode (HPK 1119265) (Antwoord: bericht met 1 toedieningsafspraak)&#xA;Optioneel voor raadplegende systemen&lt;/div&gt;"/>
      <nts:include value="test.server.search" scope="common" nts:in-targets="#default">
         <nts:with-parameter name="description"
                             value="Test server to serve MedicationDispense resource(s) representing MP9 building block AdministrationAgreement"/>
         <nts:with-parameter name="resource" value="MedicationDispense"/>
         <nts:with-parameter name="params"
                             value="?patient.identifier=http://fhir.nl/fhir/NamingSystem/bsn|999900596&amp;category=http://snomed.info/sct|422037009&amp;medication.code=urn:oid:2.16.840.1.113883.2.4.4.10|1783&amp;_include=MedicationDispense:medication&amp;_include=MedicationDispense:performer&amp;_include:iterate=PractitionerRole:organization&amp;_include:iterate=PractitionerRole:practitioner&amp;_include:iterate=PractitionerRole:location"/>
      </nts:include>
      <nts:include value="medmij/test.xis.search"
                   scope="common"
                   nts:in-targets="MedMij">
         <nts:with-parameter name="description"
                             value="Test XIS server to serve MedicationDispense resource(s) representing MP9 building block AdministrationAgreement"/>
         <nts:with-parameter name="resource" value="MedicationDispense"/>
         <nts:with-parameter name="params"
                             value="?category=http://snomed.info/sct|422037009&amp;medication.code=urn:oid:2.16.840.1.113883.2.4.4.10|1783&amp;_include=MedicationDispense:medication&amp;_include=MedicationDispense:performer&amp;_include:iterate=PractitionerRole:organization&amp;_include:iterate=PractitionerRole:practitioner&amp;_include:iterate=PractitionerRole:location"/>
      </nts:include>
      <nts:include value="assert.response.successfulSearch" scope="common"/>
      <nts:include value="assert-responseBundleContent-noMM"/>
      <nts:include value="assert-returnCount" scope="project">
         <nts:with-parameter name="resource" value="MedicationDispense"/>
         <nts:with-parameter name="count" value="1"/>
      </nts:include>
      <nts:include value="assert-returnEntryCountAtLeast" scope="project">
         <nts:with-parameter name="count" value="2"/>
         <nts:with-parameter name="breakdown"
                             value="(Consists of 1 MedicationDispense and 1 Medication resources.)"/>
      </nts:include>
      <action>
         <assert>
            <description value="All returned MedicationDispense identifiers are from the expected allow-list."/>
            <direction value="response"/>
            <expression value="Bundle.entry.resource.where($this is MedicationDispense).identifier.value.all($this in {'MBH_300_script0_QA4_TA'})"/>
            <stopTestOnFail value="false"/>
            <warningOnly value="false"/>
         </assert>
      </action>
      <action>
         <assert>
            <description value="Returned MedicationDispense count is at least 1."/>
            <direction value="response"/>
            <expression value="Bundle.entry.resource.where($this is MedicationDispense).count() &gt;= 1"/>
            <stopTestOnFail value="false"/>
            <warningOnly value="false"/>
         </assert>
      </action>
      <action>
         <assert>
            <description value="Returned MedicationDispense count is at most 1."/>
            <direction value="response"/>
            <expression value="Bundle.entry.resource.where($this is MedicationDispense).count() &lt;= 1"/>
            <stopTestOnFail value="false"/>
            <warningOnly value="false"/>
         </assert>
      </action>
      <action>
         <assert>
            <description value="Exact identifier set match for MedicationDispense (no period-of-use filter)."/>
            <direction value="response"/>
            <expression value="Bundle.entry.resource.where($this is MedicationDispense).identifier.value.where($this in {'MBH_300_script0_QA4_TA'}).count() = 1"/>
            <stopTestOnFail value="false"/>
            <warningOnly value="false"/>
         </assert>
      </action>
   </test>
</TestScript>
