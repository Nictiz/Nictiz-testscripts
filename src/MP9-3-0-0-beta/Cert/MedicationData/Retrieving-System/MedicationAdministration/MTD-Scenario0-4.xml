<TestScript xmlns:nts="http://nictiz.nl/xsl/testscript"
            xmlns="http://hl7.org/fhir"
            nts:scenario="client">
   <id value="mp9-mtd-Retrieve-0-4"/>
   <version value="r4-mp9-3.0.0-beta"/>
   <name value="Medication Process 9 3.0.0-beta  - MedicationAdministration - Retrieve - Scenario 0.4"/>
   <description value="Scenario 0.4 - Medicatietoedieningen met een filter op gebruiksperiode – ingangsdatum (alles vanaf T-18)&#xA;(Antwoord: bericht met 5x medicatietoedieningen)"/>
   <nts:authToken patientResourceId="nl-core-Patient-mp9-G-XXX-Groot"
                  nts:in-targets="MedMij"/>
   <nts:includeDateT value="yes"/>
   <test id="Scenario-0-4">
      <name value="Scenario 0.4"/>
      <description value="Medicatietoedieningen met een filter op gebruiksperiode – ingangsdatum (alles vanaf T-18)&#xA;(Antwoord: bericht met 5x medicatietoedieningen)"/>
      <nts:include value="test.client.search" scope="common" nts:in-targets="#default">
         <nts:with-parameter name="description"
                             value="Test client to retrieve MedicationAdministration resource(s) representing MP9 building block MedicationAdministration"/>
         <nts:with-parameter name="resource" value="MedicationAdministration"/>
         <nts:with-parameter name="params"
                             value="?patient.identifier=http://fhir.nl/fhir/NamingSystem/bsn|999900596&amp;category=http://snomed.info/sct|18629005&amp;effective-time=ge${DATE, T, D,-18}&amp;_include=MedicationAdministration:medication&amp;_include=MedicationAdministration:performer&amp;_include:iterate=PractitionerRole:organization&amp;_include:iterate=PractitionerRole:practitioner&amp;_include:iterate=PractitionerRole:location"/>
      </nts:include>
      <nts:include value="medmij/test.phr.search"
                   scope="common"
                   nts:in-targets="MedMij">
         <nts:with-parameter name="description"
                             value="Test PHR client to retrieve MedicationAdministration resource(s) representing MP9 building block MedicationAdministration"/>
         <nts:with-parameter name="resource" value="MedicationAdministration"/>
         <nts:with-parameter name="params"
                             value="?category=http://snomed.info/sct|18629005&amp;effective-time=ge${DATE, T, D,-18}&amp;_include=MedicationAdministration:medication&amp;_include=MedicationAdministration:performer&amp;_include:iterate=PractitionerRole:organization&amp;_include:iterate=PractitionerRole:practitioner&amp;_include:iterate=PractitionerRole:location"/>
      </nts:include>
      <nts:include value="canary-assert.response.successfulSearch" scope="common"/>
      <nts:include value="assert-returnCount" scope="project">
         <nts:with-parameter name="resource" value="MedicationAdministration"/>
         <nts:with-parameter name="count" value="5"/>
      </nts:include>
      <action>
         <assert>
            <description value="Returned Medication count is 0"/>
            <direction value="response"/>
            <expression value="Bundle.entry.resource.where($this is Medication).count() = 0"/>
            <stopTestOnFail value="false"/>
            <warningOnly value="false"/>
         </assert>
      </action>
   </test>
</TestScript>
