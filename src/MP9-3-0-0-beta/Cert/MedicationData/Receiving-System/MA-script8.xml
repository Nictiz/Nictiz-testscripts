<TestScript xmlns="http://hl7.org/fhir"
            xmlns:nts="http://nictiz.nl/xsl/testscript"
            nts:scenario="server">
   <id value="mp9-meddata-receive-8-x"/>
   <version value="r4-mp9-3.0.0-beta"/>
   <name value="MP9 - Server - Scenario 8.x - Receive MedicationData - MA-script8"/>
   <description value="Scenario 8.x - Receive MedicationData for J. XXX_Laan."/>
   <nts:fixture id="mgsets-mp-smg-kwal-MA-script8-v30"
                href="fixtures/mgsets-mp-smg-kwal-MA-script8-v30.{$_FORMAT}"/>
   <nts:includeDateT value="yes"/>
   <test id="scenario8-x-receive-meddata">
      <name value="Scenario 8.x"/>
      <description value="Receive MedicationData in a transaction Bundle"/>
      <action>
         <operation>
            <type>
               <system value="http://terminology.hl7.org/CodeSystem/testscript-operation-codes"/>
               <code value="transaction"/>
            </type>
            <description value="Test server to handle a Bundle of type transaction."/>
            <contentType value="{$_FORMAT}"/>
            <destination value="1"/>
            <origin value="1"/>
            <requestHeader>
               <field value="Prefer"/>
               <value value="return=representation"/>
            </requestHeader>
            <sourceId value="mgsets-mp-smg-kwal-MA-script8-v30"/>
         </operation>
      </action>
      <nts:include value="assert.response.success" scope="common"/>
      <nts:include value="assert.response.bundleContent"
                   scope="common"
                   bundleType="transaction-response"/>
      <nts:include value="assert.request.numResources"
                   scope="common"
                   resource="MedicationRequest"
                   count="2"/>
      <nts:include value="assert.request.numResources"
                   scope="common"
                   resource="Medication"
                   count="1"/>
   </test>
   <test id="scenario8-x-receive-meddata-identification">
      <name value="Resource identification"/>
      <description value="Checks if all resources specified by the scenario can be identified unambiguously."/>
      <action>
         <assert>
            <expression value="Bundle.entry.select(resource as MedicationRequest).where(medication.resolve().code.where(coding.where(code = '53821') and coding.where(code = '108278'))).where(modifierExtension.where(url = 'http://nictiz.nl/fhir/StructureDefinition/ext-StopType').exists().not()).count() = 1"/>
            <sourceId value="transaction-response"/>
            <warningOnly value="false"/>
         </assert>
      </action>
      <action>
         <assert>
            <expression value="Bundle.entry.select(resource as MedicationRequest).where(medication.resolve().code.where(coding.where(code = '53821') and coding.where(code = '108278'))).where(modifierExtension.where(url = 'http://nictiz.nl/fhir/StructureDefinition/ext-StopType').value.coding.code = '410546004').count() = 1"/>
            <sourceId value="transaction-response"/>
            <warningOnly value="false"/>
         </assert>
      </action>
      <action>
         <assert>
            <description value="Confirm that the response Bundle contains 1 Medication resource that contains code '53821|urn:oid:2.16.840.1.113883.2.4.4.10' (NADROPARINE INJVL WWSP 11400IE=0,6ML (19000IE/ML))"/>
            <expression value="Bundle.entry.select(resource as Medication).where(code.coding.where(system = 'urn:oid:2.16.840.1.113883.2.4.4.10' and code = '53821')).count() = 1"/>
            <sourceId value="transaction-response"/>
            <warningOnly value="false"/>
         </assert>
      </action>
   </test>
</TestScript>
