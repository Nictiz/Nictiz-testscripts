<TestScript xmlns="http://hl7.org/fhir"
            xmlns:nts="http://nictiz.nl/xsl/testscript"
            nts:scenario="server">
   <id value="mp9-meddata-receive-3-x"/>
   <version value="r4-mp9-3.0.0-beta"/>
   <name value="MP9 - Server - Scenario 3.x - Receive MedicationData - MVE-script3"/>
   <description value="Scenario 3.x - Receive MedicationData for H. XXX_Kerkhoff."/>
   <nts:fixture id="mgsets-mp-smg-kwal-MVE-script3-v30"
                href="fixtures/mgsets-mp-smg-kwal-MVE-script3-v30.{$_FORMAT}"/>
   <nts:includeDateT value="yes"/>
   <test id="scenario3-x-receive-meddata">
      <name value="Scenario 3.x"/>
      <description value="Receive MedicationData in a transaction Bundle"/>
      <action>
         <operation>
            <type>
               <system value="http://terminology.hl7.org/CodeSystem/testscript-operation-codes"/>
               <code value="transaction"/>
            </type>
            <description value="Test server to handle a Bundle of type transaction."/>
            <contentType value="{$_FORMAT}"/>
            <destination value="1"/>
            <origin value="1"/>
            <requestHeader>
               <field value="Prefer"/>
               <value value="return=representation"/>
            </requestHeader>
            <sourceId value="mgsets-mp-smg-kwal-MVE-script3-v30"/>
         </operation>
      </action>
      <nts:include value="assert.response.success" scope="common"/>
      <nts:include value="assert.response.bundleContent"
                   scope="common"
                   bundleType="transaction-response"/>
      <nts:include value="assert.request.numResources"
                   scope="common"
                   resource="MedicationDispense"
                   count="1"/>
      <nts:include value="assert.request.numResources"
                   scope="common"
                   resource="Medication"
                   count="1"/>
   </test>
   <test id="scenario3-x-receive-meddata-identification">
      <name value="Resource identification"/>
      <description value="Checks if all resources specified by the scenario can be identified unambiguously."/>
      <action>
         <assert>
            <expression value="Bundle.entry.resource.where($this is MedicationDispense).where(medication.resolve().code.where(coding.exists(code = '704369') and coding.exists(code = '72214') and coding.exists(code = '119431'))).count() = 1"/>
            <sourceId value="transaction-response"/>
            <warningOnly value="false"/>
         </assert>
      </action>
      <action>
         <assert>
            <description value="Confirm that the response Bundle contains 1 Medication resource that contains code '704369|urn:oid:2.16.840.1.113883.2.4.4.7' (NITROLINGUAL OROMUCOSALE SPRAY 0,4MG/DO FLAC 250DO)"/>
            <expression value="Bundle.entry.where($this is Medication).where(code.coding.where(system = 'urn:oid:2.16.840.1.113883.2.4.4.7' and code = '704369')).count() = 1"/>
            <sourceId value="transaction-response"/>
            <warningOnly value="false"/>
         </assert>
      </action>
   </test>
</TestScript>
