<TestScript xmlns:nts="http://nictiz.nl/xsl/testscript"
            xmlns="http://hl7.org/fhir"
            nts:scenario="server">
   <id value="mp9-cert-serve-meddata-WDS-00-3"/>
   <version value="r4-mp9-3.0.0-beta"/>
   <title value="Scenario 0.3"/>
   <description value="Serve Medication data WDS building blocks for patient G-XXX-Groot&#xA;&#xA;For more info:&#xA;https://informatiestandaarden.nictiz.nl/wiki/mp:V9.3.0_kwalificatie_medicatiegegevens_beschikbaarstellen_WDS&#xA;&#xA;Original description:&#xA;KWAL Medicatiegegevens WDS Script0 (filterqueries)&#xA;WDS-en met een filter op productcode (PRK 1783)&#xA;(Antwoord: bericht met 2 WDS-en)&#xA;Optioneel voor raadplegende systemen"/>
   <nts:authToken patientResourceId="nl-core-Patient-mp9-G-XXX-Groot"
                  nts:in-targets="MedMij"/>
   <test id="mp9-cert-serve-meddata-WDS-00-3-01">
      <name value="Scenario 0.3"/>
      <description value="Serve Medication data WDS resources in a searchset Bundle"/>
      <nts:include value="test.server.search" scope="common" nts:in-targets="#default">
         <nts:with-parameter name="description"
                             value="Test server to serve MedicationRequest resource(s) representing MP9 building block VariableDosingRegimen"/>
         <nts:with-parameter name="resource" value="MedicationRequest"/>
         <nts:with-parameter name="params"
                             value="?patient.identifier=http://fhir.nl/fhir/NamingSystem/bsn|999900596&amp;category=http://snomed.info/sct|395067002&amp;medication.code=urn:oid:2.16.840.1.113883.2.4.4.10|1783&amp;_include=MedicationRequest:medication"/>
      </nts:include>
      <nts:include value="medmij/test.xis.search"
                   scope="common"
                   nts:in-targets="MedMij">
         <nts:with-parameter name="description"
                             value="Test XIS server to serve MedicationRequest resource(s) representing MP9 building block VariableDosingRegimen"/>
         <nts:with-parameter name="resource" value="MedicationRequest"/>
         <nts:with-parameter name="params"
                             value="?category=http://snomed.info/sct|395067002&amp;medication.code=urn:oid:2.16.840.1.113883.2.4.4.10|1783&amp;_include=MedicationRequest:medication"/>
      </nts:include>
      <nts:include value="assert.response.successfulSearch" scope="common"/>
      <nts:include value="assert-responseBundleContent-noMM"/>
      <nts:include value="assert-returnCount" scope="project">
         <nts:with-parameter name="resource" value="MedicationRequest"/>
         <nts:with-parameter name="count" value="2"/>
      </nts:include>
      <nts:include value="assert-returnCount" scope="project">
         <nts:with-parameter name="resource" value="Medication"/>
         <nts:with-parameter name="count" value="1"/>
      </nts:include>
   </test>
</TestScript>
