<?xml version="1.0" encoding="UTF-8"?>
<!--
  Test that the authorization header is present in the request. It is expected that a token is imported using nts:authToken.
-->
<nts:component xmlns="http://hl7.org/fhir" xmlns:nts="http://nictiz.nl/xsl/testscript">
    <nts:parameter name="warningOnly" value="false"/>
    <action>
        <assert>
            <description value="Confirm that HTTP header Authorization contains the patient token {$_PATIENTTOKEN}"/>
            <direction value="request"/>
            <headerField value="Authorization"/>
            <value value="{$_PATIENTTOKEN}"/>
            <warningOnly value="{$warningOnly}"/>
        </assert>
    </action>
</nts:component>
