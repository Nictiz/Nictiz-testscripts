<?xml version="1.0" encoding="UTF-8"?>
<!--
  Assert that a response Bundle contains the specified amount of entries for the specified resource.
  @param resource - The resource type to count.
  @param min - The minimum number of entries that contain the specified resource.
  @param max - The maximum number of entries that contain the specified resource.
-->
<nts:component xmlns="http://hl7.org/fhir" xmlns:nts="http://nictiz.nl/xsl/testscript">
    <action>
        <assert>
            <description value="Confirm that the response Bundle contains at least {$min} and at most {$max} {$resource} resource(s)."/>
            <direction value="response"/>
            <expression value="Bundle.entry.where(resource.is({$resource})).count() in ({$min} | {$max})"/>
        </assert>
    </action>
</nts:component>