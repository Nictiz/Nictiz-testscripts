<?xml version="1.0" encoding="UTF-8"?>
<TestScript xmlns="http://hl7.org/fhir">
	<id value="kt-378-patient-address-compare"/>
	<url value="http://wildfhir.aegis.net/fhir3-0-2/TestScript/kt-378-patient-address-compare"/>
	<name value="KT378PatientAddressCompare"/>
	<title value="KT-378 - FHIR 3.0.2 - Patient Address Compare"/>
	<status value="active"/>
	<date value="2023-07-11"/>
	<publisher value="AEGIS.net, Inc."/>
	<contact>
		<name value="Touchstone Support"/>
		<telecom>
			<system value="email"/>
			<value value="Touchstone_Support@aegis.net"/>
			<use value="work"/>
		</telecom>
	</contact>
	<description value="TSP-1283 - FHIR 3.0.2 - Test that a Patient resource address contains exact match to known values."/>
	<copyright value="(c) AEGIS.net, Inc. 2023"/>
	<fixture id="bglz-1-1-Patient-01">
		<autocreate value="false"/>
		<autodelete value="false"/>
		<resource>
			<reference value="./bglz-1-1-Patient-01.xml"/>
		</resource>
	</fixture>
	<fixture id="bglz-1-1-Patient-01-min">
		<autocreate value="false"/>
		<autodelete value="false"/>
		<resource>
			<reference value="./bglz-1-1-Patient-01-min.xml"/>
		</resource>
	</fixture>
	<fixture id="bglz-1-1-Patient-01-errors-min">
		<autocreate value="false"/>
		<autodelete value="false"/>
		<resource>
			<reference value="./bglz-1-1-Patient-01-errors-min.xml"/>
		</resource>
	</fixture>
	<test id="01-KT-378-Patient-Address-Compare">
		<name value="01-KT-378-Patient-Address-Compare"/>
		<description value="Test that a Patient resource address contains exact match to known values using a minimumId assert."/>
		<action>
			<operation>
				<type>
					<system value="http://touchstone.com/fhir/testscript-operation-codes-extended"/>
					<code value="process-message"/>
				</type>
				<description value="Send Patient resource to be validated using XML format; validate response is not evaluated"/>
				<accept value="xml"/>
				<contentType value="xml"/>
				<encodeRequestUrl value="true"/>
				<params value="/$validate"/>
				<sourceId value="bglz-1-1-Patient-01"/>
			</operation>
		</action>
		<action>
			<assert>
				<description value="Compare Patient resource against minimumId fixture with exact matched values"/>
				<direction value="request"/>
				<minimumId value="bglz-1-1-Patient-01-min"/>
				<warningOnly value="true"/>
			</assert>
		</action>
		<action>
			<assert>
				<description value="Compare Patient resource against minimumId fixture with some error values"/>
				<direction value="request"/>
				<minimumId value="bglz-1-1-Patient-01-errors-min"/>
				<warningOnly value="true"/>
			</assert>
		</action>
	</test>
</TestScript>