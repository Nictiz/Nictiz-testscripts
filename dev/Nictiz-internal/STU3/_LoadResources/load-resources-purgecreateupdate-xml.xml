   <fixture id="Condition-Nictiz-internal-References-zib-Problem">
      <autocreate value="false"/>
      <autodelete value="false"/>
      <resource>
         <reference value="../_reference/resources/Nictiz-internal-References-zib-Problem.xml"/>
      </resource>
   </fixture>
   <fixture id="Patient-Nictiz-internal-patient">
      <autocreate value="false"/>
      <autodelete value="false"/>
      <resource>
         <reference value="../_reference/resources/Nictiz-internal-patient.xml"/>
      </resource>
   </fixture>
   <variable>
      <name value="Condition-Nictiz-internal-References-zib-Problem-id"/>
      <expression value="Condition.id"/>
      <sourceId value="Condition-Nictiz-internal-References-zib-Problem"/>
   </variable>
   <variable>
      <name value="Patient-Nictiz-internal-patient-id"/>
      <expression value="Patient.id"/>
      <sourceId value="Patient-Nictiz-internal-patient"/>
   </variable>
   <variable>
      <name value="T"/>
      <defaultValue value="${CURRENTDATE}"/>
      <description value="Date that data and queries are expected to be relative to."/>
   </variable>
   <setup>
      <action>
         <operation>
            <type>
               <system value="http://touchstone.com/fhir/extended-operation-codes"/>
               <code value="purge"/>
            </type>
            <resource value="Patient"/>
            <accept value="xml"/>
            <contentType value="xml"/>
            <encodeRequestUrl value="true"/>
            <params value="Nictiz-internal-patient/$purge"/>
            <requestHeader>
               <field value="Authorization"/>
               <value value="Bearer 848561e6-1ef9-11ee-be56-0242ac120002"/>
            </requestHeader>
         </operation>
      </action>
      <action>
         <assert>
            <description value="Confirm that the returned HTTP status is 200(OK) or 204(No Content)"/>
            <operator value="in"/>
            <responseCode value="200,204"/>
            <warningOnly value="false"/>
         </assert>
      </action>
   </setup>
   <test id="Step1-LoadTestResourceCreate">
      <name value="Step1-LoadTestResourceCreate"/>
      <description value="Load test resources using the update (PUT) operation of the target FHIR server for use in testing. All resource ids are pre-defined. The target XIS FHIR server is expected to support resource create via the update (PUT) operation for client assigned ids. "/>
      <action>
         <operation>
            <type>
               <system value="http://terminology.hl7.org/CodeSystem/testscript-operation-codes"/>
               <code value="updateCreate"/>
            </type>
            <resource value="Patient"/>
            <accept value="xml"/>
            <contentType value="xml"/>
            <encodeRequestUrl value="true"/>
            <params value="/${Patient-Nictiz-internal-patient-id}"/>
            <requestHeader>
               <field value="Authorization"/>
               <value value="Bearer 848561e6-1ef9-11ee-be56-0242ac120002"/>
            </requestHeader>
            <sourceId value="Patient-Nictiz-internal-patient"/>
         </operation>
      </action>
      <action>
         <assert>
            <description value="Confirm that the returned HTTP status is 200(OK) or 201(Created)."/>
            <operator value="in"/>
            <responseCode value="200,201"/>
            <warningOnly value="false"/>
         </assert>
      </action>
      <action>
         <operation>
            <type>
               <system value="http://terminology.hl7.org/CodeSystem/testscript-operation-codes"/>
               <code value="updateCreate"/>
            </type>
            <resource value="Condition"/>
            <accept value="xml"/>
            <contentType value="xml"/>
            <encodeRequestUrl value="true"/>
            <params value="/${Condition-Nictiz-internal-References-zib-Problem-id}"/>
            <requestHeader>
               <field value="Authorization"/>
               <value value="Bearer 848561e6-1ef9-11ee-be56-0242ac120002"/>
            </requestHeader>
            <sourceId value="Condition-Nictiz-internal-References-zib-Problem"/>
         </operation>
      </action>
      <action>
         <assert>
            <description value="Confirm that the returned HTTP status is 200(OK) or 201(Created)."/>
            <operator value="in"/>
            <responseCode value="200,201"/>
            <warningOnly value="false"/>
         </assert>
      </action>
   </test>
</TestScript>
