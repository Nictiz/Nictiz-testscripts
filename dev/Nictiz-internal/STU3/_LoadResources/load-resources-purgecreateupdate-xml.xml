   <status value="active"/>
   <publisher value="Nictiz"/>
   <contact>
      <name value="MedMij"/>
      <telecom>
         <system value="email"/>
         <value value="kwalificatie@nictiz.nl"/>
         <use value="work"/>
      </telecom>
   </contact>
