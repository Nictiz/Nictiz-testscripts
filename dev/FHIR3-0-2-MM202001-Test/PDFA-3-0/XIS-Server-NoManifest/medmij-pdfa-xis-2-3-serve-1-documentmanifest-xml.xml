<?xml version="1.0" encoding="UTF-8"?>
<TestScript xmlns="http://hl7.org/fhir" xmlns:nts="http://nictiz.nl/xsl/testscript">
   <id value="xis-2-3-serve-1-documentmanifest-xml"/>
   <meta>
      <profile value="http://touchstone.aegis.net/touchstone/fhir/testing/StructureDefinition/testscript"/>
   </meta>
   <url value="http://nictiz.nl/fhir/TestScript/xis-2-3-serve-1-documentmanifest-xml"/>
   <version value="stu3-2.0- patchlevel 2022-05"/>
   <name value="PDFA - XIS Server - Scenario 2.3 - Serve one DocumentManifest resource - XML Format"/>
   <status value="active"/>
   <publisher value="Nictiz"/>
   <contact>
      <name value="Nictiz"/>
      <telecom>
         <system value="email"/>
         <value value="kwalificatie@nictiz.nl"/>
         <use value="work"/>
      </telecom>
   </contact>
   <description value="Scenario 2.3 - Serve one DocumentManifest resource of XXX-Schulte."/>
   <origin>
      <index value="1"/>
      <profile>
         <system value="http://hl7.org/fhir/testscript-profile-origin-types"/>
         <code value="FHIR-Client"/>
      </profile>
   </origin>
   <destination>
      <index value="1"/>
      <profile>
         <system value="http://hl7.org/fhir/testscript-profile-destination-types"/>
         <code value="FHIR-Server"/>
      </profile>
   </destination>
   <profile id="OperationOutcome-profile">
      <reference value="http://hl7.org/fhir/StructureDefinition/OperationOutcome"/>
   </profile>
   <variable>
      <name value="patient-token-id"/>
      <defaultValue value="Bearer aae7b5aa-d796-4fba-b4d3-852d9043ee66"/>
      <description value="OAuth Token for current patient"/>
   </variable>
   <variable>
      <name value="T"/>
      <defaultValue value="${CURRENTDATE}"/>
      <description value="Date that data and queries are expected to be relative to."/>
   </variable>
   <test id="scenario2-3-serve-1-DocumentManifest">
      <name value="Scenario 2.3"/>
      <description value="Handle unsupported request for DocumentManifest resources"/>
      <action>
         <operation>
            <type>
               <system value="http://hl7.org/fhir/testscript-operation-codes"/>
               <code value="search"/>
            </type>
            <resource value="DocumentManifest"/>
            <description value="Test XIS server to serve DocumentManifest resources."/>
            <accept value="xml"/>
            <destination value="1"/>
            <origin value="1"/>
            <params value="?status=current&amp;created=ge${DATE, T, D,-365}&amp;created=le${DATE, T, D,-60}"/>
            <requestHeader>
               <field value="Authorization"/>
               <value value="${patient-token-id}"/>
            </requestHeader>
            <requestHeader>
               <field value="MedMij-Request-ID"/>
               <value value="${UUID}"/>
            </requestHeader>
         </operation>
      </action>
      <action>
         <assert>
            <extension url="http://touchstone.aegis.net/touchstone/fhir/testing/StructureDefinition/testscript-assert-stopTestOnFail">
               <valueBoolean value="true"/>
            </extension>
            <description value="Confirm that the server responds with a 404 not found"/>
            <operator value="equals"/>
            <responseCode value="404"/>
         </assert>
      </action>
      <action>
         <assert>
            <extension url="http://touchstone.aegis.net/touchstone/fhir/testing/StructureDefinition/testscript-assert-stopTestOnFail">
               <valueBoolean value="true"/>
            </extension>
            <description value="Confirm that the server returns a single OperationOutcome resource"/>
            <direction value="response"/>
            <resource value="OperationOutcome"/>
         </assert>
      </action>
      <action>
         <assert>
            <extension url="http://touchstone.aegis.net/touchstone/fhir/testing/StructureDefinition/testscript-assert-stopTestOnFail">
               <valueBoolean value="false"/>
            </extension>
            <description value="Validate the OperationOutcome resource against the base definition"/>
            <direction value="response"/>
            <validateProfileId value="OperationOutcome-profile"/>
         </assert>
      </action>
      <action>
         <assert>
            <extension url="http://touchstone.aegis.net/touchstone/fhir/testing/StructureDefinition/testscript-assert-stopTestOnFail">
               <valueBoolean value="false"/>
            </extension>
            <description value="Confirm that the OperationOutcome has .code set to not-supported"/>
            <direction value="response"/>
            <expression value="OperationOutcome.issue.code = 'not-supported'"/>
         </assert>
      </action>
      <action>
         <assert>
            <extension url="http://touchstone.aegis.net/touchstone/fhir/testing/StructureDefinition/testscript-assert-stopTestOnFail">
               <valueBoolean value="false"/>
            </extension>
            <description value="Confirm that the OperationOutcome has .severity set to fatal or error"/>
            <direction value="response"/>
            <expression value="OperationOutcome.issue.severity = 'fatal' or OperationOutcome.issue.severity = 'error'"/>
         </assert>
      </action>
      <action>
         <assert>
            <extension url="http://touchstone.aegis.net/touchstone/fhir/testing/StructureDefinition/testscript-assert-stopTestOnFail">
               <valueBoolean value="false"/>
            </extension>
            <description value="Although not required, a human-readable description of the problem is strongly encouraged"/>
            <direction value="response"/>
            <expression value="OperationOutcome.issue.diagnostics.exists() or OperationOutcome.issue.details.text.exists()"/>
            <warningOnly value="true"/>
         </assert>
      </action>
   </test>
</TestScript>
