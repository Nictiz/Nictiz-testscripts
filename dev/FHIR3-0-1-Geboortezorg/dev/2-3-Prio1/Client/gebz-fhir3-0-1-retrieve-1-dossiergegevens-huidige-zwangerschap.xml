    <name value="01-RetrieveWoman"/>
    <description value="Test Client query operation for Woman (Patient) - XML Format."/>
    <action>
      <operation>
        <type>
          <system value="http://hl7.org/fhir/testscript-operation-codes"/>
          <code value="search"/>
