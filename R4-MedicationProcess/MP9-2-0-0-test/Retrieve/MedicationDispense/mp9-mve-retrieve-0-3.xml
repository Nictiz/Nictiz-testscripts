<?xml version="1.0" encoding="UTF-8"?>
<TestScript xmlns="http://hl7.org/fhir" xmlns:nts="http://nictiz.nl/xsl/testscript">
   <id value="mp9-mve-retrieve-0-3"/>
   <meta>
      <profile value="http://touchstone.aegis.net/touchstone/fhir/testing/StructureDefinition/testscript"/>
   </meta>
   <url value="http://nictiz.nl/fhir/TestScript/mp9-mve-retrieve-0-3"/>
   <version value="r4-mp9-2.0.0- patchlevel 2021-11"/>
   <name value="Medication Process 9 2.0.0  - MedicationDispense (NL: MedicatieVErstrekking) - Retrieve - Scenario 0.3"/>
   <status value="active"/>
   <publisher value="Nictiz"/>
   <contact>
      <name value="Nictiz"/>
      <telecom>
         <system value="email"/>
         <value value="kwalificatie@nictiz.nl"/>
         <use value="work"/>
      </telecom>
   </contact>
   <description value="Scenario 0.3 - Verstrekkingen met een filter op product code (PRK 3956) (Antwoord: bericht met 1 verstrekking)"/>
   <origin>
      <index value="1"/>
      <profile>
         <system value="http://hl7.org/fhir/testscript-profile-origin-types"/>
         <code value="FHIR-Client"/>
      </profile>
   </origin>
   <destination>
      <index value="1"/>
      <profile>
         <system value="http://hl7.org/fhir/testscript-profile-destination-types"/>
         <code value="FHIR-Server"/>
      </profile>
   </destination>
   <fixture id="patient-token-fixture">
      <autocreate value="false"/>
      <autodelete value="false"/>
      <resource>
         <reference value="../../_reference/nl-core-Patient-mp9-B-XXX-Blik-token.xml"/>
      </resource>
   </fixture>
   <variable>
      <name value="patient-token-id"/>
      <expression value="Patient.id"/>
      <sourceId value="patient-token-fixture"/>
   </variable>
   <test id="Scenario-0-3">
      <name value="Scenario 0.3"/>
      <description value="Verstrekkingen met een filter op product code (PRK 3956) (Antwoord: bericht met 1 verstrekking)"/>
      <action>
         <operation>
            <type>
               <system value="http://hl7.org/fhir/testscript-operation-codes"/>
               <code value="search"/>
            </type>
            <resource value="MedicationDispense"/>
            <description value="Query MedicationDispense resource(s) for MedicationDispense"/>
            <destination value="1"/>
            <encodeRequestUrl value="true"/>
            <method value="get"/>
            <origin value="1"/>
            <params value="?patient.identifier=http://fhir.nl/fhir/NamingSystem/bsn|999900389&amp;category=http://snomed.info/sct|373784005&amp;medication.code=urn:oid:2.16.840.1.113883.2.4.4.10|3956&amp;_include=MedicationDispense:medication"/>
            <requestHeader>
               <field value="Authorization"/>
               <value value="${patient-token-id}"/>
            </requestHeader>
            <responseId value="searchset-response"/>
         </operation>
      </action>
      <action>
         <assert>
            <extension url="http://touchstone.aegis.net/touchstone/fhir/testing/StructureDefinition/testscript-assert-stopTestOnFail">
               <valueBoolean value="true"/>
            </extension>
            <description value="Confirm that the operation was succesful"/>
            <operator value="in"/>
            <responseCode value="200,201"/>
            <warningOnly value="false"/>
         </assert>
      </action>
      <action>
         <assert>
            <extension url="http://touchstone.aegis.net/touchstone/fhir/testing/StructureDefinition/testscript-assert-stopTestOnFail">
               <valueBoolean value="false"/>
            </extension>
            <description value="Confirm that the returned searchset Bundle contains 1 MedicationDispense resource(s). "/>
            <direction value="response"/>
            <expression value="Bundle.entry.where(resource.is(MedicationDispense)).count() = 1"/>
            <warningOnly value="false"/>
         </assert>
      </action>
      <action>
         <assert>
            <extension url="http://touchstone.aegis.net/touchstone/fhir/testing/StructureDefinition/testscript-assert-stopTestOnFail">
               <valueBoolean value="false"/>
            </extension>
            <description value="Confirm that the returned searchset Bundle contains at least 2 entries. (Consists of 1 MedicationDispense and 1 Medication resources.)"/>
            <direction value="response"/>
            <expression value="Bundle.entry.count() &gt;= 2"/>
            <warningOnly value="false"/>
         </assert>
      </action>
   </test>
</TestScript>
